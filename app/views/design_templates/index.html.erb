  <script>
    const modal = document.getElementById('preview-modal');
    const backdrop = document.getElementById('modal-backdrop');
    const iframePC = document.getElementById('iframe-preview-pc');
    const iframeMobile = document.getElementById('iframe-preview-mobile');
    const pickBtn = document.getElementById('modal-pick-btn');
    const pickBtnMobile = document.getElementById('modal-pick-btn-mobile');
    
    // UI Elements
    const framePC = document.getElementById('frame-container-pc');
    const frameMobile = document.getElementById('frame-container-mobile');
    const btnDevicePC = document.getElementById('btn-device-pc');
    const btnDeviceMobile = document.getElementById('btn-device-mobile');

    function openPreview(url, title, category, id) {
      // 1. Set Content
      document.getElementById('modal-title').innerText = title;
      document.getElementById('modal-category').innerText = category;
      
      const pickUrl = `/contact?template_id=${id}&template_title=${encodeURIComponent(title)}&preview_url=${encodeURIComponent(url)}`;
      pickBtn.href = pickUrl;
      pickBtnMobile.href = pickUrl;

      iframePC.src = url;
      iframeMobile.src = url;

      // 2. Show Modal
      modal.style.display = 'block';
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';

      // 3. Animation
      setTimeout(() => {
        backdrop.classList.remove('opacity-0');
      }, 10);

      // 4. Default to PC view
      setDevice('pc');
    }

    function closePreview() {
      // Animation Out
      backdrop.classList.add('opacity-0');
      
      setTimeout(() => {
        modal.style.display = 'none';
        modal.classList.add('hidden');
        document.body.style.overflow = '';
        iframePC.src = 'about:blank';
        iframeMobile.src = 'about:blank';
      }, 300);
    }

    function setDevice(type) {
      if (type === 'mobile') {
        framePC.classList.add('hidden');
        frameMobile.classList.remove('hidden');
        
        btnDevicePC.classList.remove('bg-[#555]', 'text-white');
        btnDevicePC.classList.add('text-[#888]');
        
        btnDeviceMobile.classList.add('bg-[#555]', 'text-white');
        btnDeviceMobile.classList.remove('text-[#888]');
      } else {
        frameMobile.classList.add('hidden');
        framePC.classList.remove('hidden');

        btnDeviceMobile.classList.remove('bg-[#555]', 'text-white');
        btnDeviceMobile.classList.add('text-[#888]');
        
        btnDevicePC.classList.add('bg-[#555]', 'text-white');
        btnDevicePC.classList.remove('text-[#888]');
      }
    }

    // Global ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.style.display === 'block') closePreview();
    });
  </script>

