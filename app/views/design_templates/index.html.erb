<!-- Template Live Demo Modal -->
<div id="template-modal" class="hidden fixed inset-0 z-[9999] opacity-0 transition-opacity duration-300 ease-in-out">
  <!-- Backdrop -->
  <div onclick="closeTemplateModal()" class="absolute inset-0 bg-black/90 backdrop-blur-sm cursor-pointer"></div>
  
  <!-- Modal Content -->
  <div class="modal-content absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 scale-95 w-[95%] max-w-[1600px] h-[90vh] bg-white rounded-2xl shadow-2xl flex flex-col overflow-hidden transition-transform duration-300">
    
    <!-- Modal Header -->
    <div class="px-6 py-4 flex justify-between items-center bg-white border-b border-gray-100 z-10 shrink-0">
      <div class="flex items-center gap-4">
        <span id="modal-category" class="text-xs font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded uppercase tracking-wider">CATEGORY</span>
        <h2 id="modal-title" class="text-xl font-bold text-gray-900">Template Title</h2>
      </div>
      
      <div class="flex items-center gap-4">
        <!-- View Switcher -->
        <div class="bg-gray-100 p-1 rounded-full flex">
          <button onclick="switchView('pc')" id="btn-view-pc" class="view-btn flex items-center px-4 py-1.5 rounded-full text-sm font-semibold text-gray-500 transition-all data-[active=true]:bg-white data-[active=true]:text-emerald-600 data-[active=true]:shadow-sm">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line x1="8" y1="21" x2="16" y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg>
            <span class="ml-2">PC</span>
          </button>
          <button onclick="switchView('mobile')" id="btn-view-mobile" class="view-btn flex items-center px-4 py-1.5 rounded-full text-sm font-semibold text-gray-500 transition-all data-[active=true]:bg-white data-[active=true]:text-emerald-600 data-[active=true]:shadow-sm">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12" y2="18"></line></svg>
            <span class="ml-2">Mobile</span>
          </button>
        </div>

        <button onclick="closeTemplateModal()" class="p-2 text-gray-400 hover:text-gray-900 transition-colors">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
        </button>
      </div>
    </div>

    <!-- Modal Body (Iframe Area) -->
    <div class="flex-1 bg-gray-100 relative flex justify-center items-center p-8 overflow-hidden">
      
      <!-- PC View Frame -->
      <div id="view-pc" class="w-full h-full bg-white rounded-lg shadow-lg overflow-hidden flex flex-col transition-all duration-300">
        <div class="h-8 bg-gray-100 flex items-center gap-2 px-3 border-b border-gray-200 shrink-0">
           <div class="w-2.5 h-2.5 rounded-full bg-red-400"></div>
           <div class="w-2.5 h-2.5 rounded-full bg-amber-400"></div>
           <div class="w-2.5 h-2.5 rounded-full bg-emerald-400"></div>
        </div>
        <iframe id="modal-iframe-pc" src="" class="flex-1 w-full h-full border-none bg-white"></iframe>
      </div>

      <!-- Mobile View Frame -->
      <div id="view-mobile" class="hidden w-[375px] h-full max-h-[812px] bg-black rounded-[40px] shadow-2xl border-[12px] border-gray-900 overflow-hidden relative">
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-32 h-6 bg-gray-900 rounded-b-2xl z-10"></div>
        <iframe id="modal-iframe-mobile" src="" class="w-full h-full border-none bg-white"></iframe>
      </div>

    </div>

    <!-- Modal Footer -->
