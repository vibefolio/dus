<% content_for :title, "주문 상세 - 디어스" %>

<div class="min-h-screen bg-gray-50 py-12">
  <div class="container mx-auto px-4 max-w-4xl">
    
    <% if flash[:notice] %>
      <div class="mb-8 bg-emerald-50 border border-emerald-200 text-emerald-700 px-6 py-4 rounded-xl flex items-center justify-between">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-medium"><%= flash[:notice] %></span>
        </div>
      </div>
    <% end %>

    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">주문 상세</h1>
        <p class="text-gray-600">주문하신 상품의 상세 정보입니다.</p>
      </div>
      <%= link_to mypage_orders_path, class: "flex items-center gap-2 text-gray-600 hover:text-emerald-600 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <span>목록으로 돌아가기</span>
      <% end %>
    </div>

    <!-- 주문 정보 카드 -->
    <div class="bg-white rounded-2xl shadow-sm overflow-hidden mb-8">
      <div class="bg-gray-50 px-8 py-6 border-b border-gray-200">
        <div class="flex flex-wrap md:flex-nowrap items-center justify-between gap-4">
          <div class="flex items-center gap-6">
            <div>
              <div class="text-sm text-gray-500 mb-1">주문번호</div>
              <div class="text-lg font-bold text-gray-900">#<%= @order.id %></div>
            </div>
            <div class="h-10 w-px bg-gray-300"></div>
            <div>
              <div class="text-sm text-gray-500 mb-1">주문일자</div>
              <div class="text-lg font-medium text-gray-900"><%= @order.created_at.strftime('%Y년 %m월 %d일') %></div>
            </div>
          </div>
          <span class="px-4 py-2 bg-emerald-100 text-emerald-700 font-bold rounded-lg">
            <%= @order.status %>
          </span>
        </div>
      </div>

      <div class="p-8">
        <% if @order.order_items.any? %>
          <div class="space-y-6">
            <% @order.order_items.each do |item| %>
              <div class="flex gap-6 items-start">
                <% if item.design_template&.thumbnail_url.present? %>
                  <%= image_tag item.design_template.thumbnail_url, class: "w-24 h-24 rounded-lg object-cover bg-gray-100" %>
                <% else %>
                  <div class="w-24 h-24 rounded-lg bg-gray-100 flex items-center justify-center text-gray-400">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
                
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-900 mb-1"><%= item.design_template&.name || '알 수 없는 상품' %></h3>
                  <div class="text-gray-500 text-sm mb-2">카테고리: <%= item.design_template&.category || '-' %></div>
                  <div class="flex items-center text-sm text-gray-600">
                    <span>수량: <%= item.quantity %>개</span>
                  </div>
                </div>
                
                <div class="text-right">
                  <div class="text-lg font-bold text-gray-900">
                    <%= number_to_currency(item.price * item.quantity, unit: '₩', precision: 0) %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-10 text-gray-500">
            구매한 상품 정보가 없습니다.
          </div>
        <% end %>

        <div class="mt-8 pt-8 border-t border-gray-100">
          <div class="flex justify-between items-center mb-4">
            <span class="text-gray-600">상품 금액</span>
            <span class="font-medium"><%= number_to_currency(@order.total_amount, unit: '₩', precision: 0) %></span>
          </div>
          <div class="flex justify-between items-center text-xl font-bold text-gray-900 pt-4 border-t border-gray-200 mt-4">
            <span>총 결제금액</span>
            <span class="text-emerald-600"><%= number_to_currency(@order.total_amount, unit: '₩', precision: 0) %></span>
          </div>
        </div>
      </div>
    </div>

    <% if @order.pending? %>
      <div class="text-right">
        <%= button_to "주문 취소", @order, method: :delete, class: "px-6 py-3 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 font-medium transition", data: { turbo_confirm: "정말 주문을 취소하시겠습니까?" } %>
      </div>
    <% end %>
  </div>
</div>
