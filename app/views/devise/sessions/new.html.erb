<% content_for :title, "로그인 - 디어스" %>

<div style="min-height: calc(100vh - 80px); display: flex; align-items: center; justify-content: center; background: #f9fafb; padding: 20px;">
  <div style="width: 100%; max-width: 420px; background: white; border-radius: 24px; padding: 40px; box-shadow: 0 10px 40px rgba(0,0,0,0.08);">
    
    <div style="text-align: center; margin-bottom: 30px;">
      <h2 style="font-size: 28px; font-weight: 800; color: #111; margin-bottom: 8px;">다시 오셨군요!</h2>
      <p style="color: #6b7280; font-size: 15px;">계정에 로그인하여 서비스를 이용하세요.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
      
      <!-- Flash Messages for Devise -->
      <% if flash[:alert] %>
        <div style="background-color: #fef2f2; color: #dc2626; padding: 12px; border-radius: 8px; font-size: 14px; margin-bottom: 20px; border: 1px solid #fee2e2;">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div style="margin-bottom: 20px;">
        <%= f.label :email, "이메일 주소", style: "display: block; font-size: 14px; font-weight: 600; color: #374151; margin-bottom: 8px;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com", style: "width: 100%; padding: 12px 16px; border: 1px solid #e5e7eb; border-radius: 12px; font-size: 15px; background: #f9fafb; transition: all 0.3s;", class: "form-input" %>
      </div>

      <div style="margin-bottom: 24px;">
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
          <%= f.label :password, "비밀번호", style: "font-size: 14px; font-weight: 600; color: #374151;" %>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "비밀번호 찾기", new_password_path(resource_name), style: "font-size: 13px; color: var(--color-primary); font-weight: 500; text-decoration: none;" %>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", style: "width: 100%; padding: 12px 16px; border: 1px solid #e5e7eb; border-radius: 12px; font-size: 15px; background: #f9fafb; transition: all 0.3s;", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="margin-bottom: 24px;">
          <label style="display: flex; align-items: center; cursor: pointer;">
            <%= f.check_box :remember_me, style: "width: 16px; height: 16px; margin-right: 8px; accent-color: var(--color-primary);" %>
            <span style="font-size: 14px; color: #4b5563;">로그인 상태 유지</span>
          </label>
        </div>
      <% end %>

      <div style="margin-bottom: 24px;">
        <%= f.submit "로그인하기", style: "width: 100%; padding: 14px; background: var(--color-primary); color: white; font-weight: 700; border: none; border-radius: 12px; cursor: pointer; font-size: 16px; transition: background 0.2s;", class: "btn-hover-effect" %>
      </div>

      <div style="display: flex; align-items: center; justify-content: center; gap: 10px; margin-bottom: 24px;">
        <div style="flex: 1; height: 1px; background: #e5e7eb;"></div>
        <span style="font-size: 13px; color: #9ca3af; padding: 0 10px;">또는</span>
        <div style="flex: 1; height: 1px; background: #e5e7eb;"></div>
      </div>

      <div style="margin-bottom: 10px;">
        <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, style: "width: 100%; padding: 12px; background: white; border: 1px solid #e5e7eb; border-radius: 12px; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 10px; transition: all 0.2s;", class: "social-btn" do %>
          <svg width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <span style="font-size: 15px; font-weight: 600; color: #374151;">Google 계정으로 계속하기</span>
        <% end %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 24px; padding-top: 24px; border-top: 1px solid #f3f4f6;">
      <p style="font-size: 14px; color: #6b7280;">
        계정이 없으신가요? 
        <%= link_to "회원가입", new_registration_path(resource_name), style: "color: var(--color-primary); font-weight: 600; text-decoration: none; margin-left: 4px;" %>
      </p>
    </div>
  </div>
</div>

<style>
  .form-input:focus {
    outline: none;
    border-color: var(--color-primary) !important;
    background: white !important;
    box-shadow: 0 0 0 4px rgba(0, 168, 89, 0.1);
  }
  .btn-hover-effect:hover {
    background: var(--color-primary-dark) !important;
  }
  .social-btn:hover {
    background: #f9fafb !important;
    border-color: #d1d5db !important;
  }
</style>
