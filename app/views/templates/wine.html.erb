<%# Wine Template - 빈티지 1988 %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 32px !important; }
  }
</style>

<div class="bg-[#120508] text-[#e5c17e] font-sans selection:bg-[#722f37] selection:text-white min-h-screen">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-5 bg-[#120508]/90 backdrop-blur-md border-b border-[#722f37]/20 flex justify-between items-center">
    <div class="container mx-auto flex justify-between items-center">
      <div class="font-serif text-xl tracking-[0.3em] font-bold text-[#e5c17e]">
        VINTAGE 1988
      </div>
      <div class="hidden md:flex gap-10 text-[10px] font-bold tracking-[0.3em] uppercase text-[#a08040]">
        <a href="#collection" class="hover:text-white transition">Collection</a>
        <a href="#tasting" class="hover:text-white transition">Tasting</a>
        <a href="#reserve" class="hover:text-white transition">Booking</a>
      </div>
      <div class="flex gap-6 items-center">
         <button onclick="toggleWineModal()" class="text-[10px] font-bold tracking-[0.3em] uppercase text-[#a08040] hover:text-white">Login</button>
         <button class="px-5 py-2 border border-[#722f37] text-[#e5c17e] hover:bg-[#722f37] hover:text-white transition font-serif tracking-[0.2em] text-[10px] uppercase">
           Reserve
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16">
    <div class="absolute inset-0 grayscale opacity-40">
       <img src="https://images.unsplash.com/photo-1510812431401-41d2bd2722f3?q=80&w=1920" alt="와이너리" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 bg-gradient-to-t from-[#120508] via-transparent to-[#120508] opacity-90"></div>
    
    <div class="container mx-auto px-6 relative z-10 text-center space-y-8">
       <div class="w-16 h-[1px] bg-[#e5c17e] mx-auto"></div>
       <h1 class="text-4xl md:text-7xl font-serif leading-tight text-white mobile-title">
         시간이 빚어낸<br>
         <span class="text-[#722f37] italic">깊고 고귀한 선율</span>
       </h1>
       <p class="text-sm md:text-lg text-gray-400 font-light leading-relaxed max-w-xl mx-auto mobile-desc">
         당신이 찾던 가장 완벽한 빈티지.<br>
         소믈리에의 철학이 담긴 특별한 와인 리스트를 만나보세요.
       </p>
       <div class="pt-8">
          <a href="#collection" class="inline-block px-10 py-4 border border-[#e5c17e] text-[#e5c17e] hover:bg-[#e5c17e] hover:text-black transition font-serif tracking-[0.3em] text-[11px] uppercase">
             Explore Cellar
          </a>
       </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="wine-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/90 backdrop-blur-sm">
    <div class="bg-[#1a0b0f] w-full max-w-sm p-12 border border-[#722f37]/30 shadow-2xl relative">
      <button onclick="toggleWineModal()" class="absolute top-6 right-8 text-[#a08040] hover:text-white transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10 border-b border-[#722f37]/20 pb-8">
        <h2 class="text-xl font-serif tracking-[0.4em] text-[#e5c17e] mb-2 uppercase">Member Access</h2>
        <p class="text-[9px] text-[#a08040] tracking-widest uppercase font-bold">Cellar Management System</p>
      </div>
      
      <div class="space-y-6">
        <input type="email" placeholder="Email Address" class="w-full bg-transparent border-b border-[#722f37]/40 py-3 outline-none focus:border-[#e5c17e] transition text-sm font-light text-white placeholder-gray-600">
        <button class="w-full bg-[#722f37] text-white py-4 text-[10px] tracking-[0.3em] font-bold uppercase hover:opacity-90 transition">
           Enter Cellar
        </button>
        <div class="flex justify-center gap-6 pt-4">
           <a href="#" class="text-[9px] text-[#a08040] tracking-widest uppercase hover:text-white transition">Join Club</a>
           <a href="#" class="text-[9px] text-[#a08040] tracking-widest uppercase hover:text-white transition">Support</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-20 bg-black text-center px-6">
     <p class="font-serif text-2xl text-[#e5c17e] tracking-[0.4em] mb-4">VINTAGE 1988</p>
     <div class="w-12 h-[1px] bg-[#722f37] mx-auto mb-8"></div>
     <p class="text-[10px] text-gray-600 tracking-[0.2em] font-bold uppercase">Heritage & Taste | © 2024 VINTAGE 1988</p>
  </footer>

  <script>
    function toggleWineModal() {
      const modal = document.getElementById('wine-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
