<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Italiana&family=Noto+Sans+KR:wght@300;400;500;700&display=swap');
  
  .font-serif { font-family: 'Italiana', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .marquee-container {
    overflow: hidden;
    white-space: nowrap;
  }
  .marquee-content {
    display: inline-block;
    animation: marquee 20s linear infinite;
  }
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>

<div class="bg-white text-black font-sans selection:bg-black selection:text-white">

  <!-- Promo Bar -->
  <div class="bg-black text-white text-[10px] py-2 text-center tracking-widest uppercase">
