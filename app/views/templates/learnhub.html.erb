<%# Learnhub Template - 스킬업 (SKILLUP) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700;900&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-inter { font-family: 'Inter', sans-serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 32px !important; }
  }
</style>

<div class="bg-[#0A0A0B] text-white font-sans selection:bg-[#2DD4BF] selection:text-black min-h-screen overflow-x-hidden">

  <!-- Glow Background -->
  <div class="fixed inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-[-10%] right-[-10%] w-[60%] h-[60%] bg-[#2DD4BF]/5 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-[-10%] left-[-10%] w-[60%] h-[60%] bg-[#6366F1]/5 rounded-full blur-[120px]"></div>
  </div>

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 bg-[#0A0A0B]/80 backdrop-blur-xl border-b border-white/5">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-2">
         <div class="w-8 h-8 bg-gradient-to-tr from-[#2DD4BF] to-[#6366F1] rounded-lg"></div>
         <span class="font-black text-xl tracking-tighter uppercase font-inter">SKILL<span class="text-transparent bg-clip-text bg-gradient-to-r from-[#2DD4BF] to-[#6366F1]">UP</span></span>
      </div>
      
      <div class="hidden md:flex gap-10 text-[11px] font-bold uppercase tracking-[0.2em] text-white/40">
        <a href="#courses" class="hover:text-[#2DD4BF] transition">Catalog</a>
        <a href="#mentors" class="hover:text-[#2DD4BF] transition">Expertise</a>
        <a href="#enterprise" class="hover:text-[#2DD4BF] transition">Enterprise</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button class="mobile-menu-trigger md:hidden text-2xl mr-4 focus:outline-none" style="color: #2DD4BF;">
           <i class="fas fa-bars"></i>
         </button>

         <button onclick="toggleSkillUpModal()" class="text-[11px] font-bold uppercase tracking-[0.2em] text-white/40 hover:text-white transition">Sign In</button>
         <button class="bg-white text-black px-6 py-2.5 rounded-full font-bold text-[11px] tracking-widest uppercase hover:bg-[#2DD4BF] transition shadow-xl shadow-white/5">
           Get Started
         </button>
      </div>
    </div>

      <%= render partial: 'templates/shared/mobile_menu', locals: {
          links: [{text: 'Catalog', href: '#courses'}, {text: 'Expertise', href: '#mentors'}, {text: 'Enterprise', href: '#enterprise'}],
          primary_color: '#2DD4BF',
          bg_color: '#ffffff'
      } %>
    </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-20">
    <div class="container mx-auto px-6 relative z-10 grid lg:grid-cols-2 gap-20 items-center">
      <div class="space-y-10 text-center lg:text-left">
        <div class="inline-flex items-center gap-2 bg-white/5 border border-white/10 px-4 py-1.5 rounded-full">
           <span class="flex h-2 w-2 relative">
             <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-[#2DD4BF] opacity-75"></span>
             <span class="relative inline-flex rounded-full h-2 w-2 bg-[#2DD4BF]"></span>
           </span>
           <span class="text-[10px] font-bold tracking-widest uppercase text-white/60">Limitless Tech Evolution 2024</span>
        </div>
        
        <h1 class="text-5xl md:text-8xl font-black leading-[1.1] tracking-tighter mobile-title">
           Next Generation<br>
           <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#2DD4BF] to-[#6366F1]">Skill Mastery.</span>
        </h1>
        
        <p class="text-white/40 text-sm md:text-xl leading-relaxed max-w-xl mx-auto lg:mx-0 mobile-desc">
           단순한 강의가 아닌, 실무의 본질을 전달합니다. 최고의 전문가들이 설계한 커리큘럼으로 당신의 커리어 패스를 재정의하세요.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center lg:justify-start">
           <button class="px-12 py-5 bg-white text-black font-black text-[11px] tracking-widest uppercase hover:bg-[#2DD4BF] transition-all">
              Browse Courses
           </button>
           <button class="px-12 py-5 border border-white/10 text-white font-black text-[11px] tracking-widest uppercase hover:bg-white/5 transition-all">
              Enterprise Inquiry
           </button>
        </div>

        <div class="pt-10 flex items-center justify-center lg:justify-start gap-10 grayscale opacity-40">
           <span class="text-xs font-black font-inter tracking-widest uppercase italic">Google Partners</span>
           <span class="text-xs font-black font-inter tracking-widest uppercase italic">AWS Certified</span>
           <span class="text-xs font-black font-inter tracking-widest uppercase italic">Meta Academy</span>
        </div>
      </div>
      
      <div class="relative hidden lg:block">
         <div class="absolute -inset-20 bg-[#6366F1]/10 rounded-full blur-[120px]"></div>
         <div class="relative bg-[#111112] border border-white/10 p-8 rounded-[2.5rem] shadow-2xl">
            <div class="aspect-video bg-black rounded-2xl overflow-hidden mb-8 border border-white/5 group relative cursor-pointer">
               <img src="https://images.unsplash.com/photo-1550751827-4bd374c3f58b?q=80&w=1200" alt="Learning" class="w-full h-full object-cover transition duration-700 group-hover:scale-110 opacity-60">
               <div class="absolute inset-0 flex items-center justify-center">
                  <div class="w-16 h-16 bg-white/10 backdrop-blur-xl rounded-full flex items-center justify-center border border-white/20 group-hover:scale-110 transition duration-500">
                     <div class="w-0 h-0 border-t-[8px] border-t-transparent border-l-[14px] border-l-white border-b-[8px] border-b-transparent ml-1"></div>
                  </div>
               </div>
            </div>
            <div class="space-y-4">
               <div class="flex justify-between items-center">
                  <p class="text-[10px] font-bold tracking-widest uppercase text-[#2DD4BF]">Current Lesson</p>
                  <p class="text-[10px] font-bold tracking-widest uppercase text-white/30 italic">85% Complete</p>
               </div>
               <p class="text-xl font-bold tracking-tight">AI Driven Frontend Architecture</p>
               <div class="h-1 bg-white/5 rounded-full overflow-hidden">
                  <div class="h-full w-[85%] bg-gradient-to-r from-[#2DD4BF] to-[#6366F1]"></div>
               </div>
            </div>
         </div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="skillup-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/95 backdrop-blur-2xl">
    <div class="bg-[#111112] w-full max-w-sm p-12 shadow-2xl relative rounded-[3rem] border border-white/5">
      <button onclick="toggleSkillUpModal()" class="absolute top-10 right-10 text-white/20 hover:text-[#2DD4BF] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-inter tracking-[0.4em] text-white mb-2 font-black uppercase">SKILLUP_LOGIN</h2>
        <p class="text-[9px] text-[#2DD4BF] font-bold tracking-[0.2em] uppercase">Access Universal Curriculum</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="ACCESS KEY / ID" class="w-full bg-white/5 border border-white/10 rounded-2xl py-5 px-6 outline-none focus:ring-1 focus:ring-[#2DD4BF] transition text-[11px] font-bold tracking-widest text-white uppercase placeholder:text-white/20">
        <button class="w-full bg-white text-black py-5 rounded-2xl text-[10px] tracking-[0.4em] font-black uppercase hover:bg-[#2DD4BF] transition shadow-xl">
           Establish Session
        </button>
        <div class="flex justify-center gap-10 pt-4">
           <a href="#" class="text-[9px] text-white/30 tracking-[0.2em] font-bold uppercase hover:text-[#2DD4BF] transition">Join Academy</a>
           <a href="#" class="text-[9px] text-white/30 tracking-[0.2em] font-bold uppercase hover:text-[#2DD4BF] transition">Reset Key</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-24 bg-[#0A0A0B] text-center px-6 border-t border-white/5">
     <div class="inline-flex items-center gap-6 mb-8">
        <span class="font-inter text-2xl tracking-[0.5em] font-black uppercase">SKILL<span class="text-white/20">UP</span></span>
        <span class="w-12 h-[1px] bg-white/10"></span>
        <span class="text-[10px] font-bold text-white/20 tracking-[0.4em] uppercase">Code · Design · Future</span>
     </div>
     <p class="text-[10px] text-white/10 tracking-[0.6em] uppercase">© 2024 SKILLUP ACADEMY. ALL SYSTEMS PROPERLY INITIALIZED.</p>
  </footer>

  <script>
    function toggleSkillUpModal() {
      const modal = document.getElementById('skillup-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
