<%# Barber Template - 바버 클래식 (BARBER CLASSIC) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.8; }
    .mobile-title { font-size: 40px !important; }
  }

  .texture {
    background-image: url("https://www.transparenttextures.com/patterns/dark-leather.png");
    opacity: 0.1;
  }
</style>

<div class="bg-[#121212] text-[#E5E5E5] font-sans selection:bg-[#B8860B] selection:text-white min-h-screen overflow-x-hidden relative">
  <div class="fixed inset-0 texture pointer-events-none"></div>

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-8 md:px-12 bg-[#121212]/80 backdrop-blur-xl border-b border-white/5">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-6">
         <span class="font-serif text-2xl tracking-[0.4em] font-black uppercase text-[#B8860B]">BARBER<span class="text-white">CLASSIC</span></span>
      </div>
      
      <div class="hidden md:flex gap-14 text-[10px] font-bold uppercase tracking-[0.4em] text-white/30">
        <a href="#about" class="hover:text-[#B8860B] transition">Heritage</a>
        <a href="#ritual" class="hover:text-[#B8860B] transition">Ritual</a>
        <a href="#booking" class="hover:text-[#B8860B] transition">Apointment</a>
      </div>
      
      <div class="flex gap-8 items-center">
         <button onclick="toggleBarberModal()" class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/30 hover:text-[#B8860B]">Club_ID</button>
         <button class="bg-[#B8860B] text-black px-10 py-3.5 rounded-none font-bold text-[10px] tracking-[0.4em] uppercase hover:bg-white transition shadow-2xl">
           Book Now
         </button>
      </div>
    </div>

      </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-20">
    <div class="absolute inset-0 z-0">
       <div class="absolute inset-0 bg-gradient-to-t from-[#121212] via-transparent to-[#121212]"></div>
       <img src="https://images.unsplash.com/photo-1621605815971-fbc98d665033?q=80&w=2400" alt="Barbershop" class="w-full h-full object-cover grayscale brightness-50 contrast-125">
    </div>
    
    <div class="container mx-auto px-6 relative z-10 grid lg:grid-cols-2 gap-6 md:p-16 items-center">
      <div class="space-y-12 text-center lg:text-left">
        <div class="inline-flex items-center gap-4">
           <div class="w-12 h-[1px] bg-[#B8860B]"></div>
           <span class="text-[10px] font-bold tracking-[0.8em] uppercase text-[#B8860B]">Established 1984</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl md:text-[7.5rem] font-serif font-black leading-none tracking-tighter mobile-title">
            Gentlemen's<br><span class="italic text-[#B8860B]">Sanctuary.</span>
        </h1>
        
        <p class="text-white/40 text-sm md:text-xl leading-[1.8] max-w-lg mx-auto lg:mx-0 mobile-desc">
           정통 바버링의 가치와 현대적 감각의 조화. 바버 클래식은 당신의 취향과 스타일을 한 단계 더 높여주는 가장 완벽한 그루밍 시퀀스를 제안합니다.
        </p>
        
        <div class="pt-6 flex flex-col sm:flex-row gap-8 justify-center lg:justify-start">
           <button class="px-14 py-6 bg-[#B8860B] text-black font-black text-[11px] tracking-[0.4em] uppercase hover:bg-white transition-all shadow-2xl">
              Discover Ritual
           </button>
           <button class="px-14 py-6 border border-white/10 text-white font-black text-[11px] tracking-[0.4em] uppercase hover:bg-white/5 transition-all">
              Private Lounge
           </button>
        </div>
      </div>

      <div class="relative hidden lg:block">
         <div class="relative group">
            <div class="absolute -top-10 -left-10 w-full h-full border border-[#B8860B]/20 pointer-events-none group-hover:top-0 group-hover:left-0 transition-all duration-700"></div>
            <img src="https://images.unsplash.com/photo-1503951914875-452162b0f3f1?q=80&w=1200" alt="Barbering" class="w-full aspect-square object-cover grayscale brightness-75 group-hover:grayscale-0 transition duration-1000">
            <div class="absolute -bottom-8 -right-8 bg-[#B8860B] p-10 shadow-2xl">
               <p class="text-[10px] font-black text-black uppercase tracking-[0.4em] mb-4">Craftsmanship</p>
               <h3 class="font-serif text-3xl font-black text-black italic">The Master's Cut</h3>
            </div>
         </div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="barber-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/95 backdrop-blur-2xl">
    <div class="bg-[#1A1A1B] w-full max-w-sm p-6 md:p-16 shadow-2xl relative border border-[#B8860B]/10">
      <div class="absolute top-0 left-0 w-full h-[1px] bg-[#B8860B]/20"></div>
      <button onclick="toggleBarberModal()" class="absolute top-12 right-12 text-white/20 hover:text-[#B8860B] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-14">
        <h2 class="text-xl font-serif tracking-[0.6em] text-white mb-3 font-black uppercase">CLUB_MEMBER</h2>
        <p class="text-[9px] text-[#B8860B] font-bold tracking-[0.3em] uppercase">Private Grooming Connection</p>
      </div>
      
      <div class="space-y-8">
        <div class="space-y-3">
           <p class="text-[9px] font-black text-white/20 uppercase tracking-[0.2em] ml-1">Authorized Access</p>
           <input type="text" placeholder="GENTLEMAN_ID" class="w-full bg-white/5 border border-white/5 py-6 px-8 outline-none focus:border-[#B8860B] transition text-[11px] font-bold tracking-[0.4em] text-white">
        </div>
        <button class="w-full bg-[#B8860B] text-black py-6 text-[10px] tracking-[0.5em] font-black uppercase hover:bg-white transition shadow-xl">
           Verify Identity
        </button>
        <div class="flex justify-center gap-14 pt-4">
           <a href="#" class="text-[9px] text-white/20 tracking-[0.3em] font-bold uppercase hover:text-[#B8860B] transition">Join Heirloom</a>
           <a href="#" class="text-[9px] text-white/20 tracking-[0.3em] font-bold uppercase hover:text-[#B8860B] transition">Support</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-16 md:py-32 bg-black text-center px-6 border-t border-white/5">
     <div class="inline-flex items-center gap-10 mb-12">
        <span class="font-serif text-3xl text-white tracking-[0.8em] font-black uppercase italic">BARBER<span class="text-white/10">CLASSIC</span></span>
        <div class="w-12 h-[1px] bg-white/10"></div>
        <span class="text-[10px] font-bold text-white/20 tracking-[0.6em] uppercase">Crafted by Tradition</span>
     </div>
     <p class="text-[10px] text-white/10 tracking-[1em] uppercase px-6">© 2024 BARBER CLASSIC HERITAGE. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleBarberModal() {
      const modal = document.getElementById('barber-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
