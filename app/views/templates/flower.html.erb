<%# Flower Template - 블룸 앤 가든 (Bloom & Garden) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500;700&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 32px !important; }
  }
</style>

<div class="bg-[#fdfcfb] text-[#5c5c5c] font-sans selection:bg-[#f8d7da] selection:text-[#5c5c5c] min-h-screen">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-5 bg-[#fdfcfb]/9 worst backdrop-blur-md border-b border-[#f8d7da]/20">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-3">
        <span class="text-2xl text-[#f1aeb5]">❀</span>
        <span class="font-serif text-xl text-[#3c3c3c] tracking-tight">BLOOM & GARDEN</span>
      </div>
      <div class="hidden md:flex gap-10 text-[11px] font-bold uppercase tracking-[0.2em] text-[#8c8c8c]">
        <a href="#class" class="hover:text-[#f1aeb5] transition">Workshop</a>
        <a href="#shop" class="hover:text-[#f1aeb5] transition">Collection</a>
        <a href="#contact" class="hover:text-[#f1aeb5] transition">Store</a>
      </div>
      <div class="flex gap-6 items-center">
         <button onclick="toggleFlowerModal()" class="text-[11px] font-bold uppercase tracking-[0.2em] text-[#8c8c8c] hover:text-[#f1aeb5]">Club</button>
         <button class="bg-[#3c3c3c] text-white px-6 py-2.5 rounded-sm text-[10px] font-bold uppercase tracking-widest hover:bg-[#f1aeb5] transition shadow-xl">
           Subscription
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20 px-6">
    <div class="container mx-auto grid md:grid-cols-2 gap-16 items-center relative z-10">
       <div class="space-y-8">
          <div class="inline-block px-4 py-1.5 border border-[#f1aeb5]/30 text-[#f1aeb5] text-[10px] uppercase tracking-[0.3em] font-bold rounded-full">Seasonal Flower Studio</div>
          <h1 class="text-4xl md:text-7xl font-serif leading-none tracking-tighter text-[#3c3c3c] mobile-title">
             자연의 계절을<br><span class="text-[#f1aeb5] italic">삶의 무드</span>로.
          </h1>
          <p class="text-[#8c8c8c] leading-relaxed font-light max-w-md text-sm md:text-lg mobile-desc">
             꽃이 건네는 다정한 위로와 생기를 전합니다.<br>
             블룸 앤 가든에서만 만날 수 있는 프렌치 감성의 섬세한 플로럴 큐레이션.
          </p>
          <div class="pt-4">
             <a href="#shop" class="inline-flex items-center gap-4 text-[#3c3c3c] text-[11px] font-bold uppercase tracking-[0.3em] group">
                Shop Collection <span class="group-hover:translate-x-2 transition">→</span>
             </a>
          </div>
       </div>

       <div class="relative">
          <div class="absolute -inset-10 bg-[#f1aeb5]/10 rounded-full blur-[100px]"></div>
          <div class="w-full aspect-[4/5] relative rounded-2xl overflow-hidden shadow-[0_50px_100px_-20px_rgba(241,174,181,0.2)]">
             <img src="https://images.unsplash.com/photo-1563241527-3004b7be0ee0?q=80&w=800" alt="플라워 작품" class="w-full h-full object-cover grayscale hover:grayscale-0 transition duration-1000">
          </div>
       </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="flower-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-[#f1aeb5]/5 backdrop-blur-md">
    <div class="bg-white w-full max-w-sm p-12 shadow-2xl relative rounded-sm border-t-4 border-[#f1aeb5]">
      <button onclick="toggleFlowerModal()" class="absolute top-8 right-10 text-[#8c8c8c] hover:text-[#f1aeb5] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-serif text-[#3c3c3c] mb-2 tracking-tighter uppercase">BLOOM_MEMBER</h2>
        <p class="text-[9px] text-[#f1aeb5] font-bold tracking-[0.2em] uppercase">Workshop & Points Access</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="Member ID" class="w-full bg-[#fdfcfb] border border-transparent border-b-[#f8d7da] py-4 px-2 outline-none focus:border-b-[#f1aeb5] transition text-[11px] font-bold tracking-widest text-[#3c3c3c]">
        <button class="w-full bg-[#3c3c3c] text-white py-4 text-[11px] tracking-widest font-bold uppercase hover:bg-[#f1aeb5] transition shadow-lg">
           Join the Bloom
        </button>
        <div class="flex justify-center gap-8 pt-4">
           <a href="#" class="text-[9px] text-[#8c8c8c] tracking-widest uppercase hover:text-[#f1aeb5] transition">Registration</a>
           <a href="#" class="text-[9px] text-[#8c8c8c] tracking-widest uppercase hover:text-[#f1aeb5] transition">Inquiry</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-20 bg-[#fdfcfb] text-center px-6">
     <div class="inline-flex items-center gap-4 mb-8">
        <span class="text-2xl text-[#f1aeb5]">❀</span>
        <span class="font-serif text-xl text-[#3c3c3c] tracking-tighter">BLOOM & GARDEN</span>
        <span class="w-8 h-[1px] bg-[#f8d7da]"></span>
     </div>
     <p class="text-[10px] text-[#8c8c8c] tracking-[0.5em] uppercase px-6">© 2024 BLOOM & GARDEN SEOUL. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleFlowerModal() {
      const modal = document.getElementById('flower-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
