<%# Stay Template - 서촌 (감성 숙소) %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .vertical-rl {
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }
</style>

<div class="bg-[#fdfbf7] text-[#3c3631] font-serif selection:bg-[#3c3631] selection:text-white">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-6 mix-blend-difference text-[#3c3631] transition-all duration-300">
    <div class="flex justify-between items-center">
       <a href="#" class="text-2xl font-bold tracking-widest">SEO CHON</a>
       
       <div class="hidden md:flex gap-12 text-xs tracking-[0.3em] font-sans uppercase">
          <a href="#about" class="hover:opacity-50 transition">Space</a>
          <a href="#rooms" class="hover:opacity-50 transition">Stay</a>
          <a href="#gallery" class="hover:opacity-50 transition">View</a>
       </div>
       
       <a href="#reservation" class="border border-current px-6 py-2 text-xs tracking-[0.2em] font-sans hover:bg-[#3c3631] hover:text-[#fdfbf7] transition uppercase">
          Book
       </a>
    </div>
  </nav>

  <!-- Hero -->
  <header class="h-screen relative flex items-center justify-center overflow-hidden">
     <div class="absolute inset-0">
        <img src="https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?q=80&w=1920" class="w-full h-full object-cover opacity-90 transition duration-[3s] hover:scale-105">
     </div>
     
     <div class="absolute inset-0 flex flex-col justify-center items-center z-10 text-center text-white mix-blend-difference">
        <div class="w-[1px] h-20 bg-white mb-8"></div>
        <h1 class="text-5xl md:text-7xl font-light leading-snug mb-6">
           서촌의 시간,<br>
           머무름의 미학
        </h1>
        <p class="font-sans font-light text-sm tracking-widest opacity-80 mb-12">
           SEO CHON • STAY
        </p>
     </div>
     
     <div class="absolute bottom-10 right-10 vertical-rl text-white mix-blend-difference text-xs tracking-[0.5em] opacity-60 h-32">
        SCROLL DOWN
     </div>
  </header>

  <!-- Introduction -->
  <section id="about" class="py-32 px-8 bg-[#fdfbf7]">
     <div class="container mx-auto grid md:grid-cols-2 gap-24 items-center">
        <div class="relative pl-12">
           <div class="absolute top-0 left-0 w-[1px] h-full bg-[#3c3631]/20"></div>
           <h2 class="text-3xl md:text-4xl leading-relaxed mb-8">
              오래된 골목 끝,<br>
              고요한 안식처
           </h2>
           <p class="font-sans font-light leading-loose text-gray-600 mb-8 text-sm">
              서촌은 1930년대 지어진 한옥을 현대적으로 재해석한 공간입니다.
              나무의 결이 살아있는 서까래와 창호지 너머로 들어오는 햇살,
              처마 끝에 떨어지는 빗소리를 즐겨보세요.
              복잡한 도시를 떠나 온전한 나를 마주하는 시간을 선물합니다.
           </p>
           <img src="https://images.unsplash.com/photo-1599619351208-3e6c839d6828?q=80&w=600" class="w-full h-64 object-cover grayscale opacity-80 mt-8" data-tilt>
        </div>
        
        <div class="grid gap-8">
           <img src="https://images.unsplash.com/photo-1507652313519-d4e9174996dd?q=80&w=600" class="w-full h-96 object-cover shadow-xl" data-tilt>
           <p class="text-right font-sans text-xs tracking-widest text-gray-400 mt-2">The Courtyard</p>
        </div>
     </div>
  </section>

  <!-- Rooms (Horizontal) -->
  <section id="rooms" class="py-32 overflow-hidden border-t border-[#3c3631]/10">
     <div class="container mx-auto px-8 mb-16 flex justify-between items-end">
        <h2 class="text-3xl">Our Spaces</h2>
        <span class="font-sans text-xs tracking-widest text-gray-400">Total 3 Rooms</span>
     </div>
     
     <div class="flex gap-8 px-8 overflow-x-auto pb-12 snap-x">
        <!-- Room 1 -->
        <div class="min-w-[350px] snap-center group cursor-pointer">
           <div class="overflow-hidden mb-6 relative aspect-[3/4]">
              <img src="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?q=80&w=600" class="w-full h-full object-cover transition duration-1000 group-hover:scale-105 filter brightness-95">
              <div class="absolute inset-0 bg-[#3c3631]/20 opacity-0 group-hover:opacity-100 transition duration-500"></div>
           </div>
           <h3 class="text-2xl mb-2">Room 01. Sarang</h3>
           <p class="font-sans text-xs text-gray-500 mb-4 tracking-wider">사랑채 • 2인 • 다도 세트</p>
           <span class="block w-full h-[1px] bg-[#3c3631]/20 group-hover:bg-[#3c3631] transition duration-500"></span>
        </div>

        <!-- Room 2 -->
        <div class="min-w-[350px] snap-center group cursor-pointer">
           <div class="overflow-hidden mb-6 relative aspect-[3/4]">
              <img src="https://images.unsplash.com/photo-1512918760513-95f1929c3d48?q=80&w=600" class="w-full h-full object-cover transition duration-1000 group-hover:scale-105 filter brightness-95">
              <div class="absolute inset-0 bg-[#3c3631]/20 opacity-0 group-hover:opacity-100 transition duration-500"></div>
           </div>
           <h3 class="text-2xl mb-2">Room 02. Anchae</h3>
           <p class="font-sans text-xs text-gray-500 mb-4 tracking-wider">안채 • 3-4인 • 자쿠지</p>
           <span class="block w-full h-[1px] bg-[#3c3631]/20 group-hover:bg-[#3c3631] transition duration-500"></span>
        </div>

        <!-- Room 3 -->
        <div class="min-w-[350px] snap-center group cursor-pointer">
           <div class="overflow-hidden mb-6 relative aspect-[3/4]">
              <img src="https://images.unsplash.com/photo-1598928506311-c55ded91a20c?q=80&w=600" class="w-full h-full object-cover transition duration-1000 group-hover:scale-105 filter brightness-95">
              <div class="absolute inset-0 bg-[#3c3631]/20 opacity-0 group-hover:opacity-100 transition duration-500"></div>
           </div>
           <h3 class="text-2xl mb-2">Room 03. Byeolchae</h3>
           <p class="font-sans text-xs text-gray-500 mb-4 tracking-wider">별채 • 독채 • 프라이빗 정원</p>
           <span class="block w-full h-[1px] bg-[#3c3631]/20 group-hover:bg-[#3c3631] transition duration-500"></span>
        </div>
     </div>
  </section>

  <!-- Reservation -->
  <section id="reservation" class="py-32 px-8 bg-[#3c3631] text-[#fdfbf7]">
     <div class="container mx-auto grid md:grid-cols-2 gap-16">
        <div>
           <h2 class="text-4xl leading-snug mb-8">
              머무름을<br>예약하세요
           </h2>
           <p class="font-sans font-light opacity-60 leading-loose text-sm mb-12">
              가장 편안한 휴식을 위해<br>
              하루에 한 팀, 혹은 소수의 인원만 모십니다.<br>
              예약 문의는 아래 달력을 확인해 주세요.
           </p>
           <div class="space-y-4 font-sans text-sm font-light">
              <p>Check-in: 15:00</p>
              <p>Check-out: 11:00</p>
           </div>
        </div>
        
        <div class="bg-[#fdfbf7] text-[#3c3631] p-8 md:p-12 shadow-2xl">
           <div class="flex justify-between items-center mb-8 border-b border-[#3c3631]/10 pb-4">
              <span class="font-bold">2024. 12</span>
              <div class="flex gap-4">
                 <button class="hover:opacity-50">&lt;</button>
                 <button class="hover:opacity-50">&gt;</button>
              </div>
           </div>
           
           <!-- Calendar Grid Mockup -->
           <div class="grid grid-cols-7 gap-2 text-center text-sm font-sans mb-8">
              <div class="text-red-500 opacity-50">S</div>
              <div class="opacity-50">M</div>
              <div class="opacity-50">T</div>
              <div class="opacity-50">W</div>
              <div class="opacity-50">T</div>
              <div class="opacity-50">F</div>
              <div class="text-blue-500 opacity-50">S</div>
              
              <!-- Days -->
              <div class="p-2 opacity-30">1</div> <div class="p-2 opacity-30">2</div> <div class="p-2 opacity-30">3</div> <div class="p-2 opacity-30">4</div> <div class="p-2 opacity-30">5</div> <div class="p-2 opacity-30">6</div> <div class="p-2 opacity-30">7</div>
              <div class="p-2">8</div> <div class="p-2">9</div> <div class="p-2">10</div> <div class="p-2 line-through opacity-30">11</div> <div class="p-2 line-through opacity-30">12</div> <div class="p-2">13</div> <div class="p-2">14</div>
              <div class="p-2">15</div> <div class="p-2">16</div> <div class="p-2">17</div> <div class="p-2">18</div> <div class="p-2">19</div> <div class="p-2 bg-[#3c3631] text-white rounded-full">20</div> <div class="p-2">21</div>
           </div>
           
           <button class="w-full bg-[#3c3631] text-[#fdfbf7] py-4 text-xs tracking-[0.2em] font-sans hover:opacity-90 transition uppercase">
              Select Date
           </button>
        </div>
     </div>
  </section>

</div>

<script>
  VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
    max: 5,
    speed: 400,
  });
</script>
