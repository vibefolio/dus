<%# Wedding Template - 모바일 청첩장 %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Gowun+Dodum&display=swap');

  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Gowun Dodum', sans-serif; }

  .fade-up {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s ease-out;
  }
  .fade-up.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<div class="bg-[#FDFBF7] text-[#4A4A4A] font-sans overflow-x-hidden">
  
  <!-- Main Cover -->
  <header class="min-h-screen relative flex flex-col items-center justify-center text-center px-6 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img src="https://images.unsplash.com/photo-1519741497674-611481863552?q=80&w=1920" alt="웨딩 사진" class="w-full h-full object-cover opacity-90">
      <div class="absolute inset-0 bg-white/30"></div>
    </div>

    <div class="relative z-10 p-10 md:p-12 border border-[#4A4A4A]/20 bg-white/70 backdrop-blur-sm shadow-xl max-w-md w-full fade-up">
      <p class="text-[#8B5E3C] tracking-widest text-sm mb-4">결혼합니다</p>
      <h1 class="text-5xl md:text-6xl font-serif text-[#2C2C2C] mb-6 leading-tight">
        민우<br>
        <span class="text-3xl text-[#8B5E3C]">&</span><br>
        지연
      </h1>
      
      <div class="w-12 h-[1px] bg-[#8B5E3C] mx-auto mb-6"></div>
      
      <p class="text-lg mb-2">2024. 10. 12. 토요일 오후 12시</p>
      <p class="text-sm text-gray-500">라움 아트 센터 2F 마제스틱 볼룸</p>
    </div>
    
    <div class="absolute bottom-8 text-[#4A4A4A]/50 text-sm">
      아래로 스크롤
    </div>
  </header>

  <!-- Invitation Text -->
  <section class="py-20 md:py-24 px-6 text-center bg-white relative">
    <div class="max-w-lg mx-auto space-y-8 fade-up">
      <span class="text-[#8B5E3C] tracking-widest text-xs">초대합니다</span>
      <h2 class="text-2xl md:text-3xl font-serif mb-6">소중한 분들을 초대합니다</h2>
      <p class="leading-loose text-[#666] text-base">
        서로가 마주보며 다져온 사랑을<br>
        이제 함께 한 곳을 바라보며 걸어가려 합니다.<br>
        저희 두 사람의 새로운 시작을<br>
        따뜻한 마음으로 축복해 주시면 감사하겠습니다.
      </p>
      
      <div class="flex justify-center gap-10 pt-8">
        <div>
          <p class="text-sm text-gray-400 mb-1">신랑</p>
          <p class="text-lg font-bold">김민우</p>
        </div>
        <div class="h-12 w-[1px] bg-gray-200"></div>
        <div>
          <p class="text-sm text-gray-400 mb-1">신부</p>
          <p class="text-lg font-bold">이지연</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <section class="py-20 md:py-24 px-4 bg-[#F9F5F0]">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12 fade-up">
        <h2 class="text-3xl font-serif text-[#8B5E3C]">갤러리</h2>
        <p class="text-sm text-gray-500 mt-2">우리의 아름다운 순간들</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
        <div class="row-span-2 relative group overflow-hidden rounded-lg shadow-md fade-up">
          <img src="https://images.unsplash.com/photo-1544605963-c6b75f284534?q=80&w=600" alt="웨딩 사진" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
        </div>
        <div class="relative group overflow-hidden rounded-lg shadow-md fade-up">
          <img src="https://images.unsplash.com/photo-1522673607200-1645062cd958?q=80&w=600" alt="웨딩 사진" class="w-full h-48 md:h-56 object-cover transition duration-500 group-hover:scale-105">
        </div>
        <div class="relative group overflow-hidden rounded-lg shadow-md fade-up">
          <img src="https://images.unsplash.com/photo-1515934751635-c81c6bc9a2d8?q=80&w=600" alt="웨딩 사진" class="w-full h-48 md:h-56 object-cover transition duration-500 group-hover:scale-105">
        </div>
        <div class="col-span-2 relative group overflow-hidden rounded-lg shadow-md fade-up">
          <img src="https://images.unsplash.com/photo-1583939003579-730e3918a45a?q=80&w=1200" alt="웨딩 사진" class="w-full h-48 md:h-56 object-cover transition duration-500 group-hover:scale-105">
        </div>
      </div>
