<%# Wedding Template - 모바일 청첩장 (Eternal Vow) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.8; }
    .mobile-title { font-size: 32px !important; }
  }
</style>

<div class="bg-[#fdfcf9] text-[#5c5c5c] font-sans selection:bg-[#f3e5df] selection:text-[#8b5e3c] min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 border-b border-[#8b5e3c]/10 bg-white/ worse backdrop-blur-md">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-4">
         <span class="font-serif text-xl text-[#8b5e3c] tracking-[0.4em] font-black uppercase">Eternal Vow</span>
      </div>
      
      <div class="hidden md:flex gap-10 text-[10px] font-bold uppercase tracking-[0.3em] text-[#b0a090]">
        <a href="#about" class="hover:text-[#8b5e3c] transition">Invitation</a>
        <a href="#gallery" class="hover:text-[#8b5e3c] transition">Archives</a>
        <a href="#contact" class="hover:text-[#8b5e3c] transition">Location</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button onclick="toggleWeddingModal()" class="text-[10px] font-bold uppercase tracking-[0.3em] text-[#b0a090] hover:text-[#8b5e3c]">Guest Portal</button>
         <button class="bg-[#8b5e3c] text-white px-6 py-2.5 rounded-sm font-black text-[10px] tracking-widest uppercase hover:bg-[#5c5c5c] transition shadow-xl shadow-[#8b5e3c]/10">
           RSVP Now
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center overflow-hidden pt-20">
    <div class="absolute inset-0">
       <img src="https://images.unsplash.com/photo-1519741497674-611481863552?q=80&w=1920" alt="웨딩" class="w-full h-full object-cover opacity-80 brightness-[0.9]">
    </div>
    <div class="absolute inset-0 bg-gradient-to-b from-[#fdfcf9]/30 via-transparent to-[#fdfcf9]"></div>
    
    <div class="container mx-auto px-6 relative z-10 text-center space-y-10">
      <div class="w-[1px] h-20 bg-[#8b5e3c]/30 mx-auto mb-10"></div>
      <p class="font-serif text-sm md:text-md italic tracking-[0.4em] text-[#8b5e3c]">We Formally Invite You</p>
      <h1 class="text-5xl md:text-8xl font-serif leading-none tracking-tighter text-[#2c2c2c] mobile-title">
         가장 찬란한 순간,<br><span class="italic text-[#8b5e3c]">영원의 약속.</span>
      </h1>
      <p class="text-[#7a6a5d] text-sm md:text-xl leading-relaxed max-w-2xl mx-auto mobile-desc font-light">
         하나의 뿌리에서 피어난 두 마음이 이제 같은 하늘 아래 새로운 길을 걸어갑니다.<br>
         함께 한 시간을 축복해주시는 그 따뜻한 걸음을 기다립니다.
      </p>
      <div class="pt-8 space-y-4">
         <p class="font-serif text-2xl text-[#2c2c2c]">2024. 10. 12. SAT. 12:00 PM</p>
         <p class="text-[10px] font-bold text-[#b0a090] tracking-[0.4em] uppercase">The Raum Art Center | Majestic Ballroom</p>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="wedding-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-[#8b5e3c]/ worse backdrop-blur-md">
    <div class="bg-white w-full max-w-sm p-12 shadow-2xl relative border border-[#8b5e3c]/10 rounded-[2rem]">
      <button onclick="toggleWeddingModal()" class="absolute top-10 right-10 text-[#d6d6d6] hover:text-[#8b5e3c] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-serif tracking-[0.4em] text-[#2c2c2c] mb-2 font-black uppercase">GUEST_ID</h2>
        <p class="text-[9px] text-[#8b5e3c] font-bold tracking-[0.3em] uppercase">Digital Invitation Management</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="ACCESS CODE" class="w-full bg-[#fdfcf9] border-none rounded-2xl py-5 px-6 outline-none focus:ring-1 focus:ring-[#8b5e3c] transition text-[11px] font-bold tracking-widest uppercase">
        <button class="w-full bg-[#8b5e3c] text-white py-5 rounded-2xl text-[10px] tracking-[0.4em] font-black uppercase hover:bg-[#5c5c5c] transition shadow-lg shadow-[#8b5e3c]/10">
           Authorize Session
        </button>
        <div class="flex justify-center gap-10 pt-4">
           <a href="#" class="text-[9px] text-[#b0a090] tracking-[0.2em] font-bold uppercase hover:text-[#8b5e3c] transition font-serif italic">RSVP Status</a>
           <a href="#" class="text-[9px] text-[#b0a090] tracking-[0.2em] font-bold uppercase hover:text-[#8b5e3c] transition font-serif italic">Gallery Access</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-24 bg-[#fdfcf9] text-center px-6 border-t border-[#8b5e3c]/10">
     <div class="inline-flex items-center gap-6 mb-8">
        <span class="font-serif text-2xl tracking-[0.4em] font-black uppercase text-[#8b5e3c]">ETERNAL VOW</span>
        <span class="w-12 h-[1px] bg-[#8b5e3c]/20"></span>
        <span class="text-[10px] font-bold text-[#b0a090] tracking-[0.4em] uppercase">Premium Mobile Invitation</span>
     </div>
     <p class="text-[10px] text-[#b0a090] tracking-[0.6em] uppercase px-6">© 2024 ETERNAL VOW WEDDING STUDIO. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleWeddingModal() {
      const modal = document.getElementById('wedding-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
