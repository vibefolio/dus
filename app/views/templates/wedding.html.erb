  <!-- Login Modal -->
  <div id="wedding-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-[#2C2C2C]/10 backdrop-blur-md">
    <div class="bg-[#FFFCF6] w-full max-w-sm p-14 shadow-[0_20px_50px_rgba(140,123,108,0.15)] relative border border-[#E5D5C6]" data-aos="zoom-in">
      <button onclick="toggleWeddingModal()" class="absolute top-8 right-8 text-[#A6998E] hover:text-[#8C7B6C] transition text-xl font-serif-elegant">&times;</button>
      
      <div class="text-center mb-12">
        <h2 class="text-2xl font-serif-elegant font-normal text-[#2C2C2C] mb-2 italic">Guest Access</h2>
