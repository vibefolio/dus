<%# Rental Template - 고카 렌터카 (RENT-ALL) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,300..900;1,300..900&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-display { font-family: 'Jost', sans-serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.8; }
    .mobile-title { font-size: 40px !important; }
  }

  .speed-pattern {
    background-image: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(37, 99, 235, 0.03) 10px, rgba(37, 99, 235, 0.03) 20px);
  }
</style>

<div class="bg-slate-50 text-slate-900 font-sans selection:bg-blue-600 selection:text-white min-h-screen overflow-x-hidden relative speed-pattern">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-6 bg-white/80 backdrop-blur-xl border-b border-blue-100">
    <div class="container mx-auto px-4 md:px-6 flex justify-between items-center flex-nowrap">
      <div class="flex items-center gap-3">
         <div class="w-8 h-8 max-h-8 max-w-[35%] shrink object-contain rounded-full border-2 border-blue-600 flex items-center justify-center text-blue-600 font-semibold text-xs italic">
            R
         </div>
         <span class="font-display text-2xl font-semibold tracking-tight uppercase text-slate-900 italic">Rent<span class="text-blue-600">All</span></span>
      </div>
      
      <div class="hidden md:flex gap-16 text-[11px] font-semibold uppercase tracking-[0.2em] text-slate-400">
        <a href="#vehicles" class="hover:text-blue-600 transition">Vehicles</a>
        <a href="#locations" class="hover:text-blue-600 transition">Locations</a>
        <a href="#business" class="hover:text-blue-600 transition">Business</a>
      </div>
           <button class="mobile-menu-trigger md:hidden ml-auto text-2xl focus:outline-none" style="color: inherit;">
             <i class="fas fa-bars"></i>
           </button>

      
      <div class="flex-nowrap shrink-0 flex gap-10 items-center">
         <button onclick="toggleRentalModal()" class="text-[11px] font-semibold uppercase tracking-[0.2em] text-slate-400 hover:text-blue-600">My Booking</button>
         <button class="bg-blue-600 text-white px-4 py-2 text-xs md:text-base md:px-8 md:py-3 whitespace-nowrap rounded-lg font-semibold text-[11px] tracking-wide uppercase hover:bg-slate-900 transition shadow-xl shadow-blue-200">
           Fast Track
         </button>
      </div>
    </div>

      <%= render partial: 'templates/shared/mobile_menu_overlay' %></nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-20">
    <!-- Dynamic Background Element -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-blue-100/50 rounded-full blur-[100px] -z-10 skew-x-12"></div>
    
    <div class="container mx-auto px-3 md:px-6 relative z-10 grid lg:grid-cols-2 gap-10 md:p-16 items-center">
      <div class="space-y-10 text-center lg:text-left order-2 lg:order-1">
        <div class="inline-flex items-center gap-2 bg-white border border-blue-100 px-4 py-1.5 rounded-lg shadow-sm text-blue-600">
           <span class="font-semibold text-xs">⚡</span>
           <span class="text-[10px] font-semibold tracking-wide uppercase">Premium Mobility Service</span>
        </div>
        
        <h1 class="text-2xl md:text-4xl md:text-7xl font-display font-semibold leading-[0.9] tracking-tight text-slate-900 mobile-title italic">
           Drive<br>
           <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-700 to-blue-400">Your Freedom.</span>
        </h1>
        
        <p class="text-slate-500 text-sm md:text-xl leading-relaxed max-w-lg mx-auto lg:mx-0 mobile-desc font-medium">
           더 자유롭고, 더 감각적인 여정의 시작. 전 차량 3년 미만 신차 출고, 최상의 컨디션으로 당신의 드라이빙을 완성합니다.
        </p>
        
        <!-- Searchbox -->
        <div class="bg-white p-2 rounded-2xl shadow-2xl shadow-blue-100/50 flex flex-col items-center gap-2 border border-blue-50 max-w-md mx-auto lg:mx-0">
           <div class="flex w-full divide-x divide-slate-100 p-2">
              <div class="flex-1 px-4">
                 <p class="text-[9px] font-semibold text-slate-400 uppercase tracking-wide mb-1">Pick-up</p>
                 <p class="font-semibold text-slate-800 text-sm">Seoul, Guro</p>
              </div>
              <div class="flex-1 px-4">
                 <p class="text-[9px] font-semibold text-slate-400 uppercase tracking-wide mb-1">Date</p>
                 <p class="font-semibold text-slate-800 text-sm">Today, 10:00</p>
              </div>
           </div>
           <button class="w-full bg-slate-900 text-white rounded-xl py-4 font-semibold text-[11px] tracking-wide uppercase hover:bg-blue-600 transition">
              Search Available Cars
           </button>
        </div>
      </div>
      
      <div class="relative order-1 lg:order-2">
         <img src="https://images.unsplash.com/photo-1549317661-bd32c8ce0db2?q=80&w=1200" alt="Car" class="w-full object-contain drop-shadow-2xl transform hover:scale-105 transition duration-700">
         <div class="absolute -bottom-10 right-0 bg-white/80 backdrop-blur-md px-8 py-4 rounded-xl border border-white/50 shadow-lg hidden lg:block">
            <p class="text-[10px] font-semibold text-slate-400 uppercase tracking-wide mb-1">Featured Model</p>
            <p class="text-xl font-semibold text-slate-900 italic">Tesla Model 3</p>
            <div class="mt-2 flex gap-2">
               <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-[9px] font-semibold rounded">Electric</span>
               <span class="px-2 py-0.5 bg-slate-100 text-slate-600 text-[9px] font-semibold rounded">Autopilot</span>
            </div>
         </div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="rental-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-slate-900/40 backdrop-blur-2xl">
    <div class="bg-white w-full max-w-sm p-12 shadow-2xl relative rounded-[2.5rem]">
      <button onclick="toggleRentalModal()" class="absolute top-8 right-8 text-slate-300 hover:text-blue-600 transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-display font-semibold tracking-tight text-slate-900 mb-2 uppercase italic">Member Hub</h2>
        <p class="text-[9px] text-blue-600 font-semibold tracking-[0.2em] uppercase">Rent-All Mobility Access</p>
      </div>
      
      <div class="space-y-6">
        <div class="space-y-2">
           <p class="text-[9px] font-semibold text-slate-400 uppercase tracking-wide ml-2">License / Mobile</p>
           <input type="text" placeholder="010-XXXX-XXXX" class="w-full bg-slate-50 border-none rounded-2xl py-5 px-6 outline-none focus:ring-2 focus:ring-blue-100 transition text-[11px] font-semibold tracking-wide text-slate-800">
        </div>
        <button class="w-full bg-blue-600 text-white py-5 rounded-2xl text-[10px] tracking-[0.4em] font-semibold uppercase hover:bg-slate-900 transition shadow-xl shadow-blue-200">
           Fast Login
        </button>
        <div class="flex justify-center gap-12 pt-4">
           <a href="#" class="text-[9px] text-slate-400 tracking-[0.2em] font-semibold uppercase hover:text-blue-600 transition">Join Membership</a>
           <a href="#" class="text-[9px] text-slate-400 tracking-[0.2em] font-semibold uppercase hover:text-blue-600 transition">Lookup Reservation</a>
        </div>
      </div>
      
      <div class="mt-8 pt-6 border-t border-slate-100">
         <div class="flex justify-between items-center px-2">
            <span class="text-[9px] font-semibold text-slate-400 uppercase tracking-wide">Connect With</span>
            <div class="flex gap-2">
               <button class="w-8 h-8 max-h-8 max-w-[35%] shrink object-contain rounded-full bg-yellow-400 flex items-center justify-center font-semibold text-xs">K</button>
               <button class="w-8 h-8 max-h-8 max-w-[35%] shrink object-contain rounded-full bg-green-500 flex items-center justify-center font-semibold text-xs text-white">N</button>
            </div>
         </div>
      </div>
    </div>
  </div>

  <footer class="py-20 md:py-32 bg-white text-center px-6 border-t border-slate-100">
     <div class="inline-flex items-center gap-10 mb-8">
        <span class="font-display font-semibold text-2xl tracking-tight uppercase text-slate-900 italic">Rent<span class="text-blue-600">All</span></span>
        <span class="w-12 h-[1px] bg-slate-100"></span>
        <span class="text-[10px] font-semibold text-slate-400 tracking-[0.3em] uppercase">Mobility Solutions</span>
     </div>
     <p class="text-[10px] text-slate-300 tracking-[0.6em] uppercase px-6">© 2024 RENT-ALL. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleRentalModal() {
      const modal = document.getElementById('rental-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
