<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Global Consulting Group</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Lato', sans-serif; color: #334155; }
    h1, h2, h3, h4, .font-serif { font-family: 'Playfair Display', serif; }
    .bg-navy { background-color: #0f172a; }
    .text-gold { color: #d4af37; }
    .bg-gold { background-color: #d4af37; }
    .border-gold { border-color: #d4af37; }
  </style>
</head>
<body class="bg-gray-50">

  <!-- Top Bar -->
  <div class="bg-navy text-white text-xs py-2 px-6 flex justify-between items-center hidden md:flex">
    <div>New York • London • Seoul • Singapore</div>
    <div class="flex gap-4">
      <a href="#" class="hover:text-gold transition">Careers</a>
      <a href="#" class="hover:text-gold transition">News</a>
      <a href="#" class="hover:text-gold transition">Client Login</a>
    </div>
  </div>

  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-6 h-20 flex justify-between items-center">
      <div class="text-2xl font-serif font-bold text-navy flex items-center gap-2">
        <span class="w-8 h-8 bg-navy flex items-center justify-center text-gold text-lg">G</span>
        CONSULTING
      </div>
      <nav class="hidden md:flex gap-8 text-sm font-bold tracking-wide text-navy">
        <a href="#" class="hover:text-gold transition">EXPERTISE</a>
        <a href="#" class="hover:text-gold transition">INDUSTRIES</a>
        <a href="#" class="hover:text-gold transition">INSIGHTS</a>
        <a href="#" class="hover:text-gold transition">OUR FIRM</a>
      </nav>
      <button class="bg-navy text-white px-6 py-2 text-sm font-bold hover:bg-gold transition hidden md:block" onclick="toggleConsultingModal()">
        CONTACT US
      </button>
      <button class="md:hidden text-navy p-2" onclick="toggleMenu()">
        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
    </div>
  </header>

  <!-- Hero -->
  <section class="relative h-[600px] flex items-center">
    <div class="absolute inset-0 z-0">
      <img src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?q=80&w=2670&auto=format&fit=crop" class="w-full h-full object-cover">
      <div class="absolute inset-0 bg-navy/80"></div>
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-6 text-white">
      <p class="text-gold font-bold tracking-widest mb-4 uppercase text-sm">Strategic Excellence</p>
      <h1 class="text-5xl md:text-6xl font-serif font-bold mb-8 leading-tight max-w-3xl">
        Navigating Complex Challenges with Clarity
      </h1>
      <div class="flex flex-col sm:flex-row gap-4">
        <button onclick="toggleConsultingModal()" class="bg-gold text-white px-8 py-4 font-bold hover:bg-white hover:text-navy transition min-w-[200px]">
          SCHEDULE A CONSULTATION
        </button>
        <button class="border border-white text-white px-8 py-4 font-bold hover:bg-white hover:text-navy transition min-w-[200px]">
          VIEW OUR SERVICES
        </button>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-16 bg-white border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-6 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div>
        <div class="text-4xl text-navy font-serif font-bold mb-2">25+</div>
        <div class="text-sm text-gray-500 uppercase tracking-wide">Years Experience</div>
      </div>
      <div>
        <div class="text-4xl text-navy font-serif font-bold mb-2">500+</div>
        <div class="text-sm text-gray-500 uppercase tracking-wide">Global Clients</div>
      </div>
      <div>
        <div class="text-4xl text-navy font-serif font-bold mb-2">$10B+</div>
        <div class="text-sm text-gray-500 uppercase tracking-wide">Value Created</div>
      </div>
      <div>
        <div class="text-4xl text-navy font-serif font-bold mb-2">50</div>
        <div class="text-sm text-gray-500 uppercase tracking-wide">Offices Worldwide</div>
      </div>
    </div>
  </section>

  <!-- Insights Grid -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex justify-between items-end mb-12">
        <div>
           <h2 class="text-3xl text-navy font-serif font-bold mb-4">Latest Insights</h2>
           <p class="text-gray-600 max-w-xl">Our perspective on the critical issues facing global business today.</p>
        </div>
        <a href="#" class="hidden md:block text-navy font-bold border-b-2 border-gold pb-1 hover:text-gold transition">View All Insights</a>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="bg-white shadow-lg group cursor-pointer">
          <div class="h-64 overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&q=80" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
            <div class="absolute top-4 left-4 bg-gold text-white text-xs font-bold px-3 py-1 uppercase">Strategy</div>
          </div>
          <div class="p-8">
            <h3 class="text-xl font-serif font-bold text-navy mb-4 group-hover:text-gold transition">Digital Transformation in 2025</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-6">How traditional industries are reinventing themselves through AI and data analytics.</p>
            <span class="text-xs font-bold text-navy uppercase tracking-wide">Read More &rarr;</span>
          </div>
        </div>
        <!-- Card 2 -->
        <div class="bg-white shadow-lg group cursor-pointer">
          <div class="h-64 overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?w=800&q=80" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
            <div class="absolute top-4 left-4 bg-gold text-white text-xs font-bold px-3 py-1 uppercase">Sustainability</div>
          </div>
          <div class="p-8">
            <h3 class="text-xl font-serif font-bold text-navy mb-4 group-hover:text-gold transition">The Green Economy Shift</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-6">Analyzing the impact of ESG regulations on global supply chains.</p>
            <span class="text-xs font-bold text-navy uppercase tracking-wide">Read More &rarr;</span>
          </div>
        </div>
        <!-- Card 3 -->
        <div class="bg-white shadow-lg group cursor-pointer">
          <div class="h-64 overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1553877607-49d6da64b633?w=800&q=80" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
            <div class="absolute top-4 left-4 bg-gold text-white text-xs font-bold px-3 py-1 uppercase">Leadership</div>
          </div>
          <div class="p-8">
            <h3 class="text-xl font-serif font-bold text-navy mb-4 group-hover:text-gold transition">Future of Work</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-6">Building resilient teams in an era of remote work and rapid change.</p>
            <span class="text-xs font-bold text-navy uppercase tracking-wide">Read More &rarr;</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="fixed inset-0 bg-navy z-50 transform -translate-x-full transition duration-300 md:hidden flex flex-col pt-24 px-8 text-white">
    <button onclick="toggleMenu()" class="absolute top-6 right-6 text-white text-2xl">&times;</button>
    <a href="#" class="text-2xl font-serif font-bold mb-6 hover:text-gold" onclick="toggleMenu()">EXPERTISE</a>
    <a href="#" class="text-2xl font-serif font-bold mb-6 hover:text-gold" onclick="toggleMenu()">INDUSTRIES</a>
    <a href="#" class="text-2xl font-serif font-bold mb-6 hover:text-gold" onclick="toggleMenu()">INSIGHTS</a>
    <a href="#" class="text-2xl font-serif font-bold mb-6 hover:text-gold" onclick="toggleMenu()">OUR FIRM</a>
    <a href="#" class="text-2xl font-serif font-bold mt-auto mb-12 text-gold" onclick="toggleMenu(); toggleConsultingModal()">CONTACT US</a>
  </div>

  <!-- Contact Modal -->
  <div id="consulting-modal" class="fixed inset-0 bg-navy/90 z-[100] hidden opacity-0 transition-opacity duration-300 flex items-center justify-center p-4">
    <div class="bg-white max-w-2xl w-full p-8 md:p-12 relative shadow-2xl">
      <button onclick="toggleConsultingModal()" class="absolute top-4 right-4 text-2xl text-gray-400 hover:text-navy">&times;</button>
      <div class="text-center mb-8">
        <h3 class="text-3xl font-serif font-bold text-navy mb-2">Request a Consultation</h3>
        <p class="text-gray-500">Our experts are ready to help you solve your most critical challenges.</p>
      </div>
      
      <form class="grid grid-cols-1 md:grid-cols-2 gap-6" onsubmit="event.preventDefault(); alert('Request submitted successfully.'); toggleConsultingModal();">
        <div class="md:col-span-2">
           <label class="block text-xs font-bold uppercase text-gray-500 mb-1">Full Name</label>
           <input type="text" class="w-full border border-gray-300 p-3 focus:border-navy focus:outline-none" required>
        </div>
        <div>
           <label class="block text-xs font-bold uppercase text-gray-500 mb-1">Company</label>
           <input type="text" class="w-full border border-gray-300 p-3 focus:border-navy focus:outline-none">
        </div>
        <div>
           <label class="block text-xs font-bold uppercase text-gray-500 mb-1">Email</label>
           <input type="email" class="w-full border border-gray-300 p-3 focus:border-navy focus:outline-none" required>
        </div>
        <div class="md:col-span-2">
           <label class="block text-xs font-bold uppercase text-gray-500 mb-1">Areas of Interest</label>
           <select class="w-full border border-gray-300 p-3 focus:border-navy focus:outline-none bg-white">
             <option>Strategy & Growth</option>
             <option>Digital Transformation</option>
             <option>Mergers & Acquisitions</option>
             <option>Sustainability</option>
             <option>Other</option>
           </select>
        </div>
        <div class="md:col-span-2">
           <label class="block text-xs font-bold uppercase text-gray-500 mb-1">Message</label>
           <textarea rows="4" class="w-full border border-gray-300 p-3 focus:border-navy focus:outline-none"></textarea>
        </div>
        <div class="md:col-span-2">
          <button type="submit" class="w-full bg-navy text-white font-bold py-4 hover:bg-gold transition uppercase tracking-widest text-sm">
            Submit Request
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('mobile-menu');
      if(menu.classList.contains('-translate-x-full')) {
        menu.classList.remove('-translate-x-full');
      } else {
        menu.classList.add('-translate-x-full');
      }
    }

    function toggleConsultingModal() {
      const modal = document.getElementById('consulting-modal');
      if(modal.classList.contains('hidden')) {
        modal.classList.remove('hidden');
        setTimeout(() => modal.classList.remove('opacity-0'), 10);
      } else {
        modal.classList.add('opacity-0');
        setTimeout(() => modal.classList.add('hidden'), 300);
      }
    }
  </script>
</body>
</html>
