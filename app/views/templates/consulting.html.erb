<%# Consulting Template - 비저너리 파트너스 (VISIONARY PARTNERS) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.8; }
    .mobile-title { font-size: 40px !important; }
  }
</style>

<div class="bg-white text-[#111827] font-sans selection:bg-[#F59E0B] selection:text-white min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-6 bg-white/90 backdrop-blur-xl border-b border-[#F59E0B]/20">
    <div class="container mx-auto px-4 md:px-6 flex justify-between items-center flex-nowrap">
      <div class="flex items-center gap-6">
         <div class="w-2 h-8 bg-[#F59E0B]"></div>
         <div class="flex flex-col">
            <span class="font-serif text-xl font-semibold tracking-tight text-[#111827] leading-none">VISIONARY</span>
            <span class="text-[9px] font-semibold tracking-[0.2em] uppercase text-[#F59E0B] mt-0.5">Partners Group</span>
         </div>
      </div>
      
      <div class="hidden md:flex gap-14 text-[11px] font-semibold uppercase tracking-[0.2em] text-[#111827]/40">
        <a href="#strategy" class="hover:text-[#F59E0B] transition">Strategy</a>
        <a href="#digital" class="hover:text-[#F59E0B] transition">Digital</a>
        <a href="#cases" class="hover:text-[#F59E0B] transition">Performance</a>
      </div>
      
      <div class="flex-nowrap shrink-0 flex gap-12 items-center">
         <button onclick="toggleConsultModal()" class="text-[11px] font-semibold uppercase tracking-[0.2em] text-[#111827]/40 hover:text-[#F59E0B]">Partner Access</button>
         <button class="bg-[#111827] text-white px-4 py-2 text-xs md:text-base md:px-8 md:py-3 whitespace-nowrap rounded-none font-semibold text-[11px] tracking-wide uppercase hover:bg-[#F59E0B] transition shadow-xl">
           Get Inquiry
         </button>
         <button class="mobile-menu-trigger md:hidden ml-2 sm:ml-4 text-2xl focus:outline-none" style="color: inherit;">
           <i class="fas fa-bars"></i>
         </button>

      </div>
    </div>

      <%= render partial: 'templates/shared/mobile_menu_overlay' %></nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-20">
    <div class="absolute inset-0 bg-[#F3F4F6] -z-20"></div>
    <div class="absolute right-0 top-0 w-[40%] h-full bg-[#E5E7EB] -z-10 hidden lg:block"></div>
    
    <div class="container mx-auto px-3 md:px-6 relative z-10 grid lg:grid-cols-2 gap-12 md:p-20 items-center">
      <div class="space-y-12 text-center lg:text-left">
        <div class="inline-flex items-center gap-6">
           <span class="w-12 h-[2px] bg-[#F59E0B]"></span>
           <span class="text-[10px] font-semibold tracking-[0.4em] uppercase text-[#F59E0B]">Global Strategy Excellence</span>
        </div>
        
        <h1 class="text-2xl md:text-4xl md:text-6xl font-serif font-semibold leading-[1.2] tracking-tight text-[#111827] mobile-title">
           관점의 전환,<br>
           <span class="italic text-transparent bg-clip-text bg-gradient-to-r from-[#F59E0B] to-[#111827]">성장의 가속화.</span>
        </h1>
        
        <p class="text-[#374151] text-sm md:text-lg leading-relaxed max-w-lg mx-auto lg:mx-0 mobile-desc">
           변화의 핵심을 꿰뚫는 통찰과 데이터 기반의 실행 전략. 비저너리 파트너스는 귀하의 비즈니스를 승리로 이끄는 가장 확실한 로드맵입니다.
        </p>
        
        <div class="pt-6 flex flex-col sm:flex-row gap-10 justify-center lg:justify-start">
           <button class="px-12 py-5 bg-[#F59E0B] text-white font-semibold text-[11px] tracking-wide uppercase hover:bg-[#111827] transition shadow-xl">
              Our Solutions
           </button>
           <button class="px-12 py-5 border border-[#111827]/20 text-[#111827] font-semibold text-[11px] tracking-wide uppercase hover:bg-white transition">
              Client Stories
           </button>
        </div>

        <div class="pt-10 flex gap-16 border-t border-[#111827]/10 items-center justify-center lg:justify-start opacity-70 grayscale">
            <span class="font-serif font-semibold text-xl text-[#111827]">SAMSUNG</span>
            <span class="font-serif font-semibold text-xl text-[#111827]">Hyundai</span>
            <span class="font-serif font-semibold text-xl text-[#111827]">SK</span>
            <span class="font-serif font-semibold text-xl text-[#111827]">LG</span>
        </div>
      </div>
      
      <div class="relative hidden lg:block">
         <div class="relative z-10 bg-white p-12 shadow-2xl border-t-8 border-[#F59E0B]">
            <div class="aspect-[4/3] bg-gray-100 mb-8 overflow-hidden relative group">
               <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=1200" alt="Strategy Meeting" class="w-full h-full object-cover transition duration-700 group-hover:scale-110 grayscale group-hover:grayscale-0">
            </div>
            <div class="flex justify-between items-end">
               <div>
                  <p class="text-[10px] font-semibold text-[#F59E0B] uppercase tracking-[0.2em] mb-2">Latest Insight</p>
                  <h3 class="text-2xl font-serif font-semibold text-[#111827] mb-2">Future of DX</h3>
                  <p class="text-xs text-gray-500 max-w-xs">디지털 전환 시대, 기업이 갖춰야 할 5가지 핵심 역량 보고서</p>
               </div>
               <button class="w-12 h-12 bg-[#111827] text-white flex items-center justify-center hover:bg-[#F59E0B] transition">
                  <span class="text-xl">→</span>
               </button>
            </div>
         </div>
         <!-- Decorative Elements -->
         <div class="absolute -bottom-10 -right-10 w-40 h-40 border-r-8 border-b-8 border-[#111827]/10"></div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="consult-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-[#111827]/90 backdrop-blur-xl">
    <div class="bg-white w-full max-w-sm p-14 shadow-2xl relative border-l-8 border-[#F59E0B]">
      <button onclick="toggleConsultModal()" class="absolute top-8 right-8 text-[#111827]/30 hover:text-[#F59E0B] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-12">
        <h2 class="text-xl font-serif font-semibold tracking-tight text-[#111827] mb-2 uppercase">PARTNER_PORTAL</h2>
        <p class="text-[9px] text-[#F59E0B] font-semibold tracking-[0.2em] uppercase">Confidential Data Room</p>
      </div>
      
      <div class="space-y-8">
        <div class="space-y-2">
            <p class="text-[9px] font-semibold text-[#111827]/40 uppercase tracking-wide ml-1">Access Code</p>
            <input type="password" placeholder="********" class="w-full bg-[#F3F4F6] border border-[#111827]/5 py-5 px-6 outline-none focus:border-[#F59E0B] transition text-[11px] font-semibold uppercase tracking-wide text-[#111827]">
        </div>
        <button class="w-full bg-[#111827] text-white py-5 text-[10px] tracking-[0.4em] font-semibold uppercase hover:bg-[#F59E0B] transition shadow-xl">
           Secure Connect
        </button>
        <div class="flex justify-center gap-14 pt-4">
           <a href="#" class="text-[9px] text-[#111827]/40 tracking-[0.2em] font-semibold uppercase hover:text-[#F59E0B] transition">Request Access</a>
           <a href="#" class="text-[9px] text-[#111827]/40 tracking-[0.2em] font-semibold uppercase hover:text-[#F59E0B] transition">Support</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-20 md:py-32 bg-[#111827] text-center px-6">
     <div class="inline-flex items-center gap-10 mb-8">
        <span class="font-serif font-semibold text-2xl text-white tracking-wide">VISIONARY</span>
        <span class="w-12 h-[1px] bg-white/20"></span>
        <span class="text-[10px] font-semibold text-white/40 tracking-[0.4em] uppercase">Partners Group</span>
     </div>
     <p class="text-[10px] text-white/20 tracking-[0.6em] uppercase px-6">© 2024 VISIONARY PARTNERS. SEOUL HQ.</p>
  </footer>

  <script>
    function toggleConsultModal() {
      const modal = document.getElementById('consult-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
