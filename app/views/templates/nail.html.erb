<%# Nail Template - 네온 네일 (Neon Nail) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 36px !important; }
  }
</style>

<div class="bg-[#080808] text-[#f8f8f8] font-sans selection:bg-[#ff00ff] selection:text-white min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 bg-[#080808]/9 worst backdrop-blur-md border-b border-[#ff00ff]/10">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-3">
         <div class="w-10 h-10 bg-gradient-to-tr from-[#ff00ff] to-[#00ffff] rounded-lg flex items-center justify-center text-black font-black text-2xl shadow-[0_0_20px_rgba(255,0,255,0.4)]">N</div>
         <span class="text-xl font-black tracking-tighter text-white uppercase italic">NEON<span class="text-[#ff00ff]">NAIL</span></span>
      </div>
      
      <div class="hidden md:flex gap-10 text-[11px] font-bold uppercase tracking-[0.3em] text-gray-500">
        <a href="#art" class="hover:text-[#ff00ff] transition">Gallery</a>
        <a href="#price" class="hover:text-[#ff00ff] transition">Menu</a>
        <a href="#booking" class="hover:text-[#ff00ff] transition">Reserve</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button onclick="toggleNailModal()" class="text-[11px] font-bold uppercase tracking-[0.3em] text-gray-500 hover:text-[#ff00ff]">Member ID</button>
         <button class="bg-gradient-to-r from-[#ff00ff] to-[#7b00ff] text-white px-6 py-2.5 rounded-sm font-black text-[11px] tracking-widest uppercase hover:opacity-80 transition shadow-xl">
           Book Now
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center overflow-hidden pt-20">
    <div class="absolute inset-0">
       <img src="https://images.unsplash.com/photo-1604654894610-df63bc536371?q=80&w=1920" alt="네일 아트" class="w-full h-full object-cover grayscale opacity-20">
       <div class="absolute inset-0 bg-gradient-to-b from-[#080808] via-transparent to-[#080808]"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10 grid md:grid-cols-2 gap-16 items-center">
      <div class="space-y-8 text-center md:text-left">
        <div class="inline-flex items-center gap-4 text-[#ff00ff] font-black bg-white/5 border border-[#ff00ff]/20 px-6 py-2 rounded-full text-[10px] tracking-widest uppercase">
           <span class="animate-pulse">✨</span> Premium Artistry & Care
        </div>
        <h1 class="text-5xl md:text-9xl font-black leading-none tracking-tighter text-white mobile-title">
           손끝에서 피어나는<br><span class="text-transparent bg-clip-text bg-gradient-to-r from-[#ff00ff] to-[#00ffff] italic">빛의 잔상.</span>
        </h1>
        <p class="text-gray-400 text-sm md:text-xl leading-relaxed max-w-sm mx-auto md:mx-0 mobile-desc">
           당신의 무드를 완성하는 가장 정교한 터치. 네온 네일은 트렌디한 감각과 독보적인 기술력으로 손끝에 예술을 조각합니다.
        </p>
        <div class="pt-8 flex flex-col sm:flex-row gap-6 justify-center md:justify-start">
           <button class="px-12 py-5 bg-white text-black font-black text-[11px] tracking-widest uppercase hover:bg-[#ff00ff] hover:text-white transition shadow-2xl">
              See Arts
           </button>
           <button class="px-12 py-5 border border-white/10 text-white font-black text-[11px] tracking-widest uppercase hover:bg-white/5 transition backdrop-blur-sm">
              Inquiry
           </button>
        </div>
      </div>
      
      <div class="relative hidden md:block">
         <div class="absolute -inset-10 bg-[#ff00ff]/10 rounded-full blur-[100px]"></div>
         <div class="relative z-10">
            <div class="relative group">
               <img src="https://images.unsplash.com/photo-1632516643720-e7f5d7d6ecc9?q=80&w=800" alt="네일" class="w-full aspect-[4/5] object-cover rounded-[3rem] border border-white/5 shadow-2xl transition duration-700 group-hover:scale-[1.02]">
               <div class="absolute -bottom-8 -right-8 bg-black/80 backdrop-blur-md p-8 border border-[#ff00ff]/20 rounded-2xl shadow-2xl">
                  <p class="text-[10px] font-black text-[#ff00ff] uppercase tracking-widest mb-2">Trend of Month</p>
                  <p class="text-xl font-black text-white uppercase italic">Cyber Chrome Art</p>
               </div>
            </div>
         </div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="nail-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/8 worst backdrop-blur-md">
    <div class="bg-[#080808] w-full max-w-sm p-12 shadow-2xl relative border border-[#ff00ff]/20 rounded-sm">
      <button onclick="toggleNailModal()" class="absolute top-10 right-10 text-gray-500 hover:text-[#ff00ff] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-black text-white mb-2 tracking-[0.4em] uppercase">PRIVATE_CLUB</h2>
        <p class="text-[9px] text-[#ff00ff] font-bold tracking-[0.3em] uppercase">Neon Nail VIP Membership</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="PHONE OR ACCOUNT" class="w-full bg-white/5 border border-white/5 py-5 px-6 outline-none focus:border-[#ff00ff] transition text-[11px] font-black tracking-widest text-[#ff00ff] uppercase">
        <button class="w-full bg-gradient-to-r from-[#ff00ff] to-[#7b00ff] text-white py-5 rounded-sm text-[10px] tracking-[0.3em] font-black uppercase hover:opacity-80 transition shadow-lg">
           Authorize Session
        </button>
        <div class="flex justify-center gap-10 pt-4">
           <a href="#" class="text-[9px] text-gray-500 tracking-[0.2em] font-bold uppercase hover:text-[#ff00ff] transition">Registration</a>
           <a href="#" class="text-[9px] text-gray-500 tracking-[0.2em] font-bold uppercase hover:text-[#ff00ff] transition">Support</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-24 bg-[#080808] text-center px-6 border-t border-white/5">
     <div class="inline-flex items-center gap-6 mb-8">
        <span class="italic font-black text-2xl text-white tracking-widest uppercase">NEON<span class="text-[#ff00ff]">NAIL</span></span>
        <span class="w-12 h-[1px] bg-[#ff00ff]/20"></span>
        <span class="text-[10px] font-bold text-gray-600 tracking-[0.4em] uppercase">Handmade Aesthetic Studio</span>
     </div>
     <p class="text-[10px] text-white/5 tracking-[0.6em] uppercase px-6">© 2024 NEON NAIL ARTISTRY. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleNailModal() {
      const modal = document.getElementById('nail-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
