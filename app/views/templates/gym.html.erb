<%# Gym Template - 리밋 브레이커 (LIMIT BREAKER) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Teko:wght@300;400;500;600;700&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-titling { font-family: 'Teko', sans-serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.8; }
    .mobile-title { font-size: 40px !important; }
  }

  .carbon-fiber {
    background-image: linear-gradient(45deg, #18181B 25%, transparent 25%),
                      linear-gradient(-45deg, #18181B 25%, transparent 25%),
                      linear-gradient(45deg, transparent 75%, #18181B 75%),
                      linear-gradient(-45deg, transparent 75%, #18181B 75%);
    background-size: 8px 8px;
    background-color: #09090B;
    opacity: 0.1;
  }
</style>

<div class="bg-slate-950 text-white font-sans selection:bg-[#EAB308] selection:text-slate-900 min-h-screen overflow-x-hidden relative">
  <div class="fixed inset-0 carbon-fiber pointer-events-none"></div>

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-6 bg-slate-950/80 backdrop-blur-md border-b border-white/5">
    <div class="container mx-auto px-4 md:px-6 flex justify-between items-center flex-nowrap">
      <div class="flex items-center gap-1">
         <div class="w-8 h-8 max-h-8 max-w-[35%] shrink object-contain bg-[#EAB308] skew-x-[-15deg] flex items-center justify-center mr-1">
            <span class="font-semibold text-slate-900 text-xl skew-x-[15deg]">L</span>
         </div>
         <span class="font-titling font-semibold text-2xl tracking-wide uppercase leading-none mt-1">Limit<span class="text-[#EAB308]">Breaker</span></span>
      </div>
      
      <div class="hidden md:flex gap-16 text-sm font-titling font-medium tracking-[0.1em] text-white/40 uppercase mt-1">
        <a href="#programs" class="hover:text-[#EAB308] transition">Programs</a>
        <a href="#trainers" class="hover:text-[#EAB308] transition">Coaches</a>
        <a href="#schedule" class="hover:text-[#EAB308] transition">Schedule</a>
      </div>
           <button class="mobile-menu-trigger md:hidden ml-auto text-2xl focus:outline-none" style="color: inherit;">
             <i class="fas fa-bars"></i>
           </button>

      
      <div class="flex-nowrap shrink-0 flex gap-6 items-center">
         <button onclick="toggleGymModal()" class="hidden md:block text-sm font-titling font-medium tracking-wide uppercase text-white/40 hover:text-[#EAB308] mt-1" data-mobile-menu-copy="true">Member Login</button>
         <button class="hidden md:block bg-[#EAB308] text-slate-900 px-8 py-2 skew-x-[-15deg] font-titling font-semibold text-xl uppercase hover:bg-white transition" data-mobile-menu-copy="true">
           <span class="skew-x-[15deg] inline-block">Join Now</span>
         </button>
      </div>
    </div>

      <%= render partial: 'templates/shared/mobile_menu_overlay' %></nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-24 overflow-hidden">
    <!-- Dynamic Lighting -->
    <div class="absolute top-0 right-0 w-[80vw] h-full bg-gradient-to-l from-[#EAB308]/20 to-transparent skew-x-[-20deg] mix-blend-screen pointer-events-none"></div>
    <div class="absolute bottom-0 left-[20%] w-[2px] h-full bg-white/10 rotate-[20deg] pointer-events-none"></div>
    <div class="absolute bottom-0 left-[30%] w-[1px] h-full bg-white/5 rotate-[20deg] pointer-events-none"></div>

    <div class="container mx-auto px-3 md:px-6 relative z-10 grid lg:grid-cols-2 gap-10 md:p-16 items-center">
      <div class="space-y-8 text-center lg:text-left">
        <div class="inline-flex items-center gap-2 bg-[#18181B] px-3 py-1 border-l-4 border-[#EAB308]">
           <span class="text-xs font-semibold font-titling tracking-[0.2em] text-[#EAB308] uppercase">We Build Machines</span>
        </div>
        
        <h1 class="text-3xl md:text-5xl md:text-[9rem] font-titling font-semibold leading-[0.8] uppercase text-white mobile-title italic">
           Push<br>
           Past<br>
           <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#EAB308] to-[#CA8A04]">Limits.</span>
        </h1>
        
        <p class="text-white/50 text-base md:text-xl shrink truncate leading-relaxed max-w-md mx-auto lg:mx-0 mobile-desc font-medium">
           당신의 한계를 깨부수는 곳. 리밋 브레이커는 단순한 체육관이 아닌, 당신을 다시 태어나게 할 훈련소입니다.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-10 justify-center lg:justify-start pt-6">
           <button class="px-10 py-4 bg-white text-slate-900 font-titling font-semibold text-2xl uppercase tracking-wide skew-x-[-10deg] hover:bg-[#EAB308] transition shadow-[4px_4px_0_rgba(255,255,255,0.2)] hover:shadow-none">
              Start Training
           </button>
           <button class="px-10 py-4 border border-white/20 text-white font-titling font-semibold text-2xl uppercase tracking-wide skew-x-[-10deg] hover:border-[#EAB308] hover:text-[#EAB308] transition">
              Free Pass
           </button>
        </div>
        
        <div class="pt-8 flex items-center gap-12 justify-center lg:justify-start opacity-70">
           <div>
              <p class="text-2xl font-titling font-semibold text-[#EAB308]">24/7</p>
              <p class="text-[10px] uppercase tracking-wider text-white/40">Access</p>
           </div>
           <div class="w-px h-8 bg-white/10"></div>
           <div>
              <p class="text-2xl font-titling font-semibold text-[#EAB308]">100+</p>
              <p class="text-[10px] uppercase tracking-wider text-white/40">Machines</p>
           </div>
           <div class="w-px h-8 bg-white/10"></div>
           <div>
              <p class="text-2xl font-titling font-semibold text-[#EAB308]">PT</p>
              <p class="text-[10px] uppercase tracking-wider text-white/40">Experts</p>
           </div>
        </div>
      </div>
      
      <div class="relative hidden lg:block h-full">
         <div class="absolute inset-0 bg-[#EAB308] mix-blend-color z-10 opacity-0 hover:opacity-10 transition duration-300 pointer-events-none"></div>
         <img src="https://images.unsplash.com/photo-1517836357463-d25dfeac3438?q=80&w=800" alt="Gym Workout" class="w-full h-[600px] object-cover skew-x-[-5deg] grayscale contrast-125 brightness-75 border-r-8 border-[#EAB308] shadow-2xl">
         
         <!-- Stat Card -->
         <div class="absolute bottom-20 -left-10 bg-slate-950 p-6 border border-[#EAB308]/50 skew-x-[-5deg]">
             <p class="font-titling font-semibold text-2xl text-white uppercase">Pro Equipment</p>
             <p class="text-xs text-white/40 uppercase tracking-wide">Technogym & Hammer Strength</p>
         </div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="gym-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-slate-950/90 backdrop-blur-md">
    <div class="bg-slate-950 w-full max-w-sm p-12 shadow-[0_0_50px_rgba(234,179,8,0.2)] relative border border-[#EAB308]/30">
      <button onclick="toggleGymModal()" class="absolute top-6 right-6 text-white/20 hover:text-[#EAB308] transition text-2xl font-titling font-semibold">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-3xl font-titling font-semibold text-white mb-0 italic uppercase">Warrior Zone</h2>
        <p class="text-[10px] text-[#EAB308] font-semibold tracking-[0.3em] uppercase bg-white/5 inline-block px-2 py-1">Member Access Only</p>
      </div>
      
      <div class="space-y-6">
        <div>
           <label class="block text-[10px] font-semibold text-white/30 uppercase tracking-wide mb-2 font-titling text-sm">Passcode ID</label>
           <input type="text" placeholder="XXX-XXX" class="w-full bg-[#18181B] border border-white/10 py-4 px-6 outline-none focus:border-[#EAB308] transition text-xl font-titling font-semibold text-white uppercase tracking-wide text-center">
        </div>
        
        <button class="w-full bg-[#EAB308] text-slate-900 py-4 text-2xl font-titling font-semibold uppercase hover:bg-white transition skew-x-[-10deg]">
           <span class="skew-x-[10deg] inline-block">Enter Gym</span>
        </button>
        
        <div class="flex justify-center gap-10 pt-4 border-t border-white/5 mt-4">
           <a href="#" class="text-xs text-white/40 tracking-wider uppercase hover:text-[#EAB308] transition font-titling font-medium">Register</a>
           <a href="#" class="text-xs text-white/40 tracking-wider uppercase hover:text-[#EAB308] transition font-titling font-medium">Lost ID</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-20 md:py-32 bg-slate-950 text-center px-6 border-t border-white/10">
     <div class="inline-flex flex-col items-center gap-6 mb-8">
        <span class="font-titling font-semibold text-2xl tracking-wide uppercase text-white">Limit<span class="text-[#EAB308]">Breaker</span></span>
        <span class="text-[10px] font-semibold text-white/20 tracking-[0.4em] uppercase">No Pain No Gain</span>
     </div>
     <p class="text-[10px] text-white/10 tracking-[0.6em] uppercase px-6">© 2024 LIMIT BREAKER GYM. SEOUL.</p>
  </footer>

  <script>
    function toggleGymModal() {
      const modal = document.getElementById('gym-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
