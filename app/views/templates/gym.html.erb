<%# Gym Template - 리라임 휘트니스 %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  .gym-font { font-family: 'Inter', sans-serif; }
  .clip-diagonal {
    clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
  }
  .clip-diagonal-reverse {
    clip-path: polygon(0 15%, 100% 0, 100% 100%, 0 100%);
  }
  .neon-text {
    text-shadow: 0 0 10px #c6ff00;
  }
  .glitch-hover:hover {
    animation: glitch 0.3s cubic-bezier(.25, .46, .45, .94) both infinite;
  }
  @keyframes glitch {
    0% { transform: translate(0) }
    20% { transform: translate(-2px, 2px) }
    40% { transform: translate(-2px, -2px) }
    60% { transform: translate(2px, 2px) }
    80% { transform: translate(2px, -2px) }
    100% { transform: translate(0) }
  }
</style>

<div class="bg-black text-white gym-font selection:bg-[#c6ff00] selection:text-black">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-4 flex justify-between items-center bg-black/90 border-b border-[#c6ff00]/20 backdrop-blur">
    <div class="text-3xl font-black italic tracking-tighter text-white">
      LIMIT<span class="text-[#c6ff00]">BREAKER</span>
    </div>
    <div class="hidden md:flex gap-8 font-bold uppercase italic text-sm text-gray-400">
      <a href="#about" class="hover:text-[#c6ff00] transition">About</a>
      <a href="#trainers" class="hover:text-[#c6ff00] transition">Trainers</a>
      <a href="#program" class="hover:text-[#c6ff00] transition">Program</a>
      <a href="#membership" class="hover:text-[#c6ff00] transition">Membership</a>
    </div>
    <button onclick="document.getElementById('membership').scrollIntoView({behavior: 'smooth'})"
            class="px-8 py-2 bg-[#c6ff00] text-black font-black italic uppercase skew-x-[-10deg] hover:bg-white transition transform hover:scale-105">
      Join Now
    </button>
  </nav>

  <!-- Hero -->
  <header class="h-screen relative flex items-center overflow-hidden clip-diagonal">
    <div class="absolute inset-0 z-0">
      <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=1920&auto=format&fit=crop" class="w-full h-full object-cover opacity-60">
      <div class="absolute inset-0 bg-gradient-to-r from-black via-black/70 to-transparent"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10 grid md:grid-cols-2">
      <div class="space-y-6">
