      <div class="flex items-center gap-4">
         <span class="font-black text-2xl text-white tracking-widest uppercase italic">J.STUDIO</span>
      </div>
      
      <div class="hidden md:flex gap-12 text-[10px] font-bold uppercase tracking-[0.4em] text-gray-500">
        <a href="#work" class="hover:text-white transition">Selection</a>
        <a href="#about" class="hover:text-white transition">Persona</a>
        <a href="#contact" class="hover:text-white transition">Collaborate</a>
