<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 36px !important; }
  }

  .marquee-box {
    display: flex;
    overflow: hidden;
    user-select: none;
  }
  .marquee-content {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    min-width: 100%;
    gap: 4rem;
    animation: scroll 30s linear infinite;
  }
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(calc(-100% - 4rem)); }
  }
</style>

<div class="bg-[#0a0a0a] text-[#f2f2f2] font-sans selection:bg-[#fbff00] selection:text-black min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 border-b border-white/5 bg-[#0a0a0a]/ worst backdrop-blur-md">
