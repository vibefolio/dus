    <div class="absolute inset-0">
       <div class="absolute top-20 left-[-5%] w-[40%] h-[40%] bg-blue-500/10 rounded-full blur-[120px]"></div>
       <div class="absolute bottom-20 right-[-5%] w-[40%] h-[40%] bg-purple-500/10 rounded-full blur-[120px]"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10 space-y-8">
      <div class="inline-flex items-center gap-4 text-[#fbff00] font-black bg-white/5 border border-[#fbff00]/20 px-6 py-2 rounded-full text-[10px] tracking-widest uppercase">
