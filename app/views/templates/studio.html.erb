<%# Studio Template - 모노크롬 스튜디오 %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .masonry-grid {
    column-count: 2;
    column-gap: 1rem;
  }
  @media (min-width: 768px) {
    .masonry-grid {
      column-count: 3;
    }
  }
  .masonry-item {
    break-inside: avoid;
    margin-bottom: 1rem;
  }
</style>

<div class="bg-black text-white font-sans selection:bg-white selection:text-black min-h-screen">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 md:px-8 py-6 bg-black/80 backdrop-blur-sm border-b border-white/10">
    <div class="flex justify-between items-center">
      <div class="text-lg font-serif">모노크롬</div>
      <div class="hidden md:flex gap-8 text-xs tracking-wide">
        <a href="#portfolio" class="hover:text-gray-400 transition">포트폴리오</a>
        <a href="#about" class="hover:text-gray-400 transition">아티스트</a>
        <a href="#contact" class="hover:text-gray-400 transition">문의하기</a>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen flex items-center justify-center px-6 relative pt-16">
    <div class="text-center z-10 w-full">
      <p class="text-xs tracking-widest mb-4 text-gray-400">Photography Studio</p>
      <h1 class="text-5xl md:text-7xl font-serif leading-tight mb-8">
        순간을<br>담다
      </h1>
      <div class="w-[1px] h-20 bg-white/20 mx-auto"></div>
    </div>
    
    <div class="absolute inset-0 z-0 opacity-40">
       <img src="https://images.unsplash.com/photo-1471341971476-84d5a7d74d82?q=80&w=1920" alt="스튜디오 사진" class="w-full h-full object-cover grayscale">
    </div>
  </header>

  <!-- About -->
  <section id="about" class="py-20 md:py-32 px-6 bg-[#0a0a0a]">
    <div class="container mx-auto grid md:grid-cols-2 gap-12 items-center">
      <div class="relative">
        <img src="https://images.unsplash.com/photo-1554048612-387768052bf7?q=80&w=800" alt="포토그래퍼" class="w-full grayscale brightness-75 hover:brightness-100 transition duration-500">
      </div>
      <div>
        <h2 class="text-3xl font-serif mb-6">아티스트 소개</h2>
        <p class="text-gray-400 font-light leading-loose mb-10">
          우리는 빛과 그림자, 그 사이의 찰나를 기록합니다.<br>
          인위적인 연출보다는 피사체 본연의 분위기를 담아내는 것에 집중합니다.<br>
          당신의 가장 자연스러운 순간이 작품이 됩니다.
        </p>
        <div class="grid grid-cols-2 gap-6 border-t border-white/10 pt-6">
           <div>
             <span class="text-2xl font-serif">10+</span>
             <p class="text-xs text-gray-500 mt-1">년 경력</p>
           </div>
           <div>
             <span class="text-2xl font-serif">500+</span>
             <p class="text-xs text-gray-500 mt-1">포트레이트 촬영</p>
           </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio (Masonry) -->
  <section id="portfolio" class="py-20 md:py-32 px-4 md:px-8 bg-black">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-serif">포트폴리오</h2>
    </div>
    <div class="masonry-grid">
      <!-- Item 1 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?q=80&w=600" alt="인물 사진" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition">
           <span class="font-serif text-xl">인물 사진</span>
        </div>
      </div>
      <!-- Item 2 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=600" alt="패션 화보" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
