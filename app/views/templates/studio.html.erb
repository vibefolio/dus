<%# Studio Template - 모노크롬 스튜디오 %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Italiana&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Italiana', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .masonry-grid {
    column-count: 2;
    column-gap: 2rem;
  }
  @media (min-width: 768px) {
    .masonry-grid {
      column-count: 3;
    }
  }
  .masonry-item {
    break-inside: avoid;
    margin-bottom: 2rem;
  }
  
  .cursor-dot {
    width: 10px;
    height: 10px;
    background: white;
    border-radius: 50%;
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 9999;
    mix-blend-mode: difference;
    transition: transform 0.2s;
  }
</style>

<div class="bg-black text-white font-sans selection:bg-white selection:text-black min-h-screen">
  <!-- Custom Cursor element could be added with JS -->

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-8 mix-blend-difference flex justify-between items-end">
    <div class="text-xl font-serif">MONOCHROME</div>
    <div class="hidden md:flex gap-8 text-xs tracking-widest uppercase">
      <a href="#portfolio" class="hover:underline">Portfolio</a>
      <a href="#about" class="hover:underline">Artist</a>
      <a href="#contact" class="hover:underline">Contact</a>
    </div>
  </nav>

  <!-- Hero -->
  <header class="h-screen flex items-center justify-center px-6 relative">
    <div class="text-center z-10 w-full" data-tilt data-tilt-max="3" data-tilt-speed="400" data-tilt-full-page-listening>
      <p class="text-[10px] tracking-[1em] uppercase mb-4 opacity-50">Photography Studio</p>
      <h1 class="text-6xl md:text-9xl font-serif leading-none tracking-tight mix-blend-overlay opacity-80">
        CAPTURE<br>THE<br>MOMENT
      </h1>
      <div class="w-[1px] h-32 bg-white/20 mx-auto mt-12"></div>
    </div>
    
    <div class="absolute inset-0 z-0 opacity-40">
       <img src="https://images.unsplash.com/photo-1471341971476-84d5a7d74d82?q=80&w=1920" class="w-full h-full object-cover grayscale">
    </div>
  </header>

  <!-- About -->
  <section id="about" class="py-32 px-6 bg-[#0a0a0a]">
    <div class="container mx-auto grid md:grid-cols-2 gap-16 items-center">
      <div class="relative">
        <img src="https://images.unsplash.com/photo-1554048612-387768052bf7?q=80&w=800" class="w-full grayscale brightness-75 hover:brightness-100 transition duration-700">
      </div>
      <div>
        <h2 class="text-4xl font-serif mb-8">The Artist</h2>
        <p class="text-gray-400 font-light leading-loose mb-12">
          우리는 빛과 그림자, 그 사이의 찰나를 기록합니다.<br>
          인위적인 연출보다는 피사체 본연의 분위기를 담아내는 것에 집중합니다.<br>
          당신의 가장 자연스러운 순간이 작품이 됩니다.
        </p>
        <div class="grid grid-cols-2 gap-8 border-t border-white/10 pt-8">
           <div>
             <span class="text-2xl font-serif">10+</span>
             <p class="text-xs text-gray-500 uppercase mt-1">Years Experience</p>
           </div>
           <div>
             <span class="text-2xl font-serif">500+</span>
             <p class="text-xs text-gray-500 uppercase mt-1">Portrait Sessions</p>
           </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio (Masonry) -->
  <section id="portfolio" class="py-32 px-4 md:px-12 bg-black">
    <div class="masonry-grid">
      <!-- Item 1 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?q=80&w=600" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
           <span class="font-serif text-2xl drop-shadow-lg">Portrait</span>
        </div>
      </div>
      <!-- Item 2 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=600" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
           <span class="font-serif text-2xl drop-shadow-lg">Fashion</span>
        </div>
      </div>
      <!-- Item 3 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1542038784456-1ea8e935640e?q=80&w=600" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
           <span class="font-serif text-2xl drop-shadow-lg">Object</span>
        </div>
      </div>
      <!-- Item 4 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1519741497674-611481863552?q=80&w=600" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
           <span class="font-serif text-2xl drop-shadow-lg">Wedding</span>
        </div>
      </div>
      <!-- Item 5 -->
      <div class="masonry-item group cursor-pointer relative">
        <img src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?q=80&w=600" class="w-full grayscale group-hover:grayscale-0 transition duration-500">
        <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
           <span class="font-serif text-2xl drop-shadow-lg">Profile</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-32 px-6 bg-white text-black text-center">
    <div class="container mx-auto max-w-2xl">
      <p class="font-serif text-3xl mb-8">Let's create something timeless.</p>
      <a href="mailto:contact@monochrome.com" class="text-xl border-b border-black pb-1 hover:opacity-50 transition">contact@monochrome.com</a>
      
      <div class="flex justify-center gap-8 mt-16 text-xs uppercase tracking-widest">
        <a href="#" class="hover:underline">Instagram</a>
        <a href="#" class="hover:underline">Behance</a>
        <a href="#" class="hover:underline">Pinterest</a>
      </div>
    </div>
  </section>

</div>
