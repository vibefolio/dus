<%# Pension Template - 리버사이드 (Riverside Stay) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 36px !important; }
  }
</style>

<div class="bg-[#f8f9fa] text-[#424242] font-sans selection:bg-[#2d5a57] selection:text-white min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 border-b border-[#2d5a57]/5 bg-[#f8f9fa]/9 worst backdrop-blur-md">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-4">
         <span class="font-serif text-2xl text-[#2d5a57] tracking-[0.4em] font-black uppercase">Riverside</span>
      </div>
      
      <div class="hidden md:flex gap-12 text-[10px] font-bold uppercase tracking-[0.4em] text-[#90a4ae]">
        <a href="#stay" class="hover:text-[#2d5a57] transition">The Stay</a>
        <a href="#wellness" class="hover:text-[#2d5a57] transition">Wellness</a>
        <a href="#location" class="hover:text-[#2d5a57] transition">Directions</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button onclick="togglePensionModal()" class="text-[10px] font-bold uppercase tracking-[0.4em] text-[#90a4ae] hover:text-[#2d5a57]">Guest Portal</button>
         <button class="bg-[#2d5a57] text-white px-6 py-2.5 rounded-sm font-black text-[10px] tracking-widest uppercase hover:bg-[#1a3a38] transition shadow-xl shadow-[#2d5a57]/10">
           Check Rates
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center overflow-hidden pt-20">
    <div class="absolute inset-0">
       <img src="https://images.unsplash.com/photo-1540541338287-41700207dee6?q=80&w=1920" alt="펜션" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 bg-[#f8f9fa]/40 backdrop-blur-[2px]"></div>
    
    <div class="container mx-auto px-6 relative z-10 text-center space-y-12">
      <div class="w-[1px] h-20 bg-[#2d5a57]/30 mx-auto mb-10"></div>
      <p class="font-serif text-xl md:text-2xl italic tracking-[0.3em] text-[#2d5a57]">A Private Sanctuary by the Water</p>
      <h1 class="text-5xl md:text-9xl font-serif leading-none tracking-tighter text-[#1a1a1a] mobile-title">
         자연과의 공명,<br><span class="italic text-[#2d5a57]">숨겨진 안식처.</span>
      </h1>
      <p class="text-[#546e7a] text-sm md:text-xl leading-relaxed max-w-2xl mx-auto mobile-desc font-light">
         소음은 잦아들고 숲과 물의 대화만 남는 시간. 리버사이드는 인위적인 장식을 덜어내고 <br>
         자연이 주는 온전한 휴식을 온전히 담아낸 프리미엄 풀빌라입니다.
      </p>
      <div class="pt-8">
         <a href="#stay" class="inline-flex items-center gap-6 text-[#2d5a57] text-[10px] font-black uppercase tracking-[0.4em] group">
            Experience Serenity <span class="group-hover:translate-x-2 transition">→</span>
         </a>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="pension-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-[#2d5a57]/ worst backdrop-blur-md">
    <div class="bg-white w-full max-w-sm p-12 shadow-2xl relative border border-[#2d5a57]/10 rounded-sm">
      <button onclick="togglePensionModal()" class="absolute top-10 right-10 text-[#cfd8dc] hover:text-[#2d5a57] transition text-2xl font-light font-black italic">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-serif tracking-[0.4em] text-[#1a1a1a] mb-2 font-black uppercase">GUEST_ACCESS</h2>
        <p class="text-[9px] text-[#2d5a57] font-bold tracking-[0.3em] uppercase">Private Booking Management</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="BOOKING NO OR EMAIL" class="w-full bg-[#f8f9fa] border-none rounded-sm py-5 px-6 outline-none focus:ring-1 focus:ring-[#2d5a57] transition text-[11px] font-bold tracking-widest uppercase">
        <button class="w-full bg-[#2d5a57] text-white py-5 rounded-sm text-[10px] tracking-[0.4em] font-black uppercase hover:bg-[#1a3a38] transition shadow-lg shadow-[#2d5a57]/10">
           Authorize Session
        </button>
        <div class="flex justify-center gap-10 pt-4">
           <a href="#" class="text-[9px] text-[#90a4ae] tracking-[0.2em] font-bold uppercase hover:text-[#2d5a57] transition font-serif italic">Check In</a>
           <a href="#" class="text-[9px] text-[#90a4ae] tracking-[0.2em] font-bold uppercase hover:text-[#2d5a57] transition font-serif italic">Support</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-24 bg-[#f8f9fa] text-center px-6 border-t border-[#2d5a57]/10">
     <div class="inline-flex items-center gap-6 mb-8">
        <span class="font-serif text-3xl tracking-[0.4em] font-black uppercase text-[#2d5a57]">Riverside</span>
        <span class="w-12 h-[1px] bg-[#2d5a57]/20"></span>
        <span class="text-[10px] font-bold text-[#90a4ae] tracking-[0.4em] uppercase">Architecture of Repose</span>
     </div>
     <p class="text-[10px] text-[#cfd8dc] tracking-[0.6em] uppercase px-6">© 2024 RIVERSIDE STAY GROUP. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function togglePensionModal() {
      const modal = document.getElementById('pension-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
