<%# Shoe Template - 어반 킥스 (URBAN KICKS) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Anton&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-display { font-family: 'Anton', sans-serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 44px !important; }
  }

  .grid-pattern {
    background-image: linear-gradient(#222 1px, transparent 1px), linear-gradient(90deg, #222 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.1;
  }
</style>

<div class="bg-slate-950 text-white font-sans selection:bg-[#CCFF00] selection:text-slate-900 min-h-screen overflow-x-hidden relative">
  <div class="fixed inset-0 grid-pattern pointer-events-none"></div>

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-3 md:px-6 py-6 border-b border-white/10 bg-slate-950/90 backdrop-blur-xl">
    <div class="container mx-auto px-4 md:px-6 flex justify-between items-center flex-nowrap">
      <div class="flex items-center gap-2">
         <span class="font-display text-3xl tracking-wide uppercase text-white italic">HYPE<span class="text-[#CCFF00]">BEAST</span></span>
      </div>
      
      <div class="hidden md:flex gap-14 text-[11px] font-semibold uppercase tracking-[0.2em] text-white/40">
        <a href="#drops" class="hover:text-[#CCFF00] transition">Upcoming Drops</a>
        <a href="#market" class="hover:text-[#CCFF00] transition">Marketplace</a>
        <a href="#culture" class="hover:text-[#CCFF00] transition">Culture</a>
      </div>
           <button class="mobile-menu-trigger md:hidden ml-auto text-2xl focus:outline-none" style="color: inherit;">
             <i class="fas fa-bars"></i>
           </button>

      
      <div class="flex-nowrap shrink-0 flex gap-10 items-center">
         <button onclick="toggleShoeModal()" class="hidden md:block text-[11px] font-semibold uppercase tracking-[0.2em] text-white/40 hover:text-white" data-mobile-menu-copy="true">Sign In</button>
         <div class="relative cursor-pointer group">
             <div class="bg-[#CCFF00] text-slate-900 w-8 h-8 max-h-8 max-w-[35%] shrink object-contain flex items-center justify-center font-semibold text-xs skew-x-[-10deg] group-hover:scale-110 transition">
                 0
             </div>
         </div>
      </div>
    </div>

      <%= render partial: 'templates/shared/mobile_menu_overlay' %></nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-24 overflow-hidden">
    <div class="absolute top-[20%] right-[-10%] w-[600px] h-[600px] bg-[#CCFF00] rounded-full blur-[200px] opacity-10"></div>
    <div class="absolute bottom-[20%] left-[-10%] w-[600px] h-[600px] bg-purple-600 rounded-full blur-[200px] opacity-10"></div>

    <div class="container mx-auto px-3 md:px-6 relative z-10 grid lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-10 text-center lg:text-left">
        <div class="inline-block bg-white/10 backdrop-blur-md px-4 py-2 border border-white/10 skew-x-[-10deg]">
           <span class="block skew-x-[10deg] text-[10px] font-semibold uppercase tracking-[0.2em] text-[#CCFF00]">Limited Edition Drop</span>
        </div>
        
        <h1 class="text-3xl md:text-5xl md:text-[9rem] font-display uppercase leading-[0.8] tracking-wide mobile-title">
           STREET<br>
           <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#CCFF00] to-white italic">LEGACY</span>
        </h1>
        
        <p class="text-white/40 text-sm md:text-xl leading-relaxed max-w-md mx-auto lg:mx-0 mobile-desc">
           거리의 문화를 정의하는 아이코닉한 디자인. 가장 희귀하고 강력한 스니커즈 컬렉션을 지금 바로 확인하세요.
        </p>
        
        <div class="pt-6 flex flex-col sm:flex-row gap-10 justify-center lg:justify-start">
           <button class="px-12 py-5 bg-[#CCFF00] text-slate-900 font-semibold text-[12px] uppercase tracking-wide hover:bg-white transition-all skew-x-[-10deg] shadow-[5px_5px_0px_#fff]">
              <span class="block skew-x-[10deg]">Shop Now</span>
           </button>
           <button class="px-12 py-5 border border-white/20 text-white font-semibold text-[12px] uppercase tracking-wide hover:bg-white/10 transition-all skew-x-[-10deg]">
              <span class="block skew-x-[10deg]">View Lookbook</span>
           </button>
        </div>
      </div>
      
      <div class="relative">
         <img src="https://images.unsplash.com/photo-1600185365483-26d7a4cc7519?q=80&w=1000" alt="Sneakers" class="w-full max-w-2xl mx-auto object-contain drop-shadow-[0_20px_50px_rgba(204,255,0,0.15)] animate-float rotate-[-15deg]">
         <style>
             @keyframes float {
                 0%, 100% { transform: translateY(0) rotate(-15deg); }
                 50% { transform: translateY(-20px) rotate(-12deg); }
             }
             .animate-float { animation: float 6s ease-in-out infinite; }
         </style>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="shoe-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-slate-950/95 backdrop-blur-2xl">
    <div class="bg-[#050505] w-full max-w-sm p-14 relative border border-white/10">
      <div class="absolute top-0 left-0 w-full h-1 bg-[#CCFF00]"></div>
      <button onclick="toggleShoeModal()" class="absolute top-8 right-8 text-white/20 hover:text-[#CCFF00] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-12">
        <h2 class="text-3xl font-display uppercase text-white mb-2 italic tracking-wide">CREW LOGIN</h2>
        <p class="text-[9px] text-[#CCFF00] font-semibold tracking-[0.3em] uppercase">Private Raffle Access</p>
      </div>
      
      <div class="space-y-6">
        <div class="space-y-2">
            <label class="text-[9px] font-semibold text-white/30 uppercase tracking-[0.2em] ml-1">Username / Email</label>
            <input type="text" placeholder="HYPE_MEMBER" class="w-full bg-[#1A1A1A] border-none py-5 px-6 outline-none focus:ring-1 focus:ring-[#CCFF00] transition text-[11px] font-semibold uppercase tracking-wide text-white skew-x-[-5deg]">
        </div>
        
        <button class="w-full bg-[#CCFF00] text-slate-900 py-5 text-[11px] tracking-[0.4em] font-semibold uppercase hover:bg-white transition skew-x-[-5deg] mt-4 shadow-[3px_3px_0px_#fff]">
           <span class="block skew-x-[5deg]">Enter The Drop</span>
        </button>
        
        <div class="flex justify-between pt-6 border-t border-white/5 mt-6">
           <a href="#" class="text-[9px] text-white/30 tracking-[0.2em] font-semibold uppercase hover:text-[#CCFF00] transition">Create Account</a>
           <a href="#" class="text-[9px] text-white/30 tracking-[0.2em] font-semibold uppercase hover:text-[#CCFF00] transition">Forgot Password</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-20 md:py-32 bg-slate-950 text-center px-6 border-t border-white/10">
     <div class="inline-flex items-center gap-10 mb-8 transform -skew-x-[10deg]">
        <span class="font-display text-2xl text-white tracking-wide uppercase italic">Hype<span class="text-[#CCFF00]">Beast</span></span>
        <span class="w-12 h-[2px] bg-[#CCFF00]"></span>
        <span class="text-[10px] font-semibold text-white/40 tracking-[0.4em] uppercase">Street & Culture</span>
     </div>
     <p class="text-[10px] text-white/10 tracking-[0.8em] uppercase px-6">© 2024 URBAN KICKS. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleShoeModal() {
      const modal = document.getElementById('shoe-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
