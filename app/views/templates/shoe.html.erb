<%# Shoe Template - 킥스랩 (스니커즈 편집샵) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300;400;700;900&display=swap');
  
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .floating-shoe {
    animation: float 4s ease-in-out infinite;
  }
  @keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
    100% { transform: translateY(0); }
  }
</style>

<div class="bg-neutral-900 text-white font-sans selection:bg-[#ccff00] selection:text-black">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-4 bg-neutral-900/95 backdrop-blur-sm border-b border-white/10">
    <div class="container mx-auto flex justify-between items-center">
      <div class="text-2xl md:text-3xl font-black tracking-tight">KICKS<span class="text-[#ccff00]">LAB</span></div>
      <div class="hidden md:flex gap-8 font-bold text-sm">
        <a href="#drops" class="hover:text-[#ccff00] transition">신상품</a>
        <a href="#brands" class="hover:text-[#ccff00] transition">브랜드</a>
        <a href="#culture" class="hover:text-[#ccff00] transition">스토어</a>
      </div>
      <div class="flex gap-3 items-center">
        <div class="w-9 h-9 bg-white/10 rounded-full flex items-center justify-center cursor-pointer hover:bg-[#ccff00] hover:text-black transition">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16 bg-gradient-to-br from-neutral-900 via-neutral-800 to-neutral-900">
    <div class="container mx-auto grid md:grid-cols-2 items-center relative z-10 px-6 gap-8">
      <div class="order-2 md:order-1 space-y-5 text-center md:text-left">
        <span class="bg-[#ccff00] text-black font-bold px-3 py-1 text-xs inline-block">한정판</span>
        <h1 class="text-5xl md:text-7xl font-black leading-tight">
          스트릿을<br><span class="text-[#ccff00]">달리다</span>
        </h1>
        <p class="text-gray-400 max-w-md text-base leading-relaxed mx-auto md:mx-0">
           가장 핫한 스니커즈를 가장 먼저 만나보세요.<br>
           한정판 드로우, 익스클루시브 콜라보레이션.
        </p>
        <button class="px-8 py-3 bg-white text-black font-bold hover:bg-[#ccff00] transition">
           컬렉션 보기
        </button>
      </div>
      
      <div class="order-1 md:order-2 relative h-[40vh] md:h-[50vh] flex items-center justify-center">
         <div class="absolute w-[200px] md:w-[300px] h-[200px] md:h-[300px] bg-[#ccff00] rounded-full blur-[80px] opacity-20"></div>
         <img src="https://images.unsplash.com/photo-1552346154-21d32810aba3?q=80&w=800" alt="스니커즈" class="relative z-10 w-full max-w-md object-contain floating-shoe drop-shadow-2xl">
      </div>
    </div>
  </header>

  <!-- New Drops -->
  <section id="drops" class="py-20 md:py-24 bg-black border-t border-white/10">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-end mb-10">
         <h2 class="text-3xl md:text-4xl font-black">신상품 <span class="text-gray-600">드롭</span></h2>
         <a href="#" class="text-sm font-bold text-gray-500 hover:text-white transition">전체 보기 →</a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
         <!-- Card 1 -->
         <div class="bg-[#111] border border-white/5 p-6 group hover:border-[#ccff00] transition duration-300 relative cursor-pointer">
            <div class="absolute top-4 right-4 text-xs font-bold text-gray-500 group-hover:text-[#ccff00]">01/24</div>
            <div class="h-40 md:h-48 flex items-center justify-center mb-4">
               <img src="https://images.unsplash.com/photo-1600185365926-3a2ce3cdb9eb?q=80&w=400" alt="에어포스 1" class="h-full object-contain group-hover:scale-105 transition duration-300">
            </div>
            <h3 class="text-xl md:text-2xl font-bold mb-1">에어 포스 1</h3>
            <p class="text-xs text-gray-400 mb-4">화이트 / 유니버시티 블루</p>
            <div class="flex justify-between items-center">
               <span class="font-bold">₩ 139,000</span>
               <button class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center opacity-0 group-hover:opacity-100 transition">+</button>
            </div>
         </div>

         <!-- Card 2 -->
         <div class="bg-[#111] border border-white/5 p-6 group hover:border-[#ccff00] transition duration-300 relative cursor-pointer">
            <div class="absolute top-0 right-0 bg-[#ccff00] text-black text-xs font-bold px-2 py-1">HOT</div>
            <div class="h-40 md:h-48 flex items-center justify-center mb-4">
               <img src="https://images.unsplash.com/photo-1595950653106-6c9ebd614d3a?q=80&w=400" alt="에어 조던 1 로우" class="h-full object-contain group-hover:scale-105 transition duration-300">
            </div>
            <h3 class="text-xl md:text-2xl font-bold mb-1">에어 조던 1 로우</h3>
            <p class="text-xs text-gray-400 mb-4">퍼플 / 블랙</p>
            <div class="flex justify-between items-center">
               <span class="font-bold">₩ 159,000</span>
               <button class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center opacity-0 group-hover:opacity-100 transition">+</button>
            </div>
         </div>

         <!-- Card 3 -->
         <div class="bg-[#111] border border-white/5 p-6 group hover:border-[#ccff00] transition duration-300 relative cursor-pointer">
            <div class="absolute top-4 right-4 text-xs font-bold text-gray-500 group-hover:text-[#ccff00]">재입고</div>
            <div class="h-40 md:h-48 flex items-center justify-center mb-4">
               <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?q=80&w=400" alt="나이키 프리런" class="h-full object-contain group-hover:scale-105 transition duration-300">
            </div>
            <h3 class="text-xl md:text-2xl font-bold mb-1">나이키 프리런</h3>
            <p class="text-xs text-gray-400 mb-4">레드 / 화이트</p>
            <div class="flex justify-between items-center">
               <span class="font-bold">₩ 119,000</span>
               <button class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center opacity-0 group-hover:opacity-100 transition">+</button>
            </div>
         </div>
      </div>
    </div>
  </section>

  <!-- Brand Marquee -->
  <section class="py-10 bg-[#ccff00] text-black overflow-hidden">
     <div class="flex whitespace-nowrap gap-12 text-4xl md:text-5xl font-black tracking-tight">
        <span>Nike</span> <span>Adidas</span> <span>New Balance</span> <span>Asics</span> <span>Salomon</span> <span>Jordan</span>
        <span>Nike</span> <span>Adidas</span> <span>New Balance</span> <span>Asics</span> <span>Salomon</span> <span>Jordan</span>
     </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 px-6 bg-neutral-900 border-t border-white/10">
    <div class="container mx-auto text-center">
      <p class="text-2xl font-black mb-2">KICKS<span class="text-[#ccff00]">LAB</span></p>
      <p class="text-sm text-gray-500">서울시 강남구 압구정로 123</p>
      <p class="text-sm text-gray-500 mt-1">매일 12:00 - 21:00</p>
    </div>
