<%# Shoe Template - 킥스 랩 (스니커즈 편집샵) %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Teko:wght@300;400;500;600;700&family=Noto+Sans+KR:wght@300;400;700;900&display=swap');
  
  .font-display { font-family: 'Teko', sans-serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .text-stroke {
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.2);
    color: transparent;
  }
  .text-stroke:hover {
    -webkit-text-stroke: 1px #fff;
    color: #fff;
  }
  
  .floating-shoe {
    animation: float 4s ease-in-out infinite;
  }
  @keyframes float {
    0% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(-5deg); }
    100% { transform: translateY(0) rotate(0deg); }
  }
</style>

<div class="bg-neutral-900 text-white font-sans selection:bg-[#ccff00] selection:text-black">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-4 bg-neutral-900/90 backdrop-blur border-b border-white/10">
    <div class="container mx-auto flex justify-between items-center">
      <div class="font-display text-4xl font-bold tracking-tighter italic">KICKS<span class="text-[#ccff00]">LAB</span></div>
      <div class="hidden md:flex gap-8 font-bold text-sm uppercase tracking-wider">
        <a href="#drops" class="hover:text-[#ccff00] transition">New Drops</a>
        <a href="#brands" class="hover:text-[#ccff00] transition">Brands</a>
        <a href="#culture" class="hover:text-[#ccff00] transition">Culture</a>
      </div>
      <div class="flex gap-4 items-center">
        <span class="text-[#ccff00] font-display text-xl">KRW</span>
        <div class="w-8 h-8 bg-white/10 rounded-full flex items-center justify-center cursor-pointer hover:bg-[#ccff00] hover:text-black transition">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero with Floating Shoe -->
  <header class="h-screen flex items-center justify-center relative overflow-hidden bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')]">
    <!-- Big Text Background -->
    <div class="absolute inset-0 flex items-center justify-center pointer-events-none select-none overflow-hidden">
       <span class="text-[20vw] font-display font-bold text-stroke opacity-30 whitespace-nowrap leading-none">JUST DROP</span>
    </div>
    
    <div class="container mx-auto grid md:grid-cols-2 items-center relative z-10 px-6">
      <div class="order-2 md:order-1 space-y-4">
        <span class="bg-[#ccff00] text-black font-bold px-2 py-1 text-xs uppercase inline-block -rotate-2">Limited Edition</span>
        <h1 class="text-6xl md:text-8xl font-display font-bold leading-none uppercase italic">
          Run The <br> <span class="text-[#ccff00]">Streets</span>
        </h1>
        <p class="text-gray-400 max-w-md text-sm md:text-base mb-8">
           가장 핫한 스니커즈를 가장 먼저 만나보세요.<br>
           한정판 드로우, 익스클루시브 콜라보레이션.
        </p>
        <button class="px-8 py-3 bg-white text-black font-bold uppercase hover:bg-[#ccff00] transition transform skew-x-[-10deg]">
           <span class="block skew-x-[10deg]">Shop Collection</span>
        </button>
      </div>
      
      <div class="order-1 md:order-2 relative h-[50vh] flex items-center justify-center">
         <div class="absolute w-[300px] h-[300px] bg-[#ccff00] rounded-full blur-[100px] opacity-20"></div>
         <img src="https://images.unsplash.com/photo-1552346154-21d32810aba3?q=80&w=800" class="relative z-10 w-full max-w-lg object-contain floating-shoe drop-shadow-2xl filter brightness-110" data-tilt data-tilt-max="15">
      </div>
    </div>
  </header>

  <!-- New Drops (Slider style grid) -->
  <section id="drops" class="py-24 bg-black border-t border-white/10">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-end mb-12">
         <h2 class="text-5xl font-display font-bold uppercase italic">Upcoming <span class="text-gray-700">Drops</span></h2>
         <a href="#" class="text-sm font-bold text-gray-500 hover:text-white transition">View All &rarr;</a>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
         <!-- Card 1 -->
         <div class="bg-[#111] border border-white/5 p-6 group hover:border-[#ccff00] transition duration-300 relative cursor-pointer">
            <div class="absolute top-4 right-4 text-xs font-bold text-gray-500 group-hover:text-[#ccff00]">01/24</div>
            <div class="h-48 flex items-center justify-center mb-4">
               <img src="https://images.unsplash.com/photo-1600185365926-3a2ce3cdb9eb?q=80&w=400" class="h-full object-contain group-hover:scale-110 transition duration-300">
            </div>
            <h3 class="font-display text-3xl mb-1 uppercase">Air Force 1</h3>
            <p class="text-xs text-gray-400 mb-4">White / University Blue</p>
            <div class="flex justify-between items-center">
               <span class="font-bold">₩ 139,000</span>
               <button class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center opacity-0 group-hover:opacity-100 transition">+</button>
            </div>
         </div>

         <!-- Card 2 -->
         <div class="bg-[#111] border border-white/5 p-6 group hover:border-[#ccff00] transition duration-300 relative cursor-pointer transform md:-translate-y-4 shadow-xl shadow-[#ccff00]/10">
            <div class="absolute top-0 right-0 bg-[#ccff00] text-black text-xs font-bold px-2 py-1">Hot</div>
            <div class="h-48 flex items-center justify-center mb-4">
               <img src="https://images.unsplash.com/photo-1595950653106-6c9ebd614d3a?q=80&w=400" class="h-full object-contain group-hover:scale-110 transition duration-300">
            </div>
            <h3 class="font-display text-3xl mb-1 uppercase">Air Jordan 1 Low</h3>
            <p class="text-xs text-gray-400 mb-4">Purple / Black</p>
            <div class="flex justify-between items-center">
               <span class="font-bold">₩ 159,000</span>
               <button class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center opacity-0 group-hover:opacity-100 transition">+</button>
            </div>
         </div>

         <!-- Card 3 -->
         <div class="bg-[#111] border border-white/5 p-6 group hover:border-[#ccff00] transition duration-300 relative cursor-pointer">
            <div class="absolute top-4 right-4 text-xs font-bold text-gray-500 group-hover:text-[#ccff00]">Restock</div>
            <div class="h-48 flex items-center justify-center mb-4">
               <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?q=80&w=400" class="h-full object-contain group-hover:scale-110 transition duration-300">
            </div>
            <h3 class="font-display text-3xl mb-1 uppercase">Nike Free Run</h3>
            <p class="text-xs text-gray-400 mb-4">Red / White</p>
            <div class="flex justify-between items-center">
               <span class="font-bold">₩ 119,000</span>
               <button class="w-8 h-8 rounded-full bg-white text-black flex items-center justify-center opacity-0 group-hover:opacity-100 transition">+</button>
            </div>
         </div>
      </div>
    </div>
  </section>

  <!-- Brand Marquee -->
  <section class="py-12 bg-[#ccff00] text-black overflow-hidden transform -rotate-1 skew-y-1">
     <div class="flex whitespace-nowrap gap-12 text-6xl font-display font-black uppercase tracking-tighter">
        <span>Nike</span> <span>Adidas</span> <span>New Balance</span> <span>Asics</span> <span>Salomon</span> <span>Jordan</span> <span>Yeezys</span>
        <span>Nike</span> <span>Adidas</span> <span>New Balance</span> <span>Asics</span> <span>Salomon</span> <span>Jordan</span> <span>Yeezys</span>
     </div>
  </section>

</div>

<script>
  VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
    max: 20,
    speed: 400,
    scale: 1.1,
  });
</script>
