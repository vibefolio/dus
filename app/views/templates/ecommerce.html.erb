<div class="font-sans text-black bg-white min-h-screen">
  <!-- Promo Bar -->
  <div class="bg-black text-white text-[10px] text-center py-2 tracking-widest uppercase">Free Worldwide Shipping on Orders Over $200</div>

  <!-- Nav -->
  <nav class="flex justify-between items-center px-6 py-6 border-b border-gray-100">
    <div class="w-24 flex items-center gap-4">
      <button class="md:hidden" onclick="toggleShopMenu()">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
      </button>
      <a href="#" class="hidden md:block text-xs font-bold uppercase tracking-widest hover:underline">Shop</a>
    </div>
    <div class="text-2xl font-black tracking-tighter uppercase">Aether</div>
    <div class="w-24 flex justify-end gap-4 text-xs font-bold uppercase tracking-widest">
      <a href="#">Search</a>
      <a href="javascript:void(0)" onclick="toggleShopCart()">Cart (<span id="nav-cart-count">0</span>)</a>
    </div>
  </nav>

  <!-- Hero Grid -->
  <section class="grid md:grid-cols-2 h-[80vh]">
    <div class="relative bg-gray-100 overflow-hidden group">
      <img src="https://images.unsplash.com/photo-1539109136881-3be0616acf4b?q=80&w=1000&auto=format&fit=crop" class="w-full h-full object-cover group-hover:scale-105 transition duration-700" alt="Fashion 1">
      <div class="absolute inset-0 flex items-center justify-center md:items-end md:justify-start p-12">
        <div class="bg-white/90 backdrop-blur px-8 py-6 text-center md:text-left">
          <h2 class="text-2xl font-bold mb-2 uppercase tracking-wide">New Arrivals</h2>
          <a href="#" class="text-xs border-b border-black pb-1 hover:text-gray-500 transition">Shop Now</a>
        </div>
      </div>
    </div>
     <div class="relative bg-gray-100 overflow-hidden group">
      <img src="https://images.unsplash.com/photo-1506634572416-48cdfe530110?q=80&w=1000&auto=format&fit=crop" class="w-full h-full object-cover group-hover:scale-105 transition duration-700" alt="Fashion 2">
       <div class="absolute inset-0 flex items-center justify-center md:items-end md:justify-end p-12">
        <div class="bg-white/90 backdrop-blur px-8 py-6 text-center md:text-right">
          <h2 class="text-2xl font-bold mb-2 uppercase tracking-wide">Essentials</h2>
          <a href="#" class="text-xs border-b border-black pb-1 hover:text-gray-500 transition">Explore</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Carousel -->
  <section class="py-20 px-6">
    <div class="flex justify-between items-end mb-12">
      <h3 class="text-xl font-bold uppercase tracking-wide">Trending Now</h3>
      <a href="#" class="text-xs uppercase hover:underline">View All</a>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-12">
      <!-- Item 1 -->
      <div class="group cursor-pointer">
        <div class="aspect-[3/4] bg-gray-100 mb-4 overflow-hidden relative">
           <img src="https://images.unsplash.com/photo-1591047139829-d91aecb6caea?q=80&w=1000&auto=format&fit=crop" class="w-full h-full object-cover group-hover:scale-105 transition">
           <div onclick="addToCart(this)" class="absolute bottom-4 right-4 bg-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition shadow-md hover:bg-black hover:text-white" title="Add to Cart">+</div>
        </div>
        <h4 class="text-sm font-medium">Wool Coat</h4>
        <p class="text-xs text-gray-500 mt-1">$289.00</p>
      </div>
      <!-- Item 2 -->
      <div class="group cursor-pointer">
        <div class="aspect-[3/4] bg-gray-100 mb-4 overflow-hidden relative">
           <img src="https://images.unsplash.com/photo-1576566588028-4147f3842f27?q=80&w=1000&auto=format&fit=crop" class="w-full h-full object-cover group-hover:scale-105 transition">
           <div class="absolute bottom-4 right-4 bg-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition shadow-md">+</div>
        </div>
        <h4 class="text-sm font-medium">Classic Tee</h4>
        <p class="text-xs text-gray-500 mt-1">$45.00</p>
      </div>
      <!-- Item 3 -->
      <div class="group cursor-pointer">
        <div class="aspect-[3/4] bg-gray-100 mb-4 overflow-hidden relative">
           <img src="https://images.unsplash.com/photo-1620799140408-ed5341cd2431?q=80&w=1000&auto=format&fit=crop" class="w-full h-full object-cover group-hover:scale-105 transition">
           <div class="absolute bottom-4 right-4 bg-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition shadow-md">+</div>
        </div>
        <h4 class="text-sm font-medium">Linen Dress</h4>
        <p class="text-xs text-gray-500 mt-1">$120.00</p>
      </div>
      <!-- Item 4 -->
      <div class="group cursor-pointer">
        <div class="aspect-[3/4] bg-gray-100 mb-4 overflow-hidden relative">
           <img src="https://images.unsplash.com/photo-1605763240004-7d93b172d7cd?q=80&w=1000&auto=format&fit=crop" class="w-full h-full object-cover group-hover:scale-105 transition">
           <div class="absolute bottom-4 right-4 bg-white p-2 rounded-full opacity-0 group-hover:opacity-100 transition shadow-md">+</div>
        </div>
        <h4 class="text-sm font-medium">Leather Bag</h4>
        <p class="text-xs text-gray-500 mt-1">$350.00</p>
      </div>
    </div>
  </section>
  <!-- Mobile Menu Overlay -->
  <div id="shop-mobile-menu" class="fixed inset-0 bg-white z-[60] transform -translate-x-full transition-transform duration-300 ease-in-out md:hidden">
    <div class="p-6 flex justify-between items-center border-b border-gray-100">
      <span class="font-black uppercase tracking-tighter text-xl">Menu</span>
      <button onclick="toggleShopMenu()" class="text-2xl">&times;</button>
    </div>
    <nav class="flex flex-col p-6 gap-6 text-2xl font-bold uppercase tracking-tighter">
      <a href="#" onclick="toggleShopMenu()">New Arrivals</a>
      <a href="#" onclick="toggleShopMenu()">Clothing</a>
      <a href="#" onclick="toggleShopMenu()">Accessories</a>
      <a href="#" onclick="toggleShopMenu()">Sale</a>
      <a href="#" onclick="toggleShopMenu()" class="text-sm font-normal tracking-wide mt-4 text-gray-500">Account</a>
      <a href="#" onclick="toggleShopMenu()" class="text-sm font-normal tracking-wide text-gray-500">Support</a>
    </nav>
  </div>

  <!-- Cart Sidebar -->
  <div id="shop-cart" class="fixed inset-y-0 right-0 w-full md:w-96 bg-white z-[70] transform translate-x-full transition-transform duration-300 shadow-2xl flex flex-col font-sans">
    <div class="p-6 border-b border-gray-100 flex justify-between items-center bg-gray-50">
      <h3 class="font-bold uppercase tracking-widest text-xs">Shopping Cart (<span id="cart-panel-count">0</span>)</h3>
      <button onclick="toggleShopCart()" class="text-2xl font-light hover:text-gray-500 transition">&times;</button>
    </div>
    
    <!-- Cart Items Area -->
    <div class="flex-1 p-6 overflow-y-auto" id="cart-items">
       <!-- Empty State -->
       <div class="h-full flex flex-col items-center justify-center text-gray-300" id="cart-empty-msg">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" class="mb-4"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
          <p class="text-sm tracking-wide">Your cart is empty</p>
       </div>
       <!-- Dynamic Items will be appended here -->
    </div>

    <div class="p-6 border-t border-gray-100 bg-gray-50">
      <div class="flex justify-between mb-4 font-bold text-sm">
        <span>Total</span>
        <span id="cart-total">$0.00</span>
      </div>
      <button onclick="alert('Proceeding to checkout...')" class="w-full bg-black text-white py-4 text-xs font-bold uppercase tracking-widest hover:bg-gray-800 transition transform hover:-translate-y-0.5">Checkout</button>
    </div>
  </div>

  <!-- Add to Cart Toast -->
  <div id="toast" class="fixed bottom-6 left-1/2 -translate-x-1/2 bg-black text-white px-6 py-3 rounded-full text-xs font-bold tracking-wide shadow-lg transform translate-y-20 opacity-0 transition-all duration-300 z-[80]">
    Added to Bag
  </div>

  <script>
    let cartCount = 0;
    let cartTotal = 0;

    function toggleShopMenu() {
      const menu = document.getElementById('shop-mobile-menu');
      if (menu.classList.contains('-translate-x-full')) {
        menu.classList.remove('-translate-x-full');
      } else {
        menu.classList.add('-translate-x-full');
      }
    }

    function toggleShopCart() {
      const cart = document.getElementById('shop-cart');
      if (cart.classList.contains('translate-x-full')) {
        cart.classList.remove('translate-x-full');
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
      } else {
        cart.classList.add('translate-x-full');
        document.body.style.overflow = '';
      }
    }

    function addToCart(btn) {
      // Animation feedback
      event.stopPropagation();
      
      // Update Count
      cartCount++;
      document.getElementById('nav-cart-count').innerText = cartCount;
      document.getElementById('cart-panel-count').innerText = cartCount;

      // Extract Price and Add to Item (Simple Simulation)
      const parent = btn.closest('.group');
      const title = parent.querySelector('h4').innerText;
      const priceText = parent.querySelector('p').innerText;
      const price = parseFloat(priceText.replace('$', ''));
      const imgUrl = parent.querySelector('img').src;
      
      cartTotal += price;
      document.getElementById('cart-total').innerText = '$' + cartTotal.toFixed(2);

      // Add Item to Sidebar
      const emptyMsg = document.getElementById('cart-empty-msg');
      if(emptyMsg) emptyMsg.style.display = 'none';

      const itemsContainer = document.getElementById('cart-items');
      const itemHTML = `
        <div class="flex gap-4 mb-6 animate-fade-in text-left">
          <div class="w-16 h-20 bg-gray-100 flex-shrink-0 overflow-hidden">
            <img src="${imgUrl}" class="w-full h-full object-cover">
          </div>
          <div class="flex-1">
            <h4 class="text-xs font-bold uppercase tracking-wide mb-1">${title}</h4>
            <p class="text-xs text-gray-500">Size: M</p>
            <div class="flex justify-between items-center mt-2">
              <span class="text-xs font-bold">${priceText}</span>
              <button class="text-[10px] text-gray-400 underline hover:text-black">Remove</button>
            </div>
          </div>
        </div>
      `;
      itemsContainer.insertAdjacentHTML('afterbegin', itemHTML);

      // Show Toast
      const toast = document.getElementById('toast');
      toast.classList.remove('translate-y-20', 'opacity-0');
      setTimeout(() => {
        toast.classList.add('translate-y-20', 'opacity-0');
      }, 2000);
      
      // Open Cart automatically
      const cart = document.getElementById('shop-cart');
      if (cart.classList.contains('translate-x-full')) {
        toggleShopCart();
      }
    }
  </script>
</div>
