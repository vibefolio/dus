<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Noto+Sans+KR:wght@300;400;500;700&display=swap');
  
  .font-sans { font-family: 'DM Sans', 'Noto Sans KR', sans-serif; }
  
  .horizontal-scroll {
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .horizontal-scroll::-webkit-scrollbar {
    display: none;
  }
</style>

<div class="bg-white text-gray-900 font-sans selection:bg-orange-200 selection:text-orange-900">

  <!-- Promo Banner -->
  <div class="bg-orange-600 text-white text-xs font-bold text-center py-2 uppercase tracking-wide">
    Free delivery on all orders over ₩500,000
  </div>

  <!-- Nav -->
  <nav class="sticky top-0 z-50 bg-white border-b border-gray-100">
    <div class="container mx-auto px-6 h-20 flex justify-between items-center">
      <!-- Mobile Menu -->
      <button class="md:hidden text-2xl">☰</button>
      
      <!-- Logo -->
      <a href="#" class="text-2xl font-bold tracking-tight text-orange-600">
         HAYDEN<span class="text-gray-900">HOME</span>.
      </a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-8 text-sm font-medium text-gray-500">
         <a href="#" class="hover:text-orange-600">New Arrivals</a>
         <a href="#" class="hover:text-orange-600">Living Room</a>
         <a href="#" class="hover:text-orange-600">Kitchen</a>
         <a href="#" class="hover:text-orange-600">Bedroom</a>
         <a href="#" class="text-orange-600 font-bold">Sale</a>
      </div>
      
      <!-- Icons -->
      <div class="flex gap-6 items-center">
         <button class="hover:text-orange-600"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg></button>
         <button class="hover:text-orange-600"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg></button>
         <button class="hover:text-orange-600 relative">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
