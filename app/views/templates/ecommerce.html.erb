<%# Ecommerce Template - 헤이든 홈 (HAYDEN HOME) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Tenor+Sans&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-brand { font-family: 'Tenor Sans', sans-serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.8; }
    .mobile-title { font-size: 40px !important; }
  }

  .grid-pattern {
    background-image: linear-gradient(#e5e7eb 1px, transparent 1px), linear-gradient(90deg, #e5e7eb 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.3;
  }
</style>

<div class="bg-white text-slate-900 font-sans selection:bg-slate-900 selection:text-white min-h-screen overflow-x-hidden relative">
  <div class="fixed inset-0 grid-pattern pointer-events-none"></div>

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-6 bg-white/90 backdrop-blur-md border-b border-slate-100 transition-all duration-300" data-aos="fade-down" data-aos-duration="1000">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-1">
         <span class="font-brand text-2xl tracking-[0.05em] text-slate-900 font-bold cursor-pointer">Hayden<span class="text-slate-400">Home</span></span>
      </div>
      
      <div class="hidden md:flex gap-12 text-[11px] font-sans font-bold tracking-[0.1em] text-slate-500 uppercase">
        <a href="#new" class="hover:text-slate-900 transition">New In</a>
        <a href="#furniture" class="hover:text-slate-900 transition">Furniture</a>
        <a href="#decor" class="hover:text-slate-900 transition">Home Decor</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button onclick="toggleEcommerceModal()" class="text-[11px] font-sans font-bold uppercase tracking-[0.1em] text-slate-500 hover:text-slate-900">Sign In</button>
         <button class="relative p-2 text-slate-900 hover:text-slate-500 transition group">
           <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path><line x1="3" y1="6" x2="21" y2="6"></line><path d="M16 10a4 4 0 0 1-8 0"></path></svg>
           <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
           <!-- Mini Cart Preview (Hover) -->
           <div class="absolute top-full right-0 mt-4 w-64 bg-white border border-slate-100 shadow-xl p-4 hidden group-hover:block z-50 rounded-sm" data-aos="fade-up" data-aos-duration="300">
              <p class="text-xs text-slate-400 mb-2">Cart is empty</p>
              <a href="#" class="block w-full py-2 bg-slate-900 text-white text-[10px] uppercase font-bold text-center hover:bg-slate-700 transition">Shop Now</a>
           </div>
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero with Clean Grid Layout -->
  <header class="min-h-screen pt-24 pb-12 px-6 flex items-center">
    <div class="container mx-auto grid lg:grid-cols-2 gap-12 items-center">
      
      <div class="space-y-10 order-2 lg:order-1 text-center lg:text-left" data-aos="fade-right" data-aos-duration="1200">
         <div class="inline-block bg-slate-100 px-3 py-1 rounded-sm">
            <span class="text-[10px] font-bold text-slate-600 uppercase tracking-widest">Autumn / Winter 2024</span>
         </div>
         
         <h1 class="text-5xl md:text-8xl font-brand leading-[1.05] text-slate-900 mobile-title">
            Modern<br>
            Living<br>
            <span class="italic text-slate-400">Essentials.</span>
         </h1>
         
         <p class="text-slate-500 text-sm md:text-lg leading-relaxed max-w-md mx-auto lg:mx-0 mobile-desc font-medium">
            미니멀리즘의 정수와 실용성의 조화.<br>
            당신의 공간을 채우는 가장 감각적인 큐레이션.
         </p>
         
         <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-6">
            <button class="px-10 py-4 bg-slate-900 text-white font-sans font-bold text-xs uppercase tracking-widest hover:bg-slate-700 transition shadow-lg hover:shadow-xl transform hover:-translate-y-1">
               Shop Collection
            </button>
            <button class="px-10 py-4 border border-slate-200 text-slate-900 font-sans font-bold text-xs uppercase tracking-widest hover:border-slate-900 transition">
               View Lookbook
            </button>
         </div>
      </div>
      
      <div class="order-1 lg:order-2 grid grid-cols-2 gap-4 h-full items-center">
         <div class="space-y-4 translate-y-8" data-aos="fade-up" data-aos-duration="1500" data-aos-delay="200">
            <div class="relative group cursor-pointer overflow-hidden">
               <!-- Main Image -->
               <img src="https://images.unsplash.com/photo-1567016432779-094069958ea5?q=80&w=600" alt="Minimal Chair" class="w-full aspect-[4/5] object-cover grayscale-[20%] group-hover:grayscale-0 transition duration-700 group-hover:scale-110">
               <!-- Hover Image (Detail) - Simplified as overlay/opacity effect for now, could be separate img -->
               
               <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition duration-500"></div>
               
               <!-- Quick View Button -->
               <button class="absolute bottom-20 left-1/2 -translate-x-1/2 bg-white text-slate-900 px-6 py-3 text-[10px] uppercase font-bold tracking-widest opacity-0 group-hover:opacity-100 md:translate-y-4 group-hover:translate-y-0 transition-all duration-500 shadow-lg">
                  Quick View
               </button>

               <div class="absolute bottom-4 left-4 right-4 flex justify-between items-end opacity-0 group-hover:opacity-100 transition duration-300 delay-100">
                  <div class="bg-white/90 backdrop-blur-sm px-4 py-2">
                     <p class="text-[10px] font-bold uppercase tracking-widest">Lounge Chair</p>
                     <p class="text-xs font-serif italic">$850</p>
                  </div>
                  <span class="bg-slate-900 text-white text-[10px] px-2 py-1 font-bold">★ 4.9</span>
               </div>
            </div>
         </div>
         <div class="space-y-4 -translate-y-8" data-aos="fade-down" data-aos-duration="1500" data-aos-delay="400">
             <div class="relative group cursor-pointer overflow-hidden">
               <img src="https://images.unsplash.com/photo-1594026112284-02bb6f3352fe?q=80&w=600" alt="Modern Lamp" class="w-full aspect-[4/5] object-cover grayscale-[20%] group-hover:grayscale-0 transition duration-700 group-hover:scale-110">
               
               <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition duration-500"></div>

               <button class="absolute bottom-20 left-1/2 -translate-x-1/2 bg-white text-slate-900 px-6 py-3 text-[10px] uppercase font-bold tracking-widest opacity-0 group-hover:opacity-100 md:translate-y-4 group-hover:translate-y-0 transition-all duration-500 shadow-lg">
                  Quick View
               </button>

               <div class="absolute bottom-4 left-4 right-4 flex justify-between items-end opacity-0 group-hover:opacity-100 transition duration-300 delay-100">
                  <div class="bg-white/90 backdrop-blur-sm px-4 py-2">
                     <p class="text-[10px] font-bold uppercase tracking-widest">Table Lamp</p>
                     <p class="text-xs font-serif italic">$240</p>
                  </div>
                  <span class="bg-slate-900 text-white text-[10px] px-2 py-1 font-bold">★ 4.8</span>
               </div>
            </div>
            <div class="bg-slate-100 p-6 flex flex-col justify-center items-center text-center aspect-square group cursor-pointer hover:bg-slate-200 transition">
               <p class="font-brand text-4xl mb-2 group-hover:scale-110 transition duration-300">30<span class="text-lg align-top">%</span></p>
               <p class="text-[10px] uppercase font-bold text-slate-500 tracking-widest">Seasonal Sale</p>
            </div>
         </div>
      </div>
    </div>
  </header>
  
  <!-- Categories -->
  <section class="py-20 border-t border-slate-100" data-aos="fade-up">
     <div class="container mx-auto px-6 grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="text-center group cursor-pointer" data-aos="fade-up" data-aos-delay="100">
           <div class="w-full aspect-square bg-slate-50 rounded-full mb-4 overflow-hidden relative">
              <img src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?q=80&w=400" class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
           </div>
           <p class="font-bold text-sm uppercase tracking-wide group-hover:text-slate-500 transition">Furniture</p>
        </div>
        <div class="text-center group cursor-pointer" data-aos="fade-up" data-aos-delay="200">
           <div class="w-full aspect-square bg-slate-50 rounded-full mb-4 overflow-hidden relative">
              <img src="https://images.unsplash.com/photo-1513519245088-0e12902e5a38?q=80&w=400" class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
           </div>
           <p class="font-bold text-sm uppercase tracking-wide group-hover:text-slate-500 transition">Decor</p>
        </div>
        <div class="text-center group cursor-pointer" data-aos="fade-up" data-aos-delay="300">
           <div class="w-full aspect-square bg-slate-50 rounded-full mb-4 overflow-hidden relative">
              <img src="https://images.unsplash.com/photo-1540574163026-643ea20ade25?q=80&w=400" class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
           </div>
           <p class="font-bold text-sm uppercase tracking-wide group-hover:text-slate-500 transition">Lighting</p>
        </div>
        <div class="text-center group cursor-pointer" data-aos="fade-up" data-aos-delay="400">
           <div class="w-full aspect-square bg-slate-50 rounded-full mb-4 overflow-hidden relative">
              <img src="https://images.unsplash.com/photo-1522758971460-1d21eed7dc1d?q=80&w=400" class="w-full h-full object-cover group-hover:scale-110 transition duration-700">
           </div>
           <p class="font-bold text-sm uppercase tracking-wide group-hover:text-slate-500 transition">Art</p>
        </div>
     </div>
  </section>

  <!-- Login Modal -->
  <div id="ecommerce-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-slate-900/40 backdrop-blur-md">
    <div class="bg-white w-full max-w-sm p-12 shadow-2xl relative border-t-4 border-slate-900" data-aos="zoom-in">
      <button onclick="toggleEcommerceModal()" class="absolute top-8 right-8 text-slate-400 hover:text-slate-900 transition text-2xl font-brand">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-2xl font-brand text-slate-900 mb-2">Member Sign In</h2>
        <p class="text-[10px] text-slate-400 font-bold tracking-[0.2em] uppercase">Manage Your Orders</p>
      </div>
      
      <div class="space-y-6">
        <div>
           <label class="block text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-2 ml-1">Email</label>
           <input type="email" placeholder="name@example.com" class="w-full bg-slate-50 border border-slate-200 py-3 px-5 outline-none focus:border-slate-900 transition text-sm font-medium text-slate-900 placeholder-slate-300">
        </div>
        <div>
           <label class="block text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-2 ml-1">Password</label>
           <input type="password" placeholder="••••••••" class="w-full bg-slate-50 border border-slate-200 py-3 px-5 outline-none focus:border-slate-900 transition text-sm font-medium text-slate-900 placeholder-slate-300">
        </div>
        
        <button class="w-full bg-slate-900 text-white py-4 text-[11px] tracking-[0.2em] font-bold uppercase hover:bg-slate-700 transition shadow-lg">
           Sign In
        </button>
        
        <div class="flex justify-center gap-6 pt-2 text-slate-400 text-[10px] tracking-widest uppercase font-bold">
           <a href="#" class="hover:text-slate-900 transition">Create Account</a>
           <span>|</span>
           <a href="#" class="hover:text-slate-900 transition">Find Password</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-20 bg-white text-center px-6 border-t border-slate-100">
     <div class="inline-flex flex-col items-center gap-6 mb-8">
        <span class="font-brand font-bold text-2xl tracking-[0.05em] text-slate-900">Hayden<span class="text-slate-400">Home</span></span>
        <span class="text-[10px] font-bold text-slate-400 tracking-[0.3em] uppercase">Modern Living Curator</span>
     </div>
     <p class="text-[10px] text-slate-300 tracking-[0.5em] uppercase px-6">© 2024 HAYDEN HOME. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleEcommerceModal() {
      const modal = document.getElementById('ecommerce-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
