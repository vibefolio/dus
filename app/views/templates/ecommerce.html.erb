  </div>

  <!-- Nav -->
  <nav class="sticky top-0 z-50 bg-white border-b border-gray-100 shadow-sm">
    <div class="container mx-auto px-6 h-16 flex justify-between items-center">
      <!-- Logo -->
      <a href="#" class="text-xl font-black tracking-tighter text-orange-600 italic">
         HAYDEN<span class="text-gray-900">HOME</span>
      </a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-8 text-sm font-bold text-gray-500 uppercase">
         <a href="#" class="hover:text-orange-600 transition">신상품</a>
         <a href="#" class="hover:text-orange-600 transition">거실</a>
         <a href="#" class="hover:text-orange-600 transition">주방</a>
         <a href="#" class="hover:text-orange-600 transition">침실</a>
         <a href="#" class="text-orange-600">세일</a>
      </div>
      
      <!-- Icons -->
      <div class="flex gap-5 items-center">
         <button class="hover:text-orange-600"><span class="text-lg">🔍</span></button>
         <button class="hover:text-orange-600"><span class="text-lg">👤</span></button>
         <button class="hover:text-orange-600 relative">
