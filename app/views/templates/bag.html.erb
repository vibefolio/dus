<%# Bag Template - 마로캥 (가죽공예) %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Cinzel', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .leather-texture {
    background-color: #3e2723;
    background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%235d4037' fill-opacity='0.4' fill-rule='evenodd'%3E%3Cpath d='M0 0h20v20H0V0zm20 20h20v20H20V20zM20 0h20v20H20V0zM0 20h20v20H0V20z'/%3E%3C/g%3E%3C/svg%3E");
  }
</style>

<div class="bg-[#2d1b15] text-[#d7ccc8] font-sans selection:bg-[#a1887f] selection:text-white">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-8 py-6 mix-blend-difference border-b border-white/10">
    <div class="container mx-auto flex justify-between items-center">
      <div class="font-serif text-2xl tracking-[0.25em] text-[#d7ccc8]">MAROQUIN</div>
      <div class="hidden md:flex gap-12 text-xs font-bold tracking-[0.2em] uppercase text-[#a1887f]">
        <a href="#heritage" class="hover:text-white transition">Heritage</a>
        <a href="#collection" class="hover:text-white transition">Collection</a>
        <a href="#atelier" class="hover:text-white transition">Atelier</a>
      </div>
      <button class="text-[#d7ccc8] hover:text-white transition">
         <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
      </button>
    </div>
  </nav>

  <!-- Hero -->
  <header class="h-screen flex items-center justify-center relative overflow-hidden bg-[#2d1b15]">
    <div class="absolute inset-0 opacity-40">
       <div class="absolute inset-0 bg-gradient-to-r from-[#2d1b15] via-transparent to-[#2d1b15]"></div>
       <img src="https://images.unsplash.com/photo-1548036328-c9fa89d128fa?q=80&w=1920" class="w-full h-full object-cover">
    </div>
    
    <div class="relative z-10 text-center px-6">
      <p class="text-[#a1887f] text-xs tracking-[0.4em] uppercase mb-6 animate-fade-in-up">Handcrafted Since 1980</p>
      <h1 class="text-5xl md:text-7xl font-serif leading-tight text-[#efebe9] mb-8 animate-fade-in-up delay-100">
        Timeless <br> <span class="italic text-[#8d6e63]">Elegance</span>
      </h1>
      <p class="max-w-lg mx-auto text-[#d7ccc8] font-light leading-loose text-sm animate-fade-in-up delay-200">
        최상급 베지터블 가죽과 장인의 손길로 완성되는<br>
        시간이 흐를수록 깊어지는 가치를 선사합니다.
      </p>
      <div class="mt-12 animate-fade-in-up delay-300">
         <a href="#collection" class="border border-[#a1887f] px-8 py-3 text-xs uppercase tracking-[0.2em] hover:bg-[#a1887f] hover:text-[#2d1b15] transition">Discover</a>
      </div>
    </div>
  </header>

  <!-- Heritage / Atelier -->
  <section id="atelier" class="py-32 px-6 leather-texture">
    <div class="container mx-auto grid md:grid-cols-2 gap-16 items-center">
      <div class="relative p-4 border border-[#a1887f]/30" data-tilt data-tilt-max="2">
         <img src="https://images.unsplash.com/photo-1616150638538-23b28b78972e?q=80&w=800" class="w-full h-[500px] object-cover grayscale sepia hover:grayscale-0 transition duration-1000">
         <div class="absolute bottom-8 left-8 bg-[#2d1b15]/90 p-4 border-l-2 border-[#a1887f]">
            <p class="font-serif text-xl">The Atelier</p>
            <p class="text-xs text-[#a1887f] mt-1">Florence, Italy</p>
         </div>
      </div>
      
      <div class="space-y-8">
        <h2 class="text-4xl font-serif leading-relaxed text-[#efebe9]">
          Genuine Leather,<br>Genuine Soul.
        </h2>
        <p class="text-[#d7ccc8] leading-loose font-light">
          마로캥의 모든 제품은 이탈리아 토스카나 지방의 전통적인 태닝 방식을 고수합니다.
          한 땀 한 땀 정성을 다하는 새들 스티치 기법으로
          기계가 흉내 낼 수 없는 견고함과 아름다움을 담아냅니다.
        </p>
        
        <div class="grid grid-cols-2 gap-8 pt-8 border-t border-[#a1887f]/20">
           <div>
              <span class="text-3xl font-serif text-[#a1887f]">45</span>
              <p class="text-[10px] uppercase tracking-widest mt-2 opacity-70">Hours Crafting</p>
           </div>
           <div>
              <span class="text-3xl font-serif text-[#a1887f]">Lifetime</span>
              <p class="text-[10px] uppercase tracking-widest mt-2 opacity-70">Warranty</p>
           </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Collection Grid -->
  <section id="collection" class="py-32 bg-[#2d1b15]">
    <div class="container mx-auto px-6">
       <div class="text-center mb-16">
          <span class="text-[#a1887f] text-xs tracking-[0.2em] uppercase block mb-2">New Season</span>
          <h2 class="text-3xl font-serif text-[#efebe9]">Signature Collection</h2>
       </div>

       <div class="grid md:grid-cols-3 gap-8">
          <!-- Item 1 -->
          <div class="group cursor-pointer">
             <div class="bg-[#1a100c] aspect-[4/5] relative overflow-hidden mb-6 flex items-center justify-center">
                <img src="https://images.unsplash.com/photo-1590874102752-16b71360667e?q=80&w=600" class="w-3/4 object-contain group-hover:scale-110 transition duration-500 drop-shadow-2xl">
                <div class="absolute top-4 right-4 w-2 h-2 rounded-full bg-[#8d6e63]"></div>
             </div>
             <div class="text-center">
                <h3 class="font-serif text-xl mb-1 text-[#efebe9]">Classic Tote</h3>
                <p class="text-xs text-[#a1887f] mb-3">Cognac Brown</p>
                <span class="border-b border-[#a1887f]/50 pb-1 text-sm">₩ 850,000</span>
             </div>
          </div>
          
          <!-- Item 2 -->
          <div class="group cursor-pointer transform md:-translate-y-12">
             <div class="bg-[#1a100c] aspect-[4/5] relative overflow-hidden mb-6 flex items-center justify-center border border-[#a1887f]/20">
                <img src="https://images.unsplash.com/photo-1585489766935-b6d36e2f122e?q=80&w=600" class="w-3/4 object-contain group-hover:scale-110 transition duration-500 drop-shadow-2xl">
             </div>
             <div class="text-center">
                <h3 class="font-serif text-xl mb-1 text-[#efebe9]">Saddle Bag</h3>
                <p class="text-xs text-[#a1887f] mb-3">Olive Green</p>
                <span class="border-b border-[#a1887f]/50 pb-1 text-sm">₩ 620,000</span>
             </div>
          </div>

          <!-- Item 3 -->
          <div class="group cursor-pointer">
             <div class="bg-[#1a100c] aspect-[4/5] relative overflow-hidden mb-6 flex items-center justify-center">
                <img src="https://images.unsplash.com/photo-1566150905458-1bf1fc113f0d?q=80&w=600" class="w-3/4 object-contain group-hover:scale-110 transition duration-500 drop-shadow-2xl">
             </div>
             <div class="text-center">
                <h3 class="font-serif text-xl mb-1 text-[#efebe9]">Briefcase</h3>
                <p class="text-xs text-[#a1887f] mb-3">Dark Chocolate</p>
                <span class="border-b border-[#a1887f]/50 pb-1 text-sm">₩ 1,200,000</span>
             </div>
          </div>
       </div>
       
       <div class="text-center mt-16">
          <button class="px-8 py-3 border border-[#d7ccc8] text-[#d7ccc8] hover:bg-[#d7ccc8] hover:text-[#2d1b15] transition uppercase tracking-[0.2em] text-xs font-bold">
             View All Products
          </button>
       </div>
    </div>
  </section>

</div>

<script>
  VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
    max: 5,
    speed: 400,
  });
</script>
