<%# Bag Template - 마로캥 (가죽공예) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .leather-texture {
    background-color: #3e2723;
    background-image: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%235d4037' fill-opacity='0.3' fill-rule='evenodd'%3E%3Cpath d='M0 0h20v20H0V0zm20 20h20v20H20V20zM20 0h20v20H20V0zM0 20h20v20H0V20z'/%3E%3C/g%3E%3C/svg%3E");
  }
</style>

<div class="bg-[#2d1b15] text-[#d7ccc8] font-sans selection:bg-[#a1887f] selection:text-white">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 md:px-8 py-5 bg-[#2d1b15]/95 backdrop-blur-sm border-b border-[#5d4037]/30">
    <div class="container mx-auto flex justify-between items-center">
      <div class="font-serif text-xl md:text-2xl tracking-wider text-[#efebe9]">마로캥</div>
      <div class="hidden md:flex gap-10 text-sm font-medium tracking-wide text-[#a1887f]">
        <a href="#heritage" class="hover:text-[#efebe9] transition">공방 소개</a>
        <a href="#collection" class="hover:text-[#efebe9] transition">컬렉션</a>
        <a href="#atelier" class="hover:text-[#efebe9] transition">아틀리에</a>
      </div>
      <button class="text-[#d7ccc8] hover:text-[#efebe9] transition p-2">
         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
      </button>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen flex items-center justify-center relative overflow-hidden bg-[#2d1b15] pt-20">
    <div class="absolute inset-0">
       <div class="absolute inset-0 bg-gradient-to-r from-[#2d1b15] via-[#2d1b15]/60 to-[#2d1b15]"></div>
       <img src="https://images.unsplash.com/photo-1548036328-c9fa89d128fa?q=80&w=1920" alt="가죽 공예" class="w-full h-full object-cover opacity-50">
    </div>
    
    <div class="relative z-10 text-center px-6 max-w-3xl mx-auto">
      <p class="text-[#a1887f] text-sm tracking-widest mb-6">Since 1980</p>
      <h1 class="text-4xl md:text-6xl font-serif leading-tight text-[#efebe9] mb-6">
        시간이 만드는<br><span class="text-[#8d6e63]">가치</span>
      </h1>
      <p class="text-[#d7ccc8] font-light leading-relaxed text-base md:text-lg mb-10">
        최상급 베지터블 가죽과 장인의 손길로 완성되는<br class="hidden md:block">
        오래 쓸수록 깊어지는 아름다움을 선사합니다.
      </p>
      <a href="#collection" class="inline-block border border-[#a1887f] px-8 py-3 text-sm tracking-wide hover:bg-[#a1887f] hover:text-[#2d1b15] transition">
        컬렉션 보기
      </a>
    </div>
  </header>

  <!-- Atelier -->
  <section id="atelier" class="py-20 md:py-32 px-6 leather-texture">
    <div class="container mx-auto grid md:grid-cols-2 gap-12 md:gap-16 items-center">
      <div class="relative">
         <img src="https://images.unsplash.com/photo-1616150638538-23b28b78972e?q=80&w=800" alt="공방 작업 모습" class="w-full h-[400px] md:h-[500px] object-cover">
         <div class="absolute bottom-6 left-6 bg-[#2d1b15]/90 p-4 border-l-2 border-[#a1887f]">
            <p class="font-serif text-lg text-[#efebe9]">아틀리에</p>
            <p class="text-xs text-[#a1887f] mt-1">서울 성수동</p>
         </div>
      </div>
      
      <div class="space-y-6">
        <h2 class="text-3xl md:text-4xl font-serif leading-relaxed text-[#efebe9]">
          진정한 가죽,<br>진정한 장인정신
        </h2>
        <p class="text-[#d7ccc8] leading-loose font-light">
          마로캥의 모든 제품은 이탈리아 토스카나 지방의 전통적인 태닝 방식을 고수합니다.
          한 땀 한 땀 정성을 다하는 새들 스티치 기법으로
          기계가 흉내 낼 수 없는 견고함과 아름다움을 담아냅니다.
        </p>
        
        <div class="grid grid-cols-2 gap-6 pt-6 border-t border-[#a1887f]/20">
           <div>
              <span class="text-3xl font-serif text-[#a1887f]">45</span>
              <p class="text-xs tracking-wide mt-2 text-[#d7ccc8]/70">시간의 정성</p>
           </div>
           <div>
              <span class="text-2xl font-serif text-[#a1887f]">평생 보증</span>
              <p class="text-xs tracking-wide mt-2 text-[#d7ccc8]/70">AS 서비스</p>
           </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Collection Grid -->
  <section id="collection" class="py-20 md:py-32 bg-[#2d1b15]">
    <div class="container mx-auto px-6">
       <div class="text-center mb-12 md:mb-16">
          <span class="text-[#a1887f] text-xs tracking-widest block mb-2">NEW SEASON</span>
          <h2 class="text-2xl md:text-3xl font-serif text-[#efebe9]">시그니처 컬렉션</h2>
       </div>

       <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
          <!-- Item 1 -->
          <div class="group cursor-pointer">
             <div class="bg-[#1a100c] aspect-[4/5] relative overflow-hidden mb-5 flex items-center justify-center">
                <img src="https://images.unsplash.com/photo-1590874102752-16b71360667e?q=80&w=600" alt="클래식 토트백" class="w-3/4 object-contain group-hover:scale-105 transition duration-500">
             </div>
             <div class="text-center">
                <h3 class="font-serif text-lg md:text-xl mb-1 text-[#efebe9]">클래식 토트</h3>
                <p class="text-xs text-[#a1887f] mb-3">코냑 브라운</p>
                <span class="text-sm text-[#d7ccc8]">₩ 850,000</span>
             </div>
          </div>
          
          <!-- Item 2 -->
          <div class="group cursor-pointer">
             <div class="bg-[#1a100c] aspect-[4/5] relative overflow-hidden mb-5 flex items-center justify-center border border-[#a1887f]/20">
                <img src="https://images.unsplash.com/photo-1585489766935-b6d36e2f122e?q=80&w=600" alt="새들백" class="w-3/4 object-contain group-hover:scale-105 transition duration-500">
             </div>
             <div class="text-center">
                <h3 class="font-serif text-lg md:text-xl mb-1 text-[#efebe9]">새들백</h3>
                <p class="text-xs text-[#a1887f] mb-3">올리브 그린</p>
                <span class="text-sm text-[#d7ccc8]">₩ 620,000</span>
             </div>
          </div>

          <!-- Item 3 -->
          <div class="group cursor-pointer">
             <div class="bg-[#1a100c] aspect-[4/5] relative overflow-hidden mb-5 flex items-center justify-center">
                <img src="https://images.unsplash.com/photo-1566150905458-1bf1fc113f0d?q=80&w=600" alt="브리프케이스" class="w-3/4 object-contain group-hover:scale-105 transition duration-500">
             </div>
             <div class="text-center">
                <h3 class="font-serif text-lg md:text-xl mb-1 text-[#efebe9]">브리프케이스</h3>
                <p class="text-xs text-[#a1887f] mb-3">다크 초콜릿</p>
                <span class="text-sm text-[#d7ccc8]">₩ 1,200,000</span>
             </div>
          </div>
       </div>
       
       <div class="text-center mt-12 md:mt-16">
          <button class="px-8 py-3 border border-[#d7ccc8] text-[#d7ccc8] hover:bg-[#d7ccc8] hover:text-[#2d1b15] transition text-sm tracking-wide">
             전체 제품 보기
          </button>
       </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 px-6 bg-[#1a100c] border-t border-[#5d4037]/30">
    <div class="container mx-auto text-center">
      <p class="font-serif text-lg text-[#a1887f] mb-2">마로캥</p>
      <p class="text-sm text-[#d7ccc8]/60">서울시 성동구 성수동 123-45</p>
      <p class="text-sm text-[#d7ccc8]/60 mt-1">평일 11:00 - 19:00 | 주말 예약제</p>
    </div>
  </footer>

</div>
