<%# Cloth Template - 블랑 (미니멀 의류 브랜드) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@200;300;400&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .vertical-text {
    writing-mode: vertical-rl;
    text-orientation: mixed;
  }
  
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>

<div class="bg-[#f5f5f0] text-[#333] font-sans selection:bg-[#333] selection:text-white">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-4 flex justify-between items-center bg-white/95 backdrop-blur-sm border-b border-gray-100">
    <div class="font-serif text-xl tracking-wider">블랑</div>
    <div class="hidden md:flex gap-8 text-sm tracking-wide">
      <a href="#collection" class="hover:text-gray-500 transition">컬렉션</a>
      <a href="#about" class="hover:text-gray-500 transition">브랜드</a>
      <a href="#shop" class="hover:text-gray-500 transition">스토어</a>
    </div>
    <button class="text-sm border border-gray-300 px-4 py-2 hover:bg-black hover:text-white hover:border-black transition">장바구니</button>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center pt-16">
     <div class="absolute inset-0 p-4 md:p-12">
        <img src="https://images.unsplash.com/photo-1515347619252-60a6bf4fffce?q=80&w=1920" alt="봄 컬렉션" class="w-full h-full object-cover filter brightness-95">
     </div>
     <div class="absolute bottom-16 left-6 md:left-16 z-10">
        <p class="text-xs tracking-widest mb-3 text-gray-600">2024 Spring Summer</p>
        <h1 class="text-4xl md:text-6xl font-serif leading-tight mb-6">
           고요함 속<br><span class="text-gray-500">형태</span>
        </h1>
        <a href="#collection" class="inline-block border border-gray-400 px-6 py-3 text-sm hover:bg-black hover:text-white hover:border-black transition">
           컬렉션 보기
        </a>
     </div>
  </header>

  <!-- About -->
  <section id="about" class="py-20 md:py-32 px-6 md:px-16 grid md:grid-cols-2 gap-12 items-center bg-[#f5f5f0]">
     <div class="space-y-6">
        <span class="block w-12 h-[1px] bg-black"></span>
        <h2 class="text-3xl md:text-4xl font-serif leading-relaxed">
           "조용한 순간을 위한<br><span class="text-gray-500">디자인</span>"
        </h2>
        <p class="text-sm font-light leading-loose text-gray-600 max-w-md">
           불필요한 장식을 배제하고 본질에 집중합니다.
           최고급 천연 소재와 정교한 테일러링으로
           시간이 흘러도 변하지 않는 가치를 만듭니다.
        </p>
        <div class="grid grid-cols-2 gap-6 pt-6 text-xs tracking-wide text-gray-500">
           <div>
              <span class="block text-2xl text-black font-serif mb-1">100%</span>
              유기농 코튼
           </div>
           <div>
              <span class="block text-2xl text-black font-serif mb-1">핸드메이드</span>
              서울에서 제작
           </div>
        </div>
     </div>
     <div class="relative">
        <div class="absolute top-8 right-8 w-full h-full border border-gray-300 -z-10"></div>
        <img src="https://images.unsplash.com/photo-1532453288672-3a27e9be9efd?q=80&w=800" alt="작업 모습" class="w-full shadow-lg">
     </div>
  </section>

  <!-- Lookbook -->
  <section id="collection" class="py-20 md:py-24 overflow-x-hidden bg-white">
     <div class="px-6 md:px-16 mb-12 flex justify-between items-end">
        <h2 class="text-3xl font-serif">룩북</h2>
        <span class="text-xs tracking-wide text-gray-500">드래그하여 스크롤 →</span>
     </div>
     
     <div class="flex gap-4 md:gap-6 px-6 md:px-16 overflow-x-auto pb-6 hide-scrollbar snap-x">
        <!-- Item 1 -->
        <div class="min-w-[280px] md:min-w-[350px] snap-center group cursor-pointer">
           <div class="overflow-hidden mb-4 relative">
              <img src="https://images.unsplash.com/photo-1550614000-4b9519e09966?q=80&w=600" alt="린넨 드레스" class="w-full h-[400px] md:h-[480px] object-cover transition duration-500 group-hover:scale-105">
              <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                 <span class="text-white font-serif text-xl">Look 01</span>
              </div>
           </div>
           <p class="font-serif text-lg border-b border-gray-200 pb-2 flex justify-between">
              <span>린넨 드레스</span>
              <span class="text-sm font-sans font-light">₩ 180,000</span>
           </p>
        </div>
        
        <!-- Item 2 -->
        <div class="min-w-[280px] md:min-w-[350px] snap-center group cursor-pointer">
           <div class="overflow-hidden mb-4 relative">
              <img src="https://images.unsplash.com/photo-1549575917-062e24029283?q=80&w=600" alt="울 가디건" class="w-full h-[400px] md:h-[480px] object-cover transition duration-500 group-hover:scale-105">
              <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                 <span class="text-white font-serif text-xl">Look 02</span>
              </div>
           </div>
           <p class="font-serif text-lg border-b border-gray-200 pb-2 flex justify-between">
              <span>울 가디건</span>
              <span class="text-sm font-sans font-light">₩ 150,000</span>
           </p>
        </div>
        
        <!-- Item 3 -->
        <div class="min-w-[280px] md:min-w-[350px] snap-center group cursor-pointer">
           <div class="overflow-hidden mb-4 relative">
              <img src="https://images.unsplash.com/photo-1516762689617-e1cffcef479d?q=80&w=600" alt="와이드 팬츠" class="w-full h-[400px] md:h-[480px] object-cover transition duration-500 group-hover:scale-105">
              <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                 <span class="text-white font-serif text-xl">Look 03</span>
              </div>
           </div>
           <p class="font-serif text-lg border-b border-gray-200 pb-2 flex justify-between">
              <span>와이드 팬츠</span>
              <span class="text-sm font-sans font-light">₩ 120,000</span>
           </p>
        </div>
     </div>
  </section>

  <!-- Footer -->
  <footer class="bg-[#1a1a1a] text-white py-16 md:py-20 px-6 md:px-16">
     <div class="grid md:grid-cols-2 gap-12">
        <div>
           <h3 class="font-serif text-2xl mb-6">뉴스레터 구독</h3>
           <form class="flex border-b border-white/30 pb-3 max-w-sm">
              <input type="email" placeholder="이메일 주소" class="bg-transparent w-full outline-none placeholder-gray-500 font-light text-sm">
              <button class="text-xs tracking-wide hover:text-gray-400">구독</button>
           </form>
        </div>
        <div class="flex flex-col justify-between text-xs font-light tracking-wide text-gray-500 md:text-right leading-loose">
           <p>© 2024 블랑<br>All Rights Reserved</p>
           <div class="flex gap-4 md:justify-end mt-4">
             <a href="#" class="hover:text-white">인스타그램</a>
             <a href="#" class="hover:text-white">카카오톡</a>
           </div>
        </div>
     </div>
  </footer>

</div>
