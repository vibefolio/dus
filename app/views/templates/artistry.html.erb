<%# Artistry Template - MUA 진 (메이크업 아티스트) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
</style>

<div class="bg-black text-white font-sans selection:bg-[#d4af37] selection:text-black">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-5 bg-black/90 backdrop-blur-sm border-b border-white/10">
     <div class="flex justify-between items-center">
        <a href="#" class="font-serif text-xl text-[#d4af37]">MUA 진</a>
        <div class="flex gap-8 text-xs tracking-wide">
           <a href="#work" class="hidden md:block hover:text-[#d4af37] transition">작품</a>
           <a href="#about" class="hidden md:block hover:text-[#d4af37] transition">프로필</a>
           <a href="#contact" class="hover:text-[#d4af37] transition">예약</a>
        </div>
     </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center overflow-hidden pt-16">
     <div class="absolute inset-0 opacity-40">
        <img src="https://images.unsplash.com/photo-1522337660859-02fbefca4702?q=80&w=1920" alt="메이크업 아티스트" class="w-full h-full object-cover grayscale">
     </div>
     
     <div class="relative z-10 text-center px-6">
        <p class="text-xs tracking-widest mb-6 text-gray-400">Professional Makeup Artist</p>
        <h1 class="text-5xl md:text-7xl font-serif mb-6 leading-tight">
           당신의<br><span class="text-[#d4af37]">아름다움</span>을<br>발견하다
        </h1>
        <div class="w-[1px] h-16 bg-white/30 mx-auto mt-10"></div>
     </div>
  </header>

  <!-- About -->
  <section id="about" class="py-20 md:py-32 px-6 bg-[#0a0a0a]">
     <div class="container mx-auto grid md:grid-cols-2 gap-16 items-center">
        <div class="relative">
           <div class="aspect-[3/4] overflow-hidden">
              <img src="https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?q=80&w=800" alt="메이크업 아티스트 프로필" class="w-full h-full object-cover grayscale hover:grayscale-0 transition duration-500">
           </div>
        </div>
        
        <div class="space-y-6">
           <h2 class="font-serif text-4xl text-[#d4af37]">박진 원장</h2>
           <p class="font-light leading-loose text-gray-400">
              청담동 15년 경력의 노하우로
              당신이 가진 본연의 아름다움을 찾아드립니다.
              웨딩, 화보, 방송 메이크업 전문.
           </p>
           <div class="grid grid-cols-2 gap-6 pt-6 border-t border-white/10">
              <div>
                 <p class="font-serif text-2xl mb-1">1,500+</p>
                 <p class="text-xs text-gray-500">웨딩 메이크업</p>
              </div>
              <div>
                 <p class="font-serif text-2xl mb-1">에디터 초이스</p>
                 <p class="text-xs text-gray-500">브랜드 협업</p>
              </div>
           </div>
        </div>
     </div>
  </section>

  <!-- Gallery -->
  <section id="work" class="py-20 md:py-32">
     <div class="container mx-auto px-6 mb-12">
        <h2 class="font-serif text-3xl text-center text-[#d4af37]">작품 갤러리</h2>
     </div>
     
     <div class="grid grid-cols-2 md:grid-cols-3 gap-1">
        <div class="aspect-square md:aspect-auto overflow-hidden group relative cursor-pointer">
           <img src="https://images.unsplash.com/photo-1596704017254-9b1b1c676233?q=80&w=600" alt="에디토리얼" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
           <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
              <span class="font-serif text-xl">에디토리얼</span>
           </div>
        </div>
        <div class="aspect-square md:aspect-auto overflow-hidden group relative cursor-pointer">
           <img src="https://images.unsplash.com/photo-1595867948259-7df9f2e32a26?q=80&w=600" alt="웨딩 메이크업" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
           <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
              <span class="font-serif text-xl">웨딩</span>
           </div>
        </div>
        <div class="aspect-square md:aspect-auto overflow-hidden group relative cursor-pointer">
           <img src="https://images.unsplash.com/photo-1516975080664-ed2fc6a32937?q=80&w=600" alt="룩북" class="w-full h-full object-cover transition duration-500 group-hover:scale-105">
           <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
              <span class="font-serif text-xl">룩북</span>
           </div>
        </div>
     </div>
  </section>
  
  <!-- Booking -->
  <section id="contact" class="py-20 md:py-32 px-6 bg-[#0a0a0a] text-center">
     <div class="max-w-md mx-auto border border-[#d4af37] p-10 relative">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-[#0a0a0a] px-4 font-serif text-[#d4af37] text-sm">예약</div>
        
        <h3 class="font-serif text-2xl mb-6">예약 문의</h3>
        <p class="text-gray-500 text-sm mb-8 font-light">
           특별한 날을 위한 완벽한 준비.<br>
           최소 2주 전 예약을 권장 드립니다.
        </p>
        
        <form class="space-y-5">
           <input type="text" placeholder="이름" class="w-full bg-transparent border-b border-white/20 py-3 outline-none focus:border-[#d4af37] transition text-center">
           <input type="tel" placeholder="연락처" class="w-full bg-transparent border-b border-white/20 py-3 outline-none focus:border-[#d4af37] transition text-center">
           <button class="w-full bg-[#d4af37] text-black font-bold py-4 mt-6 hover:bg-white transition text-sm tracking-wide">
              예약 요청
           </button>
        </form>
     </div>
  </section>

  <!-- Footer -->
  <footer class="py-10 px-6 bg-black text-center border-t border-white/10">
    <p class="font-serif text-lg text-[#d4af37] mb-2">MUA 진</p>
    <p class="text-sm text-gray-500">서울시 강남구 청담동 123-45</p>
  </footer>

</div>
