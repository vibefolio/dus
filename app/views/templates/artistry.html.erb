<%# Artistry Template - MUA JIN (메이크업 아티스트) %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.0/vanilla-tilt.min.js"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,700;1,400&family=Noto+Sans+KR:wght@300;400&display=swap');
  
  .font-serif { font-family: 'Bodoni Moda', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }
  
  .cursor-dot {
    width: 8px;
    height: 8px;
    background: white;
    border-radius: 50%;
    position: fixed;
    pointer-events: none;
    z-index: 9999;
    mix-blend-mode: difference;
    transition: transform 0.2s;
  }
  
  .before-after-container {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
  }
  .before-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('https://images.unsplash.com/photo-1512413914633-b5043f4041ea?q=80&w=800');
    background-size: cover;
    background-position: center;
  }
  .after-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 50%;
    height: 100%;
    background-image: url('https://images.unsplash.com/photo-1526045612212-70caf35c14df?q=80&w=800');
    background-size: cover;
    background-position: center;
    border-right: 2px solid white;
  }
</style>

<div class="bg-black text-white font-sans selection:bg-[#d4af37] selection:text-black cursor-none" id="app">
  <div class="cursor-dot hidden md:block"></div>

  <!-- Nav -->
  <nav class="fixed w-full z-50 p-6 mix-blend-difference">
     <div class="flex justify-between items-end">
        <a href="#" class="font-serif text-3xl italic">MUA JIN</a>
        <div class="flex gap-8 text-[10px] tracking-[0.3em] font-light uppercase">
           <a href="#work" class="hover:text-gray-400 transition">Work</a>
           <a href="#about" class="hover:text-gray-400 transition">Profile</a>
           <a href="#contact" class="hover:text-gray-400 transition">Contact</a>
        </div>
     </div>
  </nav>

  <!-- Hero -->
  <header class="h-screen relative flex items-center justify-center overflow-hidden">
     <div class="absolute inset-0 opacity-40">
        <img src="https://images.unsplash.com/photo-1522337660859-02fbefca4702?q=80&w=1920" class="w-full h-full object-cover grayscale transition duration-1000 hover:scale-105 hover:grayscale-0">
     </div>
     
     <div class="relative z-10 text-center mix-blend-difference cursor-none">
        <p class="text-[10px] tracking-[0.5em] uppercase mb-8">Professional Makeup Artist</p>
        <h1 class="text-6xl md:text-9xl font-serif italic mb-4">
           Reveal Your <br> Inner Glow
        </h1>
        <div class="w-[1px] h-24 bg-white mx-auto mt-12 animate-bounce"></div>
     </div>
  </header>

  <!-- About -->
  <section id="about" class="py-32 px-6 bg-[#0a0a0a]">
     <div class="container mx-auto grid md:grid-cols-2 gap-24 items-center">
        <div class="relative">
           <div class="aspect-[3/4] overflow-hidden grayscale hover:grayscale-0 transition duration-1000" data-tilt>
              <img src="https://images.unsplash.com/photo-1487412720507-e7ab37603c6f?q=80&w=800" class="w-full h-full object-cover">
           </div>
           <div class="absolute -bottom-10 -right-10 font-serif text-8xl text-[#d4af37] opacity-20 -z-10">JIN</div>
        </div>
        
        <div class="space-y-8">
           <h2 class="font-serif text-5xl italic text-[#d4af37]">Park Jin</h2>
           <p class="font-light leading-loose text-gray-400 max-w-sm">
              청담동 15년 경력의 노하우로
              당신이 가진 본연의 아름다움을 찾아드립니다.
              웨딩, 화보, 방송 메이크업 전문.
           </p>
           <div class="grid grid-cols-2 gap-8 pt-8 border-t border-white/10">
              <div>
                 <p class="font-serif text-2xl mb-2">1,500+</p>
                 <p class="text-[10px] uppercase tracking-widest text-gray-500">Weddings</p>
              </div>
              <div>
                 <p class="font-serif text-2xl mb-2">Editor's</p>
                 <p class="text-[10px] uppercase tracking-widest text-gray-500">Choice</p>
              </div>
           </div>
        </div>
     </div>
  </section>

  <!-- Gallery -->
  <section id="work" class="py-32">
     <div class="container mx-auto px-6 mb-16">
        <h2 class="font-serif text-4xl italic text-center text-[#d4af37]">Selected Works</h2>
     </div>
     
     <div class="grid grid-cols-2 md:grid-cols-3 gap-1">
        <div class="aspect-[3/4] md:aspect-square overflow-hidden group relative cursor-pointer">
           <img src="https://images.unsplash.com/photo-1596704017254-9b1b1c676233?q=80&w=600" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
           <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition duration-300 flex items-center justify-center">
              <span class="font-serif italic text-2xl">Editorial</span>
           </div>
        </div>
        <div class="aspect-[3/4] md:aspect-square overflow-hidden group relative cursor-pointer">
           <img src="https://images.unsplash.com/photo-1595867948259-7df9f2e32a26?q=80&w=600" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
           <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition duration-300 flex items-center justify-center">
              <span class="font-serif italic text-2xl">Wedding</span>
           </div>
        </div>
        <div class="aspect-[3/4] md:aspect-square overflow-hidden group relative cursor-pointer">
           <img src="https://images.unsplash.com/photo-1516975080664-ed2fc6a32937?q=80&w=600" class="w-full h-full object-cover transition duration-700 group-hover:scale-110">
           <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition duration-300 flex items-center justify-center">
              <span class="font-serif italic text-2xl">Lookbook</span>
           </div>
        </div>
     </div>
  </section>
  
  <!-- Booking -->
  <section id="contact" class="py-32 px-6 bg-[#0a0a0a] text-center">
     <div class="max-w-xl mx-auto border border-[#d4af37] p-12 relative">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-[#0a0a0a] px-4 font-serif italic text-[#d4af37]">Reservation</div>
        
        <h3 class="font-serif text-3xl mb-8">Make an Appointment</h3>
        <p class="text-gray-500 text-sm mb-10 font-light">
           특별한 날을 위한 완벽한 준비.<br>
           최소 2주 전 예약을 권장 드립니다.
        </p>
        
        <form class="space-y-6">
           <input type="text" placeholder="Name" class="w-full bg-transparent border-b border-white/20 py-3 outline-none focus:border-[#d4af37] transition font-serif text-center">
           <input type="tel" placeholder="Phone" class="w-full bg-transparent border-b border-white/20 py-3 outline-none focus:border-[#d4af37] transition font-serif text-center">
           <button class="w-full bg-[#d4af37] text-black font-bold py-4 mt-8 hover:bg-white transition uppercase text-xs tracking-widest">
              Send Request
           </button>
        </form>
     </div>
  </section>

  <!-- Custom Cursor Script -->
  <script>
    const cursor = document.querySelector('.cursor-dot');
    document.addEventListener('mousemove', (e) => {
       cursor.style.left = e.clientX + 'px';
       cursor.style.top = e.clientY + 'px';
    });
    
    document.addEventListener('mousedown', () => {
       cursor.style.transform = 'scale(2)';
    });
    
    document.addEventListener('mouseup', () => {
       cursor.style.transform = 'scale(1)';
    });
    
    VanillaTilt.init(document.querySelectorAll("[data-tilt]"), {
      max: 5,
      speed: 400,
      glare: true,
      "max-glare": 0.2,
    });
  </script>
</div>
