<%# Artistry Template - MUA 진 (JIN Artistry) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Nanum+Myeongjo:wght@400;700;800&family=Noto+Sans+KR:wght@300;400;500;700;900&display=swap');
  
  .font-serif { font-family: 'Nanum Myeongjo', serif; }
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 36px !important; }
  }
</style>

<div class="bg-[#0c0c0c] text-[#e5e5e5] font-sans selection:bg-[#c9a050] selection:text-black min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 bg-[#0c0c0c]/9 worst backdrop-blur-md border-b border-white/5">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-4">
         <span class="font-serif text-2xl text-[#c9a050] tracking-[0.4em] font-black uppercase">JIN</span>
      </div>
      
      <div class="hidden md:flex gap-12 text-[10px] font-bold uppercase tracking-[0.4em] text-gray-500">
        <a href="#work" class="hover:text-[#c9a050] transition">Archives</a>
        <a href="#about" class="hover:text-[#c9a050] transition">Director</a>
        <a href="#contact" class="hover:text-[#c9a050] transition">Booking</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button onclick="toggleArtistryModal()" class="text-[10px] font-bold uppercase tracking-[0.4em] text-gray-500 hover:text-[#c9a050]">Studio Access</button>
         <button class="bg-[#c9a050] text-[#0c0c0c] px-6 py-2.5 rounded-sm font-black text-[10px] tracking-widest uppercase hover:bg-white transition shadow-xl shadow-[#c9a050]/10">
           Inquiry
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center overflow-hidden pt-20">
    <div class="absolute inset-0 grayscale opacity-30 brightness-[0.4]">
       <img src="https://images.unsplash.com/photo-1522337660859-02fbefca4702?q=80&w=1920" alt="메이크업" class="w-full h-full object-cover">
    </div>
    <div class="absolute inset-0 bg-gradient-to-b from-[#0c0c0c] via-transparent to-[#0c0c0c]"></div>
    
    <div class="container mx-auto px-6 relative z-10 text-center space-y-10">
      <div class="w-[1px] h-20 bg-[#c9a050]/50 mx-auto mb-10"></div>
      <p class="font-serif text-xl md:text-2xl italic tracking-[0.4em] text-[#c9a050]">The Art of Authentic Beauty</p>
      <h1 class="text-5xl md:text-9xl font-serif leading-none tracking-tighter text-white mobile-title">
         당신 본연의<br><span class="italic">아름다움을 조각하다.</span>
      </h1>
      <p class="text-gray-500 text-sm md:text-xl leading-relaxed max-w-2xl mx-auto mobile-desc">
         정교한 터치와 집요한 탐구. JIN Artistry는 유행을 쫓는 메이크업이 아닌,<br>
         당신이 가진 고유의 결을 가장 선명하게 빛내줄 밸런스를 제안합니다.
      </p>
      <div class="pt-8">
         <a href="#work" class="inline-flex items-center gap-6 text-white text-[10px] font-black uppercase tracking-[0.4em] group">
            View Archives <span class="group-hover:translate-x-2 transition text-[#c9a050]">→</span>
         </a>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="artistry-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/8 worst backdrop-blur-md">
    <div class="bg-[#111111] w-full max-w-sm p-12 shadow-2xl relative border border-[#c9a050]/20 rounded-sm">
      <button onclick="toggleArtistryModal()" class="absolute top-10 right-10 text-gray-500 hover:text-[#c9a050] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-serif tracking-[0.4em] text-white mb-2 font-black uppercase">STUDIO_GATE</h2>
        <p class="text-[9px] text-[#c9a050] font-bold tracking-[0.3em] uppercase">Private Booking Management</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="CONFIRMATION CODE" class="w-full bg-white/5 border border-white/5 py-5 px-6 outline-none focus:border-[#c9a050] transition text-[11px] font-black tracking-widest text-[#c9a050] uppercase">
        <button class="w-full bg-[#c9a050] text-[#0c0c0c] py-5 rounded-sm text-[10px] tracking-[0.4em] font-black uppercase hover:bg-white transition shadow-lg">
           Identify Session
        </button>
        <div class="flex justify-center gap-10 pt-4">
           <a href="#" class="text-[9px] text-gray-500 tracking-[0.2em] font-bold uppercase hover:text-white transition font-serif italic">New Client</a>
           <a href="#" class="text-[9px] text-gray-500 tracking-[0.2em] font-bold uppercase hover:text-white transition font-serif italic">Inquiry</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-24 bg-[#0c0c0c] text-center px-6 border-t border-white/5">
     <div class="inline-flex items-center gap-6 mb-8">
        <span class="font-serif text-3xl tracking-[0.4em] font-black uppercase text-[#c9a050]">JIN</span>
        <span class="w-12 h-[1px] bg-white/10"></span>
        <span class="text-[10px] font-bold text-gray-600 tracking-[0.4em] uppercase">Directors Studio Seoul</span>
     </div>
     <p class="text-[10px] text-white/5 tracking-[0.6em] uppercase px-6">© 2024 JIN ARTISTRY. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleArtistryModal() {
      const modal = document.getElementById('artistry-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
