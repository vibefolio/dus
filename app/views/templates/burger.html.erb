<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Burger House - Authentic American Diner</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Anton&family=Bebas+Neue&family=Righteous&display=swap" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'diner-red': '#E11D48',
            'diner-yellow': '#FACC15',
            'diner-offwhite': '#FFFBEB',
          },
          fontFamily: {
            'display': ['Anton', 'sans-serif'],
            'retro': ['Righteous', 'cursive'],
            'condensed': ['Bebas Neue', 'sans-serif'],
          }
        }
      }
    }
  </script>
</head>
<body class="bg-diner-offwhite font-sans overflow-x-hidden">

  <!-- Sticky Nav -->
  <nav class="fixed w-full z-50 bg-diner-red text-white py-4 px-6 md:px-12 flex justify-between items-center shadow-lg border-b-4 border-black">
    <div class="font-retro text-2xl md:text-3xl tracking-wide flex items-center gap-2">
      <span>üçî</span> BURGER HOUSE
    </div>
    <div class="hidden md:flex gap-8 font-condensed text-xl tracking-wider">
      <a href="#menu" class="hover:text-diner-yellow transition">MENU</a>
      <a href="#location" class="hover:text-diner-yellow transition">LOCATION</a>
      <a href="#about" class="hover:text-diner-yellow transition">OUR STORY</a>
    </div>
    <button onclick="toggleBurgerOrder()" class="bg-diner-yellow text-black font-condensed text-xl px-6 py-2 rounded-lg border-2 border-black hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
      ORDER ONLINE
    </button>
  </nav>

  <!-- Hero -->
  <header class="relative pt-24 min-h-screen flex items-center justify-center overflow-hidden bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-yellow-100 to-diner-offwhite">
    <!-- Checkerboard Pattern Background -->
    <div class="absolute inset-x-0 bottom-0 h-24 bg-[repeating-linear-gradient(45deg,#000_25%,transparent_25%,transparent_75%,#000_75%,#000),repeating-linear-gradient(45deg,#000_25%,#fff_25%,#fff_75%,#000_75%,#000)] bg-[length:10px_10px] bg-bottom opacity-10"></div>
    
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center relative z-10">
      <div class="text-center md:text-left space-y-6">
        <span class="inline-block px-4 py-1 bg-black text-diner-yellow font-bold uppercase transform -rotate-2">Since 1988</span>
        <h1 class="text-6xl md:text-9xl font-display uppercase leading-none text-diner-red drop-shadow-[5px_5px_0px_rgba(0,0,0,1)]">
          JUICY <br> <span class="text-black">BEAST</span>
        </h1>
        <p class="text-xl font-bold text-gray-700 max-w-md mx-auto md:mx-0">
          100% Premium Beef. Handmade Buns. Secret Sauce. 
          Taste the legend.
        </p>
        <button onclick="toggleBurgerOrder()" class="mt-8 bg-black text-white px-10 py-5 font-condensed text-3xl rounded-xl border-4 border-transparent hover:border-black hover:bg-white hover:text-black transition transform hover:-rotate-1">
          GRAB A BITE ‚ûî
        </button>
      </div>
      
      <div class="relative group">
        <div class="absolute inset-0 bg-diner-yellow rounded-full transform scale-90 translate-y-10 group-hover:scale-100 transition duration-500"></div>
        <img src="https://images.unsplash.com/photo-1568901346375-23c9450c58cd?q=80&w=800" class="relative z-10 w-full object-contain transform group-hover:scale-110 group-hover:-rotate-6 transition duration-500 drop-shadow-2xl">
        <!-- Floating Price Tag -->
        <div class="absolute top-10 right-10 bg-diner-red text-white w-24 h-24 rounded-full flex items-center justify-center font-display text-3xl border-4 border-white shadow-xl animate-bounce z-20">
          $12
        </div>
      </div>
    </div>
  </header>

  <!-- Marquee -->
  <div class="bg-black text-diner-yellow py-4 overflow-hidden border-y-4 border-diner-red">
    <div class="flex whitespace-nowrap gap-12 font-condensed text-4xl animate-[marquee_10s_linear_infinite]">
      <span>‚òÖ BEST BURGERS IN TOWN</span>
      <span>‚òÖ OPEN 24/7</span>
      <span>‚òÖ FREE FRIES FRIDAY</span>
      <span>‚òÖ MILKSHAKES TO DIE FOR</span>
      <span>‚òÖ BEST BURGERS IN TOWN</span>
      <span>‚òÖ OPEN 24/7</span>
      <span>‚òÖ FREE FRIES FRIDAY</span>
    </div>
  </div>

  <!-- Menu Grid -->
  <section id="menu" class="py-24 px-6">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-5xl md:text-7xl font-display text-center mb-16 uppercase">Our <span class="text-diner-red">Favorites</span></h2>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="bg-white border-4 border-black rounded-3xl p-6 shadow-[8px_8px_0px_0px_rgba(225,29,72,1)] hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition cursor-pointer" onclick="toggleBurgerOrder()">
          <img src="https://images.unsplash.com/photo-1594212699903-ec8a3eca50f5?q=80&w=600" class="w-full h-48 object-cover rounded-xl border-2 border-gray-200 mb-6">
          <h3 class="font-display text-3xl mb-2">Triple Cheese</h3>
          <p class="font-bold text-gray-500 text-sm mb-4">Beef patty, cheddar, swiss, mozzarella, caramelized onions.</p>
          <div class="flex justify-between items-center">
            <span class="font-retro text-2xl text-diner-red">$14.99</span>
            <button class="bg-black text-white px-4 py-2 rounded-lg font-condensed text-lg">ADD +</button>
          </div>
        </div>
        <!-- Card 2 -->
        <div class="bg-white border-4 border-black rounded-3xl p-6 shadow-[8px_8px_0px_0px_rgba(250,204,21,1)] hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition cursor-pointer" onclick="toggleBurgerOrder()">
          <img src="https://images.unsplash.com/photo-1550547660-d9450f859349?q=80&w=600" class="w-full h-48 object-cover rounded-xl border-2 border-gray-200 mb-6">
          <h3 class="font-display text-3xl mb-2">Classic Smash</h3>
          <p class="font-bold text-gray-500 text-sm mb-4">Double smashed patty, lettuce, tomato, house pickles.</p>
          <div class="flex justify-between items-center">
            <span class="font-retro text-2xl text-diner-red">$11.99</span>
            <button class="bg-black text-white px-4 py-2 rounded-lg font-condensed text-lg">ADD +</button>
          </div>
        </div>
        <!-- Card 3 -->
        <div class="bg-white border-4 border-black rounded-3xl p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition cursor-pointer" onclick="toggleBurgerOrder()">
          <img src="https://images.unsplash.com/photo-1579306194872-64d3b7bac4c2?q=80&w=600" class="w-full h-48 object-cover rounded-xl border-2 border-gray-200 mb-6">
          <h3 class="font-display text-3xl mb-2">Spicy Chicken</h3>
          <p class="font-bold text-gray-500 text-sm mb-4">Crispy fried chicken, sriracha mayo, coleslaw.</p>
          <div class="flex justify-between items-center">
            <span class="font-retro text-2xl text-diner-red">$12.99</span>
            <button class="bg-black text-white px-4 py-2 rounded-lg font-condensed text-lg">ADD +</button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Order Modal -->
  <div id="burger-modal" class="fixed inset-0 bg-black/80 z-[60] hidden flex items-center justify-center p-4 backdrop-blur-sm">
    <div class="bg-diner-offwhite w-full max-w-lg border-8 border-diner-red rounded-[2rem] p-8 shadow-2xl relative">
      <button onclick="toggleBurgerOrder()" class="absolute -top-6 -right-6 bg-black text-white w-12 h-12 rounded-full font-bold text-xl border-4 border-white hover:scale-110 transition">X</button>
      
      <div class="text-center mb-8">
        <h2 class="font-display text-4xl uppercase mb-2">Start Order</h2>
        <p class="font-bold text-gray-500">Pick up or Delivery</p>
      </div>

      <form class="space-y-4" onsubmit="event.preventDefault(); alert('Order Placed! Check your email for juicy details.'); toggleBurgerOrder();">
        <div class="flex gap-4">
          <button type="button" class="flex-1 py-3 bg-diner-yellow border-2 border-black font-condensed text-xl rounded-lg hover:bg-yellow-300">PICK UP</button>
          <button type="button" class="flex-1 py-3 bg-white border-2 border-gray-300 font-condensed text-xl rounded-lg text-gray-400 hover:border-black hover:text-black">DELIVERY</button>
        </div>
        <input type="text" placeholder="Your Name" class="w-full p-4 border-2 border-black rounded-lg font-bold bg-white focus:outline-none focus:ring-4 focus:ring-diner-yellow">
        <input type="tel" placeholder="Phone Number" class="w-full p-4 border-2 border-black rounded-lg font-bold bg-white focus:outline-none focus:ring-4 focus:ring-diner-yellow">
        
        <div class="bg-white border-2 border-black rounded-lg p-4">
          <div class="font-condensed text-lg mb-2 text-gray-500">YOUR CART</div>
          <div class="flex justify-between font-bold text-xl">
            <span>Triple Cheese Burger</span>
            <span>$14.99</span>
          </div>
        </div>

        <button class="w-full py-4 bg-diner-red text-white font-display text-2xl uppercase rounded-xl border-b-8 border-[#9f1239] hover:border-b-0 hover:translate-y-2 transition">
          Checkout Now
        </button>
      </form>
    </div>
  </div>

  <script>
    function toggleBurgerOrder() {
      const modal = document.getElementById('burger-modal');
      if(modal.classList.contains('hidden')) {
        modal.classList.remove('hidden');
      } else {
        modal.classList.add('hidden');
      }
    }
  </script>
</body>
</html>
