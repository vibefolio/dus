<%# Burger Template - 버거 조인트 (Burger Joint) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;700;900&display=swap');
  
  .font-sans { font-family: 'Noto Sans KR', sans-serif; }

  @media (max-width: 768px) {
    .mobile-desc { font-size: 14px !important; line-height: 1.6; }
    .mobile-title { font-size: 36px !important; }
  }
</style>

<div class="bg-[#0f0f0f] text-[#f8f8f8] font-sans selection:bg-[#ff9f1c] selection:text-black min-h-screen overflow-x-hidden">

  <!-- Nav -->
  <nav class="fixed w-full z-50 px-6 py-6 bg-[#0f0f0f]/9 worst backdrop-blur-md border-b border-white/5">
    <div class="container mx-auto flex justify-between items-center">
      <div class="flex items-center gap-3">
         <div class="w-10 h-10 bg-[#ff9f1c] rounded-lg flex items-center justify-center text-black font-black text-2xl shadow-[0_0_20px_rgba(255,159,28,0.4)]">B</div>
         <span class="text-xl font-black tracking-tighter text-white uppercase">BURGER<span class="text-[#ff9f1c]">JOINT</span></span>
      </div>
      
      <div class="hidden md:flex gap-10 text-[11px] font-bold uppercase tracking-[0.3em] text-gray-500">
        <a href="#menu" class="hover:text-[#ff9f1c] transition">The Burgers</a>
        <a href="#sides" class="hover:text-[#ff9f1c] transition">Sides & Beer</a>
        <a href="#location" class="hover:text-[#ff9f1c] transition">Locations</a>
      </div>
      
      <div class="flex gap-6 items-center">
         <button onclick="toggleBurgerModal()" class="text-[11px] font-bold uppercase tracking-[0.3em] text-gray-500 hover:text-[#ff9f1c]">Burger Club</button>
         <button class="bg-[#ff9f1c] text-black px-6 py-2.5 rounded-sm font-black text-[11px] tracking-widest uppercase hover:bg-white transition shadow-xl">
           Order Now
         </button>
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="min-h-screen relative flex items-center justify-center overflow-hidden pt-20">
    <div class="absolute inset-0">
       <div class="absolute top-20 left-[-5%] w-[40%] h-[40%] bg-[#ff9f1c]/10 rounded-full blur-[120px]"></div>
       <div class="absolute bottom-20 right-[-5%] w-[40%] h-[40%] bg-[#e71d36]/10 rounded-full blur-[120px]"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10 grid md:grid-cols-2 gap-16 items-center">
      <div class="space-y-8 text-center md:text-left">
        <div class="inline-flex items-center gap-2 bg-[#e71d36] text-white px-4 py-1.5 rounded-sm font-black text-[10px] tracking-widest uppercase shadow-lg shadow-[#e71d36]/20">
           100% Real Prime Beef
        </div>
        <h1 class="text-5xl md:text-8xl font-black leading-none tracking-tighter text-white mobile-title">
           육즙의 축제,<br><span class="text-[#ff9f1c]">폭발하는 미학.</span>
        </h1>
        <p class="text-gray-400 text-sm md:text-xl leading-relaxed max-w-md mx-auto md:mx-0 mobile-desc">
           매일 아침 매장에서 정성껏 갈아 만든 패티의 진한 풍미.<br>
           버거 조인트는 당신의 한 입을 위해 타협 없는 신선함과 투박하지만 본능적인 맛을 제안합니다.
        </p>
        <div class="pt-4 flex flex-col sm:flex-row gap-6 justify-center md:justify-start">
           <button class="px-12 py-5 bg-white text-black font-black text-[11px] tracking-widest uppercase hover:bg-[#ff9f1c] transition shadow-2xl">
              View Menu
           </button>
           <button class="px-12 py-5 border border-white/10 text-white font-black text-[11px] tracking-widest uppercase hover:bg-white/5 transition backdrop-blur-sm">
              Our Story
           </button>
        </div>
      </div>
      
      <div class="relative">
         <div class="absolute -inset-10 bg-[#ff9f1c]/5 rounded-full blur-[100px]"></div>
         <div class="relative z-10">
            <img src="https://images.unsplash.com/photo-1568901346375-23c9450c58cd?q=80&w=800" alt="육즙 버거" class="w-full drop-shadow-[0_50px_100px_rgba(255,159,28,0.2)] hover:scale-105 transition duration-1000">
         </div>
         <div class="absolute -bottom-10 -left-10 bg-[#1a1a1a] p-8 border border-white/5 rounded-2xl shadow-2xl hidden md:block rotate-[-5deg]">
            <p class="text-[10px] font-black text-[#ff9f1c] uppercase tracking-widest mb-2">Weekly Special</p>
            <p class="text-xl font-black text-white">THE VOLCANO</p>
            <p class="text-[9px] font-bold text-gray-500 uppercase tracking-widest mt-1">Extra Spicy Jalapeño</p>
         </div>
      </div>
    </div>
  </header>

  <!-- Login Modal -->
  <div id="burger-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/80 worst backdrop-blur-md">
    <div class="bg-[#0f0f0f] w-full max-w-sm p-12 shadow-2xl relative border border-white/5 rounded-lg">
      <button onclick="toggleBurgerModal()" class="absolute top-10 right-10 text-gray-500 hover:text-[#ff9f1c] transition text-2xl font-light">&times;</button>
      
      <div class="text-center mb-10">
        <h2 class="text-xl font-black text-white mb-2 tracking-[0.2em] uppercase">BURGER_CLUB</h2>
        <p class="text-[9px] text-[#ff9f1c] font-bold tracking-[0.3em] uppercase">Join the Meat Lover Society</p>
      </div>
      
      <div class="space-y-6">
        <input type="text" placeholder="PHONE NO OR EMAIL" class="w-full bg-white/5 border border-white/5 py-5 px-6 outline-none focus:border-[#ff9f1c] transition text-[11px] font-black tracking-widest text-white uppercase">
        <button class="w-full bg-[#ff9f1c] text-black py-5 rounded-sm text-[10px] tracking-[0.3em] font-black uppercase hover:bg-white transition shadow-lg">
           Access Membership
        </button>
        <div class="flex justify-center gap-10 pt-4">
           <a href="#" class="text-[9px] text-gray-500 tracking-[0.2em] font-bold uppercase hover:text-white transition">New Society</a>
           <a href="#" class="text-[9px] text-gray-500 tracking-[0.2em] font-bold uppercase hover:text-white transition">Account Help</a>
        </div>
      </div>
    </div>
  </div>

  <footer class="py-24 bg-[#0f0f0f] text-center px-6 border-t border-white/5">
     <div class="inline-flex items-center gap-6 mb-8">
        <div class="w-10 h-10 bg-[#ff9f1c] rounded-lg flex items-center justify-center text-black font-black text-2xl shadow-lg">B</div>
        <span class="font-black text-2xl text-white tracking-tighter uppercase">BURGER<span class="text-[#ff9f1c]">JOINT</span></span>
        <span class="w-[1px] h-6 bg-white/10"></span>
        <span class="text-[10px] font-bold text-gray-600 tracking-[0.4em] uppercase">Prime Beef Authentic</span>
     </div>
     <p class="text-[10px] text-white/5 tracking-[0.6em] uppercase px-6">© 2024 BURGER JOINT FOOD CO. ALL RIGHTS RESERVED.</p>
  </footer>

  <script>
    function toggleBurgerModal() {
      const modal = document.getElementById('burger-modal');
      modal.classList.toggle('hidden');
      modal.classList.toggle('flex');
    }
  </script>

</div>
