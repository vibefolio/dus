<div style="max-width: 600px; margin: 0 auto;">
  <div style="margin-bottom: var(--space-6);">
    <%= link_to "← 상세 정보로", admin_user_path(@user), style: "color: var(--color-gray-500); text-decoration: none; display: inline-flex; align-items: center; gap: var(--space-2); margin-bottom: var(--space-4);" %>
    <h1 style="font-size: var(--text-2xl); font-weight: 700;">회원 정보 수정</h1>
  </div>

  <div class="card">
    <%= form_with(model: [:admin, @user], local: true, class: "space-y-6") do |f| %>
      <% if @user.errors.any? %>
        <div style="background: var(--color-danger-light); color: var(--color-danger); padding: var(--space-4); border-radius: var(--radius-md); margin-bottom: var(--space-4);">
          <ul style="list-style: disc; padding-left: var(--space-4);">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: var(--space-4);">
        <%= f.label :email, "이메일", style: "display: block; font-size: var(--text-sm); font-weight: 500; margin-bottom: var(--space-1);" %>
        <%= f.email_field :email, class: "input", style: "width: 100%;" %>
      </div>

      <div style="margin-bottom: var(--space-6);">
        <%= f.label :name, "이름 (닉네임)", style: "display: block; font-size: var(--text-sm); font-weight: 500; margin-bottom: var(--space-1);" %>
        <%= f.text_field :name, class: "input", style: "width: 100%;", placeholder: "이름을 입력하세요" %>
      </div>

      <div style="display: flex; gap: var(--space-3); justify-content: flex-end;">
        <%= link_to "취소", admin_user_path(@user), class: "btn btn-outline" %>
        <%= f.submit "저장하기", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
